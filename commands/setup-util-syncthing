# syncthing-source-v1.23.7-rc.2.tar.gz
# syncthing-source-v1.23.7-rc.2.tar.gz.asc
# syncthing-windows-386-v1.23.7-rc.2.zip
# syncthing-windows-amd64-v1.23.7-rc.2.zip
# syncthing-windows-arm-v1.23.7-rc.2.zip
# syncthing-windows-arm64-v1.23.7-rc.2.zip

# @todo support bsd

function setup_util_syncthing() (
	source "$DOROTHY/sources/bash.bash"

	# =====================================
	# Preparation

	# https://docs.syncthing.net/users/autostart.html#linux
	# https://docs.syncthing.net/users/autostart.html#using-the-desktop-environment-kde-gnome-xfce-cinnamon

	# https://docs.syncthing.net/users/config.html
	# user: Set to require authentication.
	# password: Contains the bcrypt hash of the real password.
	# copyOwnershipFromParent: On Unix systems, tries to copy file/folder ownership from the parent directory (the directory itâ€™s located in). Requires running Syncthing as a privileged user, or granting it additional capabilities (e.g. CAP_CHOWN on Linux).

	__prepare_current_user
	local service_title='Syncthing'
	local service_ids=("syncthing@${CURRENT_USER}") # this is virtual
	local service_desktop_path='/usr/share/applications/syncthing-start.desktop'
	local service_desktop_autostart="$XDG_CONFIG_HOME/autostart/syncthing-start.desktop"
	local service_uninstall_paths=(
		# desktop
		"$service_desktop_path"
		"$service_desktop_autostart"

		# user config and data
		"$XDG_CONFIG_HOME/syncthing"                  # linux
		"$HOME/Library/Application Support/Syncthing" # macOS

		# app data
		"$XDG_DATA_HOME/syncthing"
	)

	# =====================================
	# Setup Utility

	# despite docs, no apk
	local options=(
		--cli='syncthing'
		--app='Syncthing'
		"$@"
		APT_KEY='https://syncthing.net/release-key.gpg'
		APT_REPO='deb [arch={ARCH} signed-by={KEY}] https://apt.syncthing.net/ syncthing stable'
		APT='syncthing'
		AUR='syncthing'
		BREW='syncthing'
		BSD='syncthing'
		CARGO='syncthing'
		CASK='homebrew/cask/syncthing'
		NIX='syncthing'
		PORT='syncthing'
		RPM='syncthing'
		SCOOP='syncthing'
		XBPS='syncthing'
		ZYPPER='syncthing'
	)
	setup-util "${options[@]}"
	# @todo: installing via download requires installing the service, and I currently don't know how to do that
	# function __get_github_asset_url {
	# 	local regexp
	# 	regexp="$(echo-escape-regexp -- "$1")" || return $?
	# 	github-download --dry --slug='syncthing/syncthing' --latest --asset-regexp="$regexp" | echo-first-line || return $?
	# }
	# function __add_download_option {
	# 	local url
	# 	url="$(__get_github_asset_url "$1")" || return $?
	# 	options+=(
	# 		DOWNLOAD="$url"
	# 		DOWNLOAD_ARCHIVE_GLOB="$2"
	# 	)
	# }
	# arch="$(__get_arch)"
	# if __is_macos; then
	# 	if [[ "$arch" = 'a64' ]]; then
	# 		__add_download_option '-macos-arm64-' 'syncthing' || :
	# 	else
	# 		__add_download_option '-macos-amd64-' 'syncthing' || :
	# 	fi
	# elif __is_windows; then
	# 	if [[ "$arch" = 'a64' ]]; then
	# 		__add_download_option '-windows-arm64-' '*/syncthing.exe' || :
	# 	elif [[ "$arch" = 'a32' ]]; then
	# 		__add_download_option '-windows-arm-' '*/syncthing.exe' || :
	# 	elif [[ "$arch" = 'x64' ]]; then
	# 		__add_download_option '-windows-amd64-' '*/syncthing.exe' || :
	# 	elif [[ "$arch" = 'x32' ]]; then
	# 		__add_download_option '-windows-386-' '*/syncthing.exe' || :
	# 	fi
	# else
	# 	if [[ "$arch" = 'a64' ]]; then
	# 		__add_download_option '-linux-arm64-' 'syncthing' || :
	# 	elif [[ "$arch" = 'a32' ]]; then
	# 		__add_download_option '-linux-arm-' 'syncthing' || :
	# 	elif [[ "$arch" = 'x64' ]]; then
	# 		__add_download_option '-linux-amd64-' 'syncthing' || :
	# 	elif [[ "$arch" = 'x32' ]]; then
	# 		__add_download_option '-linux-386-' 'syncthing' || :
	# 	elif [[ "$arch" = 'r64' ]]; then
	# 		__add_download_option '-linux-riscv64-' 'syncthing' || :
	# 	fi
	# fi

	# if missing, complete uninstall and exit
	if __command_missing -- syncthing && ! get-app --quiet -- 'Syncthing'; then
		# remove service
		service-helper --remove -- \
			"${service_ids[@]}"

		# remove paths
		fs-remove --confirm --elevate -- \
			"${service_uninstall_paths[@]}"

		# all done for uninstall
		return 0
	fi

	# if installed, configure service if supported
	if service-helper --supported; then
		if is-system --headful; then
			# headful, ask for autostart
			if [[ -f $service_desktop_path ]]; then
				if confirm --linger --positive --ppid=$$ -- "Autostart $service_title?"; then
					fs-link \
						--existing="$service_desktop_path" \
						--symlink="$service_desktop_autostart"
				else
					fs-remove --no-confirm --elevate -- \
						"$service_desktop_autostart"
				fi
			fi

		# verify the service was initialised
		elif ! service-helper --exists -- "${service_ids[@]}"; then
			__print_error "$service_title was installed, however the service was not."
			return 1
		fi
	fi
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	setup_util_syncthing "$@"
fi
