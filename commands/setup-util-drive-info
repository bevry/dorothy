#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

# https://ostechnix.com/how-to-find-hard-disk-drive-details-in-linux/

env NAME='S.M.A.R.T. Monitoring Tools' CLI=smartctl \
	APT='smartmontools' \
	BREW='smartmontools' \
	setup-util

# https://linux.die.net/man/8/sdparm
if is-linux; then
	env QUIET=yes CLI=sdparm OPTIONAL=yes \
		APT='sdparm' \
		setup-util

	env QUIET=yes CLI=hdparm OPTIONAL=yes \
		APT='hdparm' \
		DNF='hdparm' \
		PACMAN='hdparm' \
		ZYPPER='hdparm' \
		setup-util

	env QUIET=yes CLI=lshw OPTIONAL=yes \
		APT='lshw' \
		DNF='lshw' \
		PACMAN='lshw' \
		ZYPPER='lshw' \
		setup-util
fi
