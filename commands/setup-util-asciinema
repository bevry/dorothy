#!/usr/bin/env bash

# https://docs.asciinema.org/getting-started/
# https://github.com/asciinema/asciinema/releases

# asciinema-aarch64-apple-darwin
# asciinema-aarch64-unknown-linux-gnu
# asciinema-x86_64-apple-darwin
# asciinema-x86_64-unknown-linux-gnu
# asciinema-x86_64-unknown-linux-musl

function setup_util_asciinema() (
	source "$DOROTHY/sources/bash.bash"

	# improve performance for detectable utilities with conditional assets
	if setup-util --check --cli=asciinema "$@"; then
		return 0
	fi

	# setup
	local options=(
		--cli='asciinema'
		"$@"
		APT='asciinema'
		AUR='asciinema'
		BREW='asciinema'
		CARGO='asciinema'
		EOPKG='asciinema' # SOLUS
	)
	arch="$(get-arch)"
	function __get_github_asset_url {
		local regexp
		regexp="$(echo-escape-regexp -- "$1")$" || return $?
		github-download --dry --slug='asciinema/asciinema' --latest --asset-regexp="$regexp" | echo-first-line || return $?
	}
	function __add_download_option {
		local url
		url="$(__get_github_asset_url "$1")" || return $?
		options+=(DOWNLOAD="$url")
	}
	if is-mac; then
		if [[ $arch == 'a64' ]]; then
			__add_download_option 'aarch64-apple-darwin' || :
		elif [[ $arch == 'x64' ]]; then
			__add_download_option 'x86_64-apple-darwin' || :
		fi
	elif is-linux; then
		if [[ $arch == 'a64' ]]; then
			__add_download_option 'aarch64-unknown-linux-gnu' || :
		elif [[ $arch == 'x64' ]]; then
			__add_download_option 'x86_64-unknown-linux-musl' || :
		fi
	fi
	setup-util "${options[@]}"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	setup_util_asciinema "$@"
fi
