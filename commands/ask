#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

# Note
# if you want a newline type thing then do this
# echo 'question?'
# read -r resultvar

question="${1:?"USAGE: ask <QUESTION> [answer]"}"
answer="${2-}"

if is-string "$answer"; then
	echo "$2"
else
	read -r -p "$question " result
	echo "$result"
fi
