#!/usr/bin/env bash

# Diff/Merge Tool: meld
# http://meldmerge.org
# https://github.com/yousseb/meld
# https://yousseb.github.io/meld/

# https://repology.org/project/meld/versions

function setup_util_meld() (
	source "$DOROTHY/sources/bash.bash"

	# setup
	local options=(
		--name='Meld'
		--cli='meld'
		"$@"
		APK='meld'
		APT='meld'
		AUR='meld'
		CASK='meld'
		NIX='meld'
		RPM='meld'
		SCOOP='meld'
		WINGET='Meld'
		ZYPPER='meld'
	)
	setup-util "${options[@]}"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	setup_util_meld "$@"
fi
