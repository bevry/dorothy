#!/usr/bin/env bash
source "$DOROTHY/sources/essentials.sh"
source "$DOROTHY/sources/strict.bash"

# check
if ! is-snap; then
	exit 0
fi

# snap update
sudo snap refresh

# act
function act () {
	echo -e "\nInstalling $# snap packages..."
	env NAME="snap:$*" SNAP="$*" setup-util snap
}

# install snaps
if test -v 'SNAP_INSTALL'; then
	act "${SNAP_INSTALL[@]}"
fi
