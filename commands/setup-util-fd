#!/usr/bin/env bash

# https://github.com/sharkdp/fd
# find alternative

# https://github.com/sharkdp/fd/releases
# fd-musl_8.7.0_amd64.deb
# fd-musl_8.7.0_i686.deb
# fd-v8.7.0-aarch64-unknown-linux-gnu.tar.gz
# fd-v8.7.0-arm-unknown-linux-gnueabihf.tar.gz
# fd-v8.7.0-arm-unknown-linux-musleabihf.tar.gz
# fd-v8.7.0-i686-pc-windows-msvc.zip
# fd-v8.7.0-i686-unknown-linux-gnu.tar.gz
# fd-v8.7.0-i686-unknown-linux-musl.tar.gz
# fd-v8.7.0-x86_64-apple-darwin.tar.gz
# fd-v8.7.0-x86_64-pc-windows-gnu.zip
# fd-v8.7.0-x86_64-pc-windows-msvc.zip
# fd-v8.7.0-x86_64-unknown-linux-gnu.tar.gz
# fd-v8.7.0-x86_64-unknown-linux-musl.tar.gz
# fd_8.7.0_amd64.deb
# fd_8.7.0_arm64.deb
# fd_8.7.0_armhf.deb
# fd_8.7.0_i686.deb

# https://packages.debian.org/sid/amd64/fd-find/filelist
# /usr/bin/fdfind
# /usr/lib/cargo/bin/fd

function setup_util_fd() (
	source "$DOROTHY/sources/bash.bash"

	# improve performance for detectable utilities with conditional assets
	if setup-util --check --cli=fd "$@"; then
		return 0
	fi

	# despite docs, no fd
	local arch options=(
		--cli='fd'
		"$@"
		APT='fd-find'
		AUR='fd'
		BREW='fd'
		BSD='fd-find'
		CARGO='fd-find'
		CHOCO='fd'
		EMERGE='fd'
		NIX='fd'
		NODE='fd-find'
		PORT='fd'
		RPM='fd-find'
		SCOOP='fd'
		XBPS='fd'
		ZYPPER='fd'
	)
	function __get_github_asset_url {
		local regexp
		regexp="$(echo-escape-regexp -- "$1")" || return $?
		github-download --dry --slug='sharkdp/fd' --latest --asset-regexp="$regexp" | echo-first-line || return $?
	}
	function __add_download_option {
		local url
		url="$(__get_github_asset_url "$1")" || return $?
		options+=(
			DOWNLOAD="$url"
			DOWNLOAD_ARCHIVE_GLOB="*/$2"
		)
	}
	function __add_deb_option {
		local url
		url="$(__get_github_asset_url "$1")" || return $?
		options+=(
			DEB="$url"
		)
	}
	arch="$(__get_arch)"
	if __is_macos; then
		__add_download_option '-x86_64-apple-darwin.tar.gz' 'fd' || :
	elif __is_linux; then
		if [[ $arch == 'a64' ]]; then
			__add_deb_option '_arm64.deb' || :
			__add_download_option '-aarch64-unknown-linux-gnu.tar.gz' 'fd' || :
		elif [[ $arch == 'a32' ]]; then
			__add_deb_option '_armhf.deb' || :
			__add_download_option '-arm-unknown-linux-musl.tar.gz' 'fd' || :
		elif [[ $arch == 'x64' ]]; then
			__add_deb_option '_amd64.deb' || :
			__add_download_option '-x86_64-unknown-linux-musl.tar.gz' 'fd' || :
		elif [[ $arch == 'x32' ]]; then
			__add_deb_option '_i686.deb' || :
			__add_download_option '-i686-unknown-linux-musl.tar.gz' 'fd' || :
		fi
	elif is-windows; then
		if [[ $arch == 'x64' ]]; then
			__add_download_option '-x86_64-pc-windows-msvc.zip' 'fd.exe' || :
		elif [[ $arch == 'x32' ]]; then
			__add_download_option '-i686-pc-windows-msvc.zip' 'fd.exe' || :
		fi
	fi
	setup-util "${options[@]}"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	setup_util_fd "$@"
fi
