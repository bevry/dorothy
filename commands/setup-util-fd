#!/usr/bin/env bash

# https://github.com/sharkdp/fd
# find alternative

# https://github.com/sharkdp/fd/releases
# fd-musl_8.7.0_amd64.deb
# fd-musl_8.7.0_i686.deb
# fd-v8.7.0-aarch64-unknown-linux-gnu.tar.gz
# fd-v8.7.0-arm-unknown-linux-gnueabihf.tar.gz
# fd-v8.7.0-arm-unknown-linux-musleabihf.tar.gz
# fd-v8.7.0-i686-pc-windows-msvc.zip
# fd-v8.7.0-i686-unknown-linux-gnu.tar.gz
# fd-v8.7.0-i686-unknown-linux-musl.tar.gz
# fd-v8.7.0-x86_64-apple-darwin.tar.gz
# fd-v8.7.0-x86_64-pc-windows-gnu.zip
# fd-v8.7.0-x86_64-pc-windows-msvc.zip
# fd-v8.7.0-x86_64-unknown-linux-gnu.tar.gz
# fd-v8.7.0-x86_64-unknown-linux-musl.tar.gz
# fd_8.7.0_amd64.deb
# fd_8.7.0_arm64.deb
# fd_8.7.0_armhf.deb
# fd_8.7.0_i686.deb

# https://packages.debian.org/sid/amd64/fd-find/filelist
# /usr/bin/fdfind
# /usr/lib/cargo/bin/fd

function setup_util_fd() (
	source "$DOROTHY/sources/bash.bash"

	# improve performance
	if is-needle --quiet "$@" && ! is-needle --upgrade "$@" && ! is-needle --uninstall "$@" && command-exists fd; then
		return 0
	fi

	# despite docs, no fd
	local arch options=(
		--cli='fd'
		"$@"
		APT='fd-find' # UBUNTU
		AUR='fd'      # ARCH
		BREW='fd'
		BSD='fd-find'
		CARGO='fd-find'
		CHOCO='fd'
		EMERGE='fd' # GENTOO
		NIX='fd'
		NODE='fd-find'
		PORT='fd'
		RPM='fd-find' # FEDORA
		SCOOP='fd'
		XBPS='fd'   # VOID
		ZYPPER='fd' # SUSE
	)
	function get_github_asset_url {
		github-download \
			--dry \
			--slug='sharkdp/fd' \
			--release='latest' \
			--asset-filter="$(echo-escape-regex "$1")" | echo-first-line || :
	}
	function add_download_option {
		options+=(
			DOWNLOAD="$(get_github_asset_url "$1")"
			DOWNLOAD_UNZIP_FILTER='*/fd'
		)
	}
	function add_deb_option {
		options+=(
			DEB="$(get_github_asset_url "$1")"
		)
	}
	arch="$(get-arch)"
	if is-mac; then
		add_download_option '-x86_64-apple-darwin.tar.gz'
	elif is-wsl; then
		if test "$arch" = 'x64'; then
			add_download_option '-x86_64-pc-windows-msvc.zip'
		elif test "$arch" = 'x32'; then
			add_download_option '-i686-pc-windows-msvc.zip'
		fi
	else
		if test "$arch" = 'a64'; then
			add_deb_option '_arm64.deb'
			add_download_option '-aarch64-unknown-linux-gnu.tar.gz'
		elif test "$arch" = 'a32'; then
			add_deb_option '_armhf.deb'
			add_download_option '-arm-unknown-linux-musl.tar.gz'
		elif test "$arch" = 'x64'; then
			add_deb_option '_amd64.deb'
			add_download_option '-x86_64-unknown-linux-musl.tar.gz'
		elif test "$arch" = 'x32'; then
			add_deb_option '_i686.deb'
			add_download_option '-i686-unknown-linux-musl.tar.gz'
		fi
	fi
	setup-util "${options[@]}"
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	setup_util_fd "$@"
fi
