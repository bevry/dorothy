#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

echo
echo-color --oh2 --h2='Setup Vim' --ch2

if confirm-negative "Replace Vim config with fancy defaults?"; then
	eval-collapse --success='replaced' -- github-file-download 'amix/vimrc/master/vimrcs/basic.vim' \
		--destination="$HOME/.vimrc"
else
	echo 'skipped'
fi

echo-color --og2 --g2='Setup Vim' --cg2
