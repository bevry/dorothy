#!/usr/bin/env bash

function is_user() (
	source "$DOROTHY/sources/bash.bash"

	# =====================================
	# Arguments

	# help
	function help {
		__print_help "$@" <<-EOF || return $?
			ABOUT:
			Checks if a potential <user> is actually a user on the system.

			USAGE:
			is-user [...options] [--] ...<user>

			OPTIONS:
			--user=<user> | --users=<users> | ...<user>
			    Users to verify exist on this system.

			RETURNS:
			[0] if all <user>s are a user on the system.
			[1] if any <user>s are not a user on the system.

			COMPANION COMMANDS:
			[get-group-id]
			[get-profile]
			[get-user-id]
			[is-admin]
			[is-group]
			[is-owner]
			[is-password-usable]
			[is-root]
			[is-user-in-group]
			[is-user]
		EOF
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item option_users=()
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--user='* | '--users='*) __split --target={option_users} --append --delimiters=$'\n\t ,|' --no-zero-length -- "${item#*=}" ;;
		'--')
			option_users+=("$@")
			shift $#
			break
			;;
		'--'*) help 'An unrecognised flag was provided: ' --variable-value={item} ;;
		*) option_users+=("$item") ;;
		esac
	done

	# check
	if [[ ${#option_users[@]} -eq 0 ]]; then
		help 'No <user>s were provided to check.'
	fi

	# =====================================
	# Action

	# @todo add quiet and verbose so is consistent with the other user methods
	local user
	for user in "${option_users[@]}"; do
		id -u "$user" &>/dev/null
	done
	return 0
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	is_user "$@"
fi
