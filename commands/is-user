#!/usr/bin/env bash

function is_user() (
	source "$DOROTHY/sources/bash.bash"

	# =====================================
	# Arguments

	# help
	function help {
		cat <<-EOF >/dev/stderr
			ABOUT:
			Checks if a potential <user> is actually a user on the system.

			USAGE:
			is-user [...options] [--] <user>

			OPTIONS:
			<user> | --user=<user> | --user=<user>
			    Verify this <user> is registered as a user on the system.

			RETURNS:
			[0] if all <user>s were a user on the system.
			[1] if any <user>s were not a user on the system.
		EOF
		if [[ $# -ne 0 ]]; then
			echo-error "$@"
		fi
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item option_users=()
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--user='*) option_users+=("${item#*=}") ;;
		'--username='*) option_users+=("${item#*=}") ;;
		'--')
			option_users+=("$@")
			shift $#
			break
			;;
		'--'*) help "An unrecognised flag was provided: $item" ;;
		*) option_users+=("$item") ;;
		esac
	done

	# =====================================
	# Action

	local user
	for user in "${option_users[@]}"; do
		#   -u, --user     print only the effective user ID
		id --user "$user" &>/dev/null
	done
	return 0
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	is_user "$@"
fi
