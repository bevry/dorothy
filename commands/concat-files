#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

if test "$#" -eq 1; then
	outputFile="concat.$1"
	if is-file "$outputFile"; then
		rm "$outputFile"
	fi

	count=0
	find-files --extension="$1" | while read -r inputFile; do
		count=$((count + 1))
		echo -ne "\\r$count $inputFile"
		cat "$inputFile" >> "$outputFile"
	done
else
	echo "concatfiles <extension>"
fi
