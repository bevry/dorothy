#!/usr/bin/env bash

# https://repology.org/project/findutils/versions
# https://software.opensuse.org/package/findutils

function setup_util_find() (
	source "$DOROTHY/sources/bash.bash"

	# setup
	local options=(
		--cli='find'
		"$@"
		APK='findutils'
		APT='findutils'
		AUR='findutils'
		BREW='findutils'
		BSD='findutils'
		DNF='findutils'
		EMERGE='findutils'
		EOPKG='findutils'
		GUIX='findutils'
		NIX='findutils'
		PORT='findutils'
		XBPS='findutils'
		ZYPPER='findutils'
	)
	setup-util "${options[@]}"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	setup_util_find "$@"
fi
