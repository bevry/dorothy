#!/usr/bin/env bash

# https://repology.org/project/findutils/versions
# https://software.opensuse.org/package/findutils

function setup_util_find() (
	source "$DOROTHY/sources/bash.bash"

	# setup
	local options=(
		--cli='find'
		"$@"
		APK='findutils' # ALPINE
		APT='findutils' # UBUNTU
		AUR='findutils' # ARCH
		BREW='findutils'
		BSD='findutils'
		DNF='findutils'    # FEDORA
		EMERGE='findutils' # GENTOO
		EOPKG='findutils'  # SOLUS
		GUIX='findutils'
		NIX='findutils'
		PORT='findutils'
		XBPS='findutils'   # VOID
		ZYPPER='findutils' # SUSE
	)
	setup-util "${options[@]}"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	setup_util_find "$@"
fi
