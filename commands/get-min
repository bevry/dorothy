#!/usr/bin/env bash

function get_min() (
	source "$DOROTHY/sources/bash.bash"

	# =====================================
	# Arguments

	function help {
		cat <<-EOF >/dev/stderr
			ABOUT:
			Output the minimum of all the numbers.

			USAGE:
			get-min [--] ...<arg>
		EOF
		if test "$#" -ne 0; then
			echo-error "$@"
		fi
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item option_args=()
	while test "$#" -ne 0; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--')
			option_args+=("$@")
			shift "$#"
			break
			;;
		'--'*) help "An unrecognised flag was provided: $item" ;;
		*) option_args+=("$item") ;;
		esac
	done

	# =====================================
	# Action

	echo-lines -- "${option_args[@]}" | sort -n | echo-first-line
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	get_min "$@"
fi
