#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

function help {
	stderr cat <<-EOF
		USAGE:
		echo-paths-and-basenames ./*
		# ^ for each argument, outputs the absolute path, and then the basename
	EOF
}

function act {
	fs-absolute "$1"
	basename "$1"
}

source "$DOROTHY/sources/stdinargs.bash"
