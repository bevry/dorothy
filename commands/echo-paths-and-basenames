#!/usr/bin/env bash

function echo_paths_and_basenames_test() (
	source "$DOROTHY/sources/bash.bash"
	eval-tester --ignore-stderr --status=22 -- echo-paths-and-basenames --help
)

function echo_paths_and_basenames() (
	source "$DOROTHY/sources/stdinargs.bash"

	# =====================================
	# Arguments

	function help {
		__print_help "$@" <<-EOF || return $?
			ABOUT:
			For each argument, output the absolute path, as well as the basename.

			USAGE:
			\`echo-paths-and-basenames [...options] [--] ...<path>\`
			\`echo-lines ...<path> | echo-paths-and-basenames [...options]\`

			OPTIONS:
			$(__stdinargs__help_options --)

			EXAMPLES:
			\`\`\`
			echo-paths-and-basenames -- foo bar
			\`\`\`
			Outputs:
			\`\`\`
			$(pwd)/foo
			foo
			$(pwd)/bar
			bar
			\`\`\`
			Returns: [0]

			QUIRKS:
			Paths are not resolved, only made absolute.
		EOF
		return 22 # EINVAL 22 Invalid argument
	}

	# =====================================
	# Action

	function on_line {
		fs-path --absolute -- "$1"
		basename -- "$1"
	}

	stdinargs "$@"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	if [[ $* == '--test' ]]; then
		echo_paths_and_basenames_test
	else
		echo_paths_and_basenames "$@"
	fi
fi
