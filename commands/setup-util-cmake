#!/usr/bin/env bash

# https://packages.debian.org/sid/amd64/cmake/filelist
# /usr/bin/cmake
# /usr/bin/cpack
# /usr/bin/ctest

# https://repology.org/project/cmake/versions

function setup_util_cmake() (
	source "$DOROTHY/sources/bash.bash"

	local options=(
		--cli='cmake'
		"$@"
		APK='cmake'
		APT='cmake'
		AUR='cmake'
		BREW='cmake'
		EMERGE='dev-util/cmake'
		RPM='cmake'
		URPMI='cmake'
		XBPS='cmake'
		ZYPPER='cmake'
	)
	setup-util "${options[@]}"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	setup_util_cmake "$@"
fi
