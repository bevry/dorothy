#!/usr/bin/env bash

# https://repology.org/project/xz-utils/versions
# https://packages.debian.org/sid/amd64/xz-utils/filelist
# /usr/bin/lzmainfo
# /usr/bin/unxz
# /usr/bin/xz
# /usr/bin/xzcat
# /usr/bin/xzcmp
# /usr/bin/xzdiff
# /usr/bin/xzegrep
# /usr/bin/xzfgrep
# /usr/bin/xzgrep
# /usr/bin/xzless
# /usr/bin/xzmore

# https://repology.org/project/bzip2/versions
# https://packages.debian.org/sid/amd64/bzip2/filelist
# /bin/bunzip2
# /bin/bzcat
# /bin/bzcmp
# /bin/bzdiff
# /bin/bzegrep
# /bin/bzexe
# /bin/bzfgrep
# /bin/bzgrep
# /bin/bzip2
# /bin/bzip2recover
# /bin/bzless
# /bin/bzmore

# https://repology.org/project/tar/versions
# https://packages.debian.org/sid/amd64/tar/filelist
# /bin/tar
# /usr/sbin/rmt-tar
# /usr/sbin/tarcat

# https://repology.org/project/gzip/versions
# https://packages.debian.org/sid/amd64/gzip/filelist
# /bin/gunzip
# /bin/gzexe
# /bin/gzip
# /bin/uncompress
# /bin/zcat
# /bin/zcmp
# /bin/zdiff
# /bin/zegrep
# /bin/zfgrep
# /bin/zforce
# /bin/zgrep
# /bin/zless
# /bin/zmore
# /bin/znew

# https://repology.org/project/unzip/versions
# https://packages.debian.org/sid/amd64/unzip/filelist
# /usr/bin/funzip
# /usr/bin/unzip
# /usr/bin/unzipsfx
# /usr/bin/zipgrep
# /usr/bin/zipinfo

function setup_util_unziptar() (
	source "$DOROTHY/sources/bash.bash"

	# xz, do this first, as the others may depend on this
	local options=(
		--cli='xz'
		"$@"
		APK='xz'
		APT='xz-utils'
		AUR='xz'
		BREW='xz'
		EMERGE='app-arch/xz-utils'
		URPMI='xz'
		NIX='xz'
		RPM='xz'
		XBPS='xz'
		ZYPPER='xz'
	)
	setup-util "${options[@]}"

	# bzip2
	options=(
		--cli='bzip2'
		"$@"
		APK='bzip2'
		APT='bzip2'
		AUR='bzip2'
		BREW='bzip2'
		EMERGE='app-arch/bzip2'
		NIX='bzip2'
		RPM='bzip2'
		XBPS='bzip2'
		ZYPPER='bzip2'
	)
	setup-util "${options[@]}"

	# tar
	options=(
		--cli='tar'
		"$@"
		APK='tar'
		APT='tar'
		AUR='tar'
		BREW='gnu-tar'
		EMERGE='app-arch/tar'
		NIX='gnutar'
		RPM='tar'
		XBPS='tar'
		ZYPPER='tar'
	)
	setup-util "${options[@]}"

	# gzip
	options=(
		--cli='gzip'
		"$@"
		APK='gzip'
		APT='gzip'
		AUR='gzip'
		BREW='gzip'
		EMERGE='app-arch/gzip'
		NIX='gzip'
		RPM='gzip'
		XBPS='gzip'
		ZYPPER='gzip'
	)
	setup-util "${options[@]}"

	# unzip
	options=(
		--cli='unzip'
		"$@"
		APK='unzip'
		APT='unzip'
		AUR='unzip'
		BREW='unzip'
		EMERGE='app-arch/unzip'
		NIX='unzip'
		RPM='unzip'
		XBPS='unzip'
		ZYPPER='unzip'
	)
	setup-util "${options[@]}"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	setup_util_unziptar "$@"
fi
