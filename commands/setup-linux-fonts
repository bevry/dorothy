#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

# Prepare
f="$HOME/.fonts"
ft="$f/tmp"
mkdir -p "$f" "$ft"
cd "$ft" || exit 1

# Monoid
down https://cdn.rawgit.com/larsenwork/monoid/2db2d289f4e61010dd3f44e09918d9bb32fb96fd/Monoid.zip
unziptar Monoid.zip
mv ./*.ttf "$f"

# Source Code Pro
# http://askubuntu.com/a/193073/22776
# https://github.com/adobe-fonts/source-code-pro
github-release-file-download 'adobe-fonts/source-code-pro' 'OTF'
github-release-file-download 'adobe-fonts/source-code-pro' 'TTF'
mv ./*.otf "$f"
mv ./*.ttf "$f"

# Monaco
# https://github.com/showcases/fonts
# https://github.com/todylu/monaco.ttf
down https://github.com/todylu/monaco.ttf/raw/master/monaco.ttf
mv monaco.ttf "$f"

# Nerd Fonts
# https://www.nerdfonts.com/font-downloads
# https://github.com/ryanoasis/nerd-fonts/releases/tag/v2.1.0
github-release-file-download 'ryanoasis/nerd-fonts' 'FiraCode'
github-release-file-download 'ryanoasis/nerd-fonts' 'RobotoMono'
mv ./*.otf "$f"
mv ./*.ttf "$f"

# Refresh
fc-cache -f -v
cd "$HOME" || exit 1
rm -Rf "$ft"
