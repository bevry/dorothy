#!/usr/bin/env bash

function is_ubuntu() (
	source "$DOROTHY/sources/bash.bash"

	# =====================================
	# Arguments

	function help {
		__print_help "$@" <<-EOF || return $?
			ABOUT:
			Checks if the system is Ubuntu

			USAGE:
			\`is-ubuntu\`

			RETURNS:
			[0] if the system is Ubuntu
			[1] if the system is not Ubuntu
		EOF
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--'*) help 'An unrecognised flag was provided: ' --variable-value={item} ;;
		*) help 'An unrecognised argument was provided: ' --variable-value={item} ;;
		esac
	done

	# =====================================
	# Action

	# `uname -a` is `uname -mnrsv`
	# `uname -a` = `Linux 66114066c06b 6.11.0-1018-azure #18~24.04.1-Ubuntu SMP Sat Jun 28 04:46:03 UTC 2025 x86_64 x86_64 x86_64 GNU/Linux`
	# `ID=ubuntu`
	is-linux --id='ubuntu' || return $?
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	is_ubuntu "$@"
fi
