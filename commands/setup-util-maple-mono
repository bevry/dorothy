#!/usr/bin/env bash

# https://github.com/subframe7536/maple-font

function setup_util_maple_mono() (
	source "$DOROTHY/sources/bash.bash"

	# improve performance for detectable utilities with conditional assets
	if setup-util "$@" --check --font='MapleMono*'; then
		return 0
	fi

	# setup
	local options=(
		--name='Maple Mono'
		--font='MapleMono*'
		"$@"
		CASK='font-maple-mono'
	)
	function __get_github_asset_url {
		github-download --dry --slug='subframe7536/maple-font' --latest --asset-regexp='^MapleMono-Variable\.zip$' || return $?
	}
	function __add_download_option {
		local url
		url="$(__get_github_asset_url)" || return $?
		options+=(
			DOWNLOAD="$url"
			DOWNLOAD_ARCHIVE_GLOB='*.ttf'
		)
	}
	__add_download_option || :
	setup-util "${options[@]}"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	setup_util_maple_mono "$@"
fi
