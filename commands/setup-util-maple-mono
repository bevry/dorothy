#!/usr/bin/env bash

# https://github.com/subframe7536/maple-font

function setup_util_maple_mono() (
	source "$DOROTHY/sources/bash.bash"

	# improve performance for detectable utilities with conditional assets
	if setup-util "$@" --check --font='MapleMono*'; then
		return 0
	fi

	# setup
	function get_github_asset_url {
		github-download --dry --slug='subframe7536/maple-font' --latest --asset-regexp='^MapleMono-Variable\.zip$'
	}
	local options=(
		--name='Maple Mono'
		--font='MapleMono*'
		"$@"
		CASK='font-maple-mono'
		DOWNLOAD="$(get_github_asset_url)"
		DOWNLOAD_ARCHIVE_GLOB='*.ttf'
	)
	setup-util "${options[@]}"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	setup_util_maple_mono "$@"
fi
