#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"
source "$DOROTHY/sources/config.sh"
load_dorothy_config 'setup.bash'
# ^ provides: SETUP_UTILS

function act {
	echo -e "\nSetting up $# utilities..."
	for line in "$@"; do
		if test -n "$line"; then
			echo
			setup-util-"$line"
		fi
	done
}

if test -v 'SETUP_UTILS'; then
	act "${SETUP_UTILS[@]}"
fi
