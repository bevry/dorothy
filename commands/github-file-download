#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

# options
path="$(
	ask --required \
		--question='What is the repository slug and path?' \
		--default="${1-}"
)"
destination="$(get-flag-value destination -- "$@")" # custom destination

# prepare
url="$(github-file "$path")"

# act
down "$url" --destination="$destination"
