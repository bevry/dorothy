#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

# help
if is-help "$@"; then
	stderr echo-lines \
		'ABOUT:' \
		'Output a random number.' \
		'' \
		'USAGE:' \
		'rand'
	exit 22 # Invalid argument
fi

# act
if test -n "$RANDOM"; then
	echo "$RANDOM"
else
	env QUIET=y setup-util-fish
	fish -c random
fi
