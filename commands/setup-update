#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

# pre-requisites
setup-essentials

# Switch to backup DNS provider to avoid filtering issues on platforms that support it
ok select-dns backup

# Perform the upgdate
if is-mac; then
	setup-mac-update
elif is-linux; then
	setup-linux-update
fi

# Restore default DNS servers on platforms that support it
ok select-dns
