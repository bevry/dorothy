#!/usr/bin/env bash

# https://askubuntu.com/a/38782/22776

function setup_linux_safegraphics_test() (
	source "$DOROTHY/sources/bash.bash"
	eval-tester --ignore-stderr --status=22 -- setup-linux-safegraphics --help
)

function setup_linux_safegraphics() (
	source "$DOROTHY/sources/bash.bash"

	# =====================================
	# Arguments

	function __help {
		__print_help "$@" <<-EOF || return $?
			ABOUT:
			Configure Linux with Safe Graphics.
			Useful for getting Ubuntu installed on a 2010 iMac.

			USAGE:
			setup-linux-safegraphics
		EOF
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') __help || return $? ;;
		'--'*) __help 'An unrecognised flag was provided: ' --variable-value={item} || return $? ;;
		*) __help 'An unrecognised argument was provided: ' --variable-value={item} || return $? ;;
		esac
	done

	# assert compatibility
	if ! __is_linux; then
		__print_style --stderr --notice="[$0] is only intended to be run on Linux systems, skipping." || return $?
		return 0
	fi

	# =====================================
	# Action

	__print_style --h1='Update GRUB with Safe Graphics' || return $?

	config-helper --elevate --file='/etc/default/grub' -- \
		--field='GRUB_CMDLINE_LINUX_DEFAULT' --no-quote --value='"quiet splash nomodeset"' || return $?

	grub-helper || return $?

	__print_style --g1='Update GRUB with Safe Graphics' || return $?
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	if [[ $* == '--test' ]]; then
		setup_linux_safegraphics_test
	else
		setup_linux_safegraphics "$@"
	fi
fi
