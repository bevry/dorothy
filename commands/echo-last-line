#!/usr/bin/env bash

function echo_last_line_test() (
	source "$DOROTHY/sources/bash.bash"
	eval-tester --ignore-stderr --status=22 -- echo-last-line --help
)

function echo_last_line() (
	source "$DOROTHY/sources/bash.bash"

	# =====================================
	# Arguments

	function help {
		__print_help "$@" <<-EOF || return $?
			ABOUT:
			Output the last line of STDIN. Output includes a trailing newline.

			USAGE:
			\`<command> | echo-last-line\`

			EXAMPLES:
			\`\`\`
			printf '%s\n' a b | echo-last-line
			\`\`\`
			Outputs: \`b\`
			Returns: [0]
		EOF
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--stdin') ;; # trim stdinargs convention
		'--'*) help 'An unrecognised flag was provided: ' --variable-value={item} ;;
		*) help 'An unrecognised argument was provided: ' --variable-value={item} ;;
		esac
	done

	# =====================================
	# Action

	tail -1
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	if [[ $* == '--test' ]]; then
		echo_last_line_test
	else
		echo_last_line "$@"
	fi
fi
