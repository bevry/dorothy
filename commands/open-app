#!/usr/bin/env bash

function open_app() (
	source "$DOROTHY/sources/bash.bash"

	# =====================================
	# Arguments

	function help {
		cat <<-EOF >&2
			ABOUT:
			Open the specified GUI application.

			QUIRKS:
			Uses [get-app] to determine the application path to open.

			USAGE:
			open-app <app> [-- [...args]]

			OPTIONS:
			<app>
			    Application name or path.

			-- [...args]
			    Arguments to pass to the application when opening it.
		EOF
		if [[ $# -ne 0 ]]; then
			__print_error "$@"
		fi
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item option_name='' option_args=()
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--name='*) option_name="${item#*=}" ;;
		'--')
			option_args+=("$@")
			shift "$#"
			break
			;;
		'--'*) help "An unrecognised flag was provided: $item" ;;
		*)
			if [[ -z $option_name ]]; then
				option_name="$item"
			else
				help "An unrecognised argument was provided: $item"
			fi
			;;
		esac
	done

	# =====================================
	# Act

	local app
	app="$(get-app -- "$option_name")"
	if [[ -n $app ]]; then
		open -a "$app" "${option_args[@]}"
	else
		echo-style --stderr --error="Unable to find the application: $option_name"
		return 2 # ENOENT 2 No such file or directory
	fi
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	open_app "$@"
fi
