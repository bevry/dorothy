#!/usr/bin/env bash

# https://github.com/YS-L/csvlens?tab=readme-ov-file

# https://github.com/YS-L/csvlens/releases
# csvlens-aarch64-apple-darwin.tar.xz
# csvlens-aarch64-pc-windows-msvc.zip
# csvlens-aarch64-unknown-linux-gnu.tar.xz
# csvlens-x86_64-apple-darwin.tar.xz
# csvlens-x86_64-pc-windows-msvc.zip

# https://repology.org/project/csvlens/versions

function setup_util_csvlens() (
	source "$DOROTHY/sources/bash.bash"

	# improve performance for detectable utilities with conditional assets
	if setup-util --check --cli=csvlens "$@"; then
		return 0
	fi

	# despite docs, no apk
	local arch options=(
		--cli='csvlens'
		"$@"
		AUR='csvlens'
		BREW='csvlens'
		BSD='csvlens'
		CARGO='csvlens'
		PKG='csvlens'
		PKGADD='csvlens'
		PKGIN='csvlens'
		SCOOP='csvlens'
		WINGET='csvlens'
	)
	function __get_github_asset_url {
		local suffix="$1" regexp
		regexp="$(echo-escape-regexp -- "$suffix")$" || return $?
		github-download --dry --slug='YS-L/csvlens' --latest --asset-regexp="$regexp" | echo-first-line || return $?
	}
	function __add_download_option {
		local suffix="$1" file="$2" url
		url="$(__get_github_asset_url "$suffix")" || return $?
		options+=(
			DOWNLOAD="$url"
			DOWNLOAD_ARCHIVE_GLOB="*/$file"
		)
	}
	arch="$(__get_arch)"
	if __is_macos; then
		if [[ $arch == 'a64' ]]; then
			__add_download_option '-aarch64-apple-darwin.tar.xz' 'csvlens' || :
		else
			__add_download_option '-x86_64-apple-darwin.tar.xz' 'csvlens' || :
		fi
	elif __is_linux; then
		if [[ $arch == 'x64' ]]; then
			__add_download_option '-aarch64-unknown-linux-gnu.tar.xz' 'csvlens' || :
		fi
	elif is-system --windows; then
		if [[ $arch == 'a64' ]]; then
			__add_download_option '-aarch64-pc-windows-msvc.zip' 'csvlens.exe' || :
		elif [[ $arch == 'x64' ]]; then
			__add_download_option '-x86_64-pc-windows-msvc.zip' 'csvlens.exe' || :
		fi
	fi
	setup-util "${options[@]}"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	setup_util_csvlens "$@"
fi
