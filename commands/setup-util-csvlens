#!/usr/bin/env bash

# https://github.com/YS-L/csvlens?tab=readme-ov-file

# https://github.com/YS-L/csvlens/releases
# csvlens-aarch64-apple-darwin.tar.xz
# csvlens-x86_64-apple-darwin.tar.xz
# csvlens-x86_64-pc-windows-msvc.zip
# csvlens-x86_64-unknown-linux-gnu.tar.xz
# csvlens-x86_64-unknown-linux-musl.tar.xz

# https://repology.org/project/csvlens/versions

function setup_util_csvlens() (
	source "$DOROTHY/sources/bash.bash"

	# improve performance for detectable utilities with conditional assets
	if setup-util --check --cli=csvlens "$@"; then
		return 0
	fi

	# despite docs, no apk
	local arch options=(
		--cli='csvlens'
		"$@"
		AUR='csvlens'
		BREW='csvlens'
		BSD='csvlens'
		CARGO='csvlens'
		PKG='csvlens'
		PKGADD='csvlens'
		PKGIN='csvlens'
		WINGET='csvlens'
	)
	function get_github_asset_url {
		github-download \
			--dry \
			--slug='YS-L/csvlens' \
			--latest \
			--asset-regexp="$(echo-escape-regexp -- "$1")$" | echo-first-line || :
	}
	function add_download_option {
		options+=(
			DOWNLOAD="$(get_github_asset_url "$1")"
			DOWNLOAD_ARCHIVE_GLOB="*/$2"
		)
	}
	arch="$(get-arch)"
	if is-mac; then
		if [[ $arch == 'a64' ]]; then
			add_download_option '-aarch64-apple-darwin.tar.xz' 'csvlens'
		else
			add_download_option '-x86_64-apple-darwin.tar.xz' 'csvlens'
		fi
	elif is-linux; then
		if [[ $arch == 'x64' ]]; then
			add_deb_option '_amd64.deb'
			add_download_option '-x86_64-unknown-linux-musl.tar.xz' 'csvlens'
		fi
	elif is-windows; then
		if [[ $arch == 'x64' ]]; then
			add_download_option '-x86_64-pc-windows-msvc.zip' 'csvlens.exe'
		fi
	fi
	setup-util "${options[@]}"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	setup_util_csvlens "$@"
fi
