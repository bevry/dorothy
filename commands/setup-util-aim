#!/usr/bin/env bash

# https://github.com/mihaigalos/aim
# curl alternative

# https://github.com/mihaigalos/aim/releases
# aim-1.8.6-aarch64-unknown-linux-gnu.tar.gz
# aim-1.8.6-aarch64-unknown-linux-musl.tar.gz
# aim-1.8.6-arm-unknown-linux-gnueabihf.tar.gz
# aim-1.8.6-i686-unknown-linux-gnu.tar.gz
# aim-1.8.6-x86_64-apple-darwin.tar.gz
# aim-1.8.6-x86_64-unknown-linux-gnu.tar.gz
# aim-1.8.6-x86_64-unknown-linux-musl.tar.gz
# aim-musl_1.8.6_amd64.deb
# aim-musl_1.8.6_arm64.deb
# aim_1.8.6_amd64.deb
# aim_1.8.6_arm64.deb
# aim_1.8.6_armhf.deb
# aim_1.8.6_i386.deb

# Maintained: Last release: 2025-03-15
# https://github.com/mihaigalos/aim
# aim [OPTIONS] [INPUT] [OUTPUT] [SHA256]
# -s, --silent                             Silent or quiet mode. Don't show progress meter or error messages.

function setup_util_aim() (
	source "$DOROTHY/sources/bash.bash"

	# improve performance for detectable utilities with conditional assets
	if setup-util --check --cli=aim "$@"; then
		return 0
	fi

	# despite docs, no apk
	local arch options=(
		--cli='aim'
		"$@"
		CARGO='aim'
	)
	function __get_github_asset_url {
		local suffix="$1" regexp
		regexp="$(echo-escape-regexp -- "$suffix")$" || return $?
		github-download --dry --slug='mihaigalos/aim' --latest --asset-regexp="$regexp" | echo-first-line || return $?
	}
	function __add_download_option {
		local suffix="$1" url
		url="$(__get_github_asset_url "$suffix")" || return $?
		options+=(
			DOWNLOAD="$url"
			DOWNLOAD_ARCHIVE_GLOB="$2"
		)
	}
	function __add_deb_option {
		local suffix="$1" url
		url="$(__get_github_asset_url "$suffix")" || return $?
		options+=(DEB="$url")
	}
	arch="$(__get_arch)"
	if __is_macos; then
		__add_download_option '-x86_64-apple-darwin.tar.gz' 'aim' || :
	elif __is_linux; then
		if [[ $arch == 'a64' ]]; then
			__add_deb_option '_arm64.deb' || :
			__add_download_option '-aarch64-unknown-linux-musl.tar.gz' 'aim' || :
		elif [[ $arch == 'a32' ]]; then
			__add_deb_option '_armhf.deb' || :
			__add_download_option '-arm-unknown-linux-gnueabihf.tar.gz' 'aim' || :
		elif [[ $arch == 'x64' ]]; then
			__add_deb_option '_amd64.deb' || :
			__add_download_option '-x86_64-unknown-linux-musl.tar.gz' 'aim' || :
		elif [[ $arch == 'x32' ]]; then
			__add_deb_option '_i686.deb' || :
			__add_download_option '-i686-unknown-linux-gnu.tar.gz' 'aim' || :
		fi
	fi
	setup-util "${options[@]}"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	setup_util_aim "$@"
fi
