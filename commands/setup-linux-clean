#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

echo
echo-color --oh1 --h1='Linux Cleanup' --ch1

if is-apt; then
	echo-color --oh2 --h2='APT Cleanup' --ch2
	sudo apt-get autoremove -y --purge
	sudo apt-get autoclean -y
	sudo apt-get clean -y
	echo-color --og2 --g2='APT Cleanup' --cg2
fi

echo-color --og1 --g1='Linux Cleanup' --cg1
