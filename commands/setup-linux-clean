#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

echo-segment --h1='Linux Cleanup'

if is-apt; then
	echo-segment --h2='APT Cleanup'
	sudo apt-get autoremove -y --purge
	sudo apt-get autoclean -y
	sudo apt-get clean -y
	echo-segment --g2='APT Cleanup'
fi

echo-segment --g1='Linux Cleanup'
