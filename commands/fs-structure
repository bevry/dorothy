#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

path="$(ask --question="Enter the path to output the structure of." --default="${1-}" --required)"

if test -d "$path"; then
	cd "$path" || exit 1
	ls -la --time-style=+''
else
	cd "$(dirname "$path")" || exit 1
	ls -la --time-style=+'' "$(basename "$path")"
fi
