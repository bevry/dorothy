#!/usr/bin/env bash

function is_admin() (
	source "$DOROTHY/sources/bash.bash"

	# =====================================
	# Arguments

	# help
	function help {
		cat <<-EOF >&2
			ABOUT:
			Checks if the current user, or specified users, are an administrator.

			USAGE:
			is-admin [...options] [--] ...<user>

			OPTIONS:
			--user=<user> | --users=<users> | ...<user>
			    Users to check are an administrator.
			--login
			    If enabled, the login user will be used as the <user>, if none were provided.
			    Otherwise, the current user will be used as the <user>, if none were provided.

			RETURNS:
			[0] if all <user>s are an administrator.
			[1] if any <user>s are not an administrator.

			COMPANION COMMANDS:
			[get-group-id]
			[get-profile]
			[get-user-id]
			[is-admin]
			[is-group]
			[is-owner]
			[is-password-usable]
			[is-root]
			[is-user-in-group]
			[is-user]
		EOF
		if [[ $# -ne 0 ]]; then
			__print_error "$@"
		fi
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item option_users=() option_login=''
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--no-login'* | '--login'*) __flag --source={item} --target={option_login} --affirmative ;;
		'--user='* | '--users='*) __split --target={option_users} --append --delimiters=$'\n\t ,|' --no-zero-length -- "${item#*=}" ;;
		'--')
			option_users+=("$@")
			shift $#
			break
			;;
		'--'*) help 'An unrecognised flag was provided: ' --variable-value={item} ;;
		*) option_users+=("$item") ;;
		esac
	done

	# verify
	if [[ ${#option_users[@]} -eq 0 ]]; then
		if [[ $option_login == 'yes' ]]; then
			__prepare_login_user
			option_users+=("$LOGIN_USER")
		else
			__prepare_current_user # could prompt
			option_users+=("$CURRENT_USER")
		fi
	fi

	# =====================================
	# Action

	# group
	if is-mac; then
		group='admin'
	else
		group='sudo'
	fi

	# act
	if is-user-in-group --group="$group" --users="${option_users[*]}"; then
		return 0
	else
		return 1
	fi
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	is_admin "$@"
fi
