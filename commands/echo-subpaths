#!/usr/bin/env bash

function echo_subpaths() (
	source "$DOROTHY/sources/stdinargs.bash"

	# =====================================
	# Arguments

	function help {
		__print_help "$@" <<-EOF || return $?
			ABOUT:
			For each file, output its absolute path.
			For each directory, output the absolute paths for each of its direct children.

			USAGE:
			\`echo-subpaths [...options] [--] ...<input>\`
			\`echo-lines ...<input> | echo-subpaths [...options]\`

			OPTIONS:
			<input>
			    A path to a file or directory.

			--[no-]deep
			    If enabled, all descendants of the <input> will be output, not just the immediate children.

			$(__stdinargs__help_options --)

			EXAMPLE:
			\`echo-subpaths -- ..\`
			\`echo-subpaths -- .\`
			\`echo-subpaths -- ./*\`
		EOF
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item option_deep='no' option_args=()
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--no-deep'* | '--deep'*) __flag --source={item} --target={option_deep} --affirmative --coerce ;;
		# forward to stdinargs, however support mixing and matching of our options, with stdinargs options
		'--')
			option_args+=("$item" "$@")
			shift $#
			break
			;;
		'--'*) option_args+=("$item") ;;
		*) option_args+=("$item") ;;
		esac
	done

	# =====================================
	# Dependencies

	__command_required -- 'find' || return $?

	# =====================================
	# Action

	function on_line {
		local path="$1"
		path="$(fs-path --absolute -- "$1")"
		if [[ -d $1 ]]; then
			if [[ $option_deep == 'yes' ]]; then
				# output all descendants
				# __print_lines "$path/"** <-- doesn't follow symlinks
				find -Lsd "$path"
			else
				# output only immediate children
				__print_lines "$path/"*
			fi
		else
			__print_lines "$path"
		fi
	}

	stdinargs "${option_args[@]}"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	echo_subpaths "$@"
fi
