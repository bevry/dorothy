#!/usr/bin/env bash

# https://repology.org/project/tree/versions <-- missing

function setup_util_tree() (
	source "$DOROTHY/sources/bash.bash"

	# setup
	local options=(
		--cli='tree'
		"$@"
		APK='tree'
		APT='tree'
	)
	setup-util "${options[@]}"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	setup_util_tree "$@"
fi
