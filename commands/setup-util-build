#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

env CLI=clang BREW=clang APT=clang PACMAN=clang setup-util

env CLI=cmake BREW=cmake APT=cmake PACMAN=cmake setup-util

if command-missing pacman; then
	# llvm-gcc is bundled with arch it seems, as it is not exposed by the cli yet pacman says it is installed
	env CLI=llvm-gcc BREW=llvm APT=llvm PACMAN=llvm setup-util
fi

env CLI=pkg-config BREW=pkg-config APT=pkg-config PACMAN=pkg-config setup-util