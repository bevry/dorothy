#!/usr/bin/env bash

function eval_no_color() (
	source "$DOROTHY/sources/bash.bash"

	# =====================================
	# Arguments

	function help {
		cat <<-EOF >/dev/stderr
			ABOUT:
			Execute the command avoiding outputting color, and stripping any color that was output.

			USAGE:
			eval-no-color [--] ...<command>
		EOF
		if test "$#" -ne 0; then
			echo-error "$@"
		fi
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item option_cmd=()
	while test "$#" -ne 0; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--')
			option_cmd+=("$@")
			shift $#
			break
			;;
		'--'*) help "An unrecognised flag was provided: $item" ;;
		*)
			option_cmd+=("$item" "$@")
			shift $#
			break
			;;
		esac
	done

	# =====================================
	# Action

	# note: piping to echo-trim-colors doesn't seem to work, hence why we use sed directly
	(env NO_COLOR=yes "${option_cmd[@]}") > >(sed 's/\x1b\[[0-9;]*m//g') 2> >(sed 's/\x1b\[[0-9;]*m//g' >&2)
	# ^ maintains stdout, stderr, and exit code
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	eval_no_color "$@"
fi
