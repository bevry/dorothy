# https://repology.org/project/llvm/versions

function setup_util_llvm() (
	source "$DOROTHY/sources/bash.bash"

	local options=(
		--cli='llvm'
		"$@"
		APK='llvm'
		APT='llvm'
		AUR='llvm'
		BREW='llvm'
		EMERGE='sys-devel/llvm'
		RPM='llvm'
		URPMI='llvm'
		XBPS='llvm'
		ZYPPER='llvm'
	)
	setup-util "${options[@]}"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	setup_util_llvm "$@"
fi
