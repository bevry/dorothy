#!/usr/bin/env bash

function echo_escape_spaces_test() (
	source "$DOROTHY/sources/bash.bash"
	eval-tester --ignore-stderr --status=22 -- echo-escape-spaces --help
)

function echo_escape_spaces() (
	source "$DOROTHY/sources/stdinargs.bash"

	# =====================================
	# Arguments

	function help {
		__print_help "$@" <<-EOF || return $?
			ABOUT:
			For each <input>, escape its spaces by prepending backslashes.

			USAGE:
			\`echo-escape-spaces [...options] [--] ...<input>\`
			\`echo-lines ...<input> | echo-escape-spaces [...options]\`

			OPTIONS:
			$(__stdinargs__help_options --)

			EXAMPLES:
			\`echo-escape-spaces -- 'Hello world.'\`
			Outputs: \`Hello\\ world.\`
			Returns: [0]

			\`echo-lines -- 'Hello world.' | echo-escape-spaces --stdin\`
			Outputs: \`Hello\\ world.\`
			Returns: [0]
		EOF
		return 22 # EINVAL 22 Invalid argument
	}

	# =====================================
	# Action

	function __on_whole {
		local value="$1"
		value="${value// /\\ }"
		__print_piece "$value" || return $?
	}

	stdinargs "$@"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	if [[ $* == '--test' ]]; then
		echo_escape_spaces_test
	else
		echo_escape_spaces "$@"
	fi
fi
