#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

# prepare
needle="${1-}"
haystack="${2-}"
if test -z "$needle" -o "$#" -le 1; then
	stderr cat <<-EOF
		USAGE:
		get-last-prefix <needle> <haystack>

		EXAMPLES:
		get-last-prefix = a=b=c  # a=b
		get-last-prefix = sup    # sup
	EOF
	exit 22 # Invalid argument
fi

# check if empty
if test -z "$haystack"; then
	exit 0
fi

# do the magic
echo "${haystack%"$needle"*}"
