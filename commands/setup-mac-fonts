#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

# log
echo-segment --h1='Install Fonts'

# install dependencies, fixes:
# Error: Download failed on Cask 'font-cantarell' with message: Failure while executing; `svn checkout https://github.com/google/fonts/trunk/ofl/cantarell /Users/balupton/Library/Caches/Homebrew/Cask/font-cantarell--svn --quiet --trust-server-cert --non-interactive` exited with 1. Here's the output:
# You must: brew install svn
eval-collapse -- brew install svn || :

# install fonts
fonts=(
	font-cantarell
	font-cascadia-code
	font-fira-code
	font-fira-code-nerd-font
	font-fira-mono
	font-fira-mono-nerd-font
	font-hack
	font-hasklig
	font-ibm-plex
	font-inconsolata-go-nerd-font
	font-inter
	font-jetbrains-mono
	font-jetbrains-mono-nerd-font
	font-lato
	font-maven-pro
	font-monoid
	font-montserrat
	font-open-sans
	font-oxygen
	font-oxygen-mono
	font-roboto
	font-roboto-mono
	font-source-code-pro
	font-ubuntu
)
# `reinstall ...` / `install ... || upgrade ...` is no longer necessary,
# install does upgrade if it is already installed:
# https://github.com/Homebrew/brew/pull/11525
eval-collapse --success="Installed ${#fonts[@]} fonts" -- brew install --quiet --casks "${fonts[@]}" || :

# done
echo-segment --g1='Install Fonts'
