#!/usr/bin/env bash

# https://github.com/ducaale/xh?tab=readme-ov-file#installation
# curl/httpie alternative

# https://github.com/ducaale/xh/releases
# xh-v0.24.0-aarch64-apple-darwin.tar.gz
# xh-v0.24.0-aarch64-unknown-linux-musl.tar.gz
# xh-v0.24.0-arm-unknown-linux-gnueabihf.tar.gz
# xh-v0.24.0-x86_64-apple-darwin.tar.gz
# xh-v0.24.0-x86_64-pc-windows-msvc.zip
# xh-v0.24.0-x86_64-unknown-linux-musl.tar.gz
# xh_0.24.0_amd64.deb

# https://repology.org/project/xh/versions

# Maintained. Last release: 2025-02-18
# https://github.com/ducaale/xh
# xh [OPTIONS] <[METHOD] URL> [REQUEST_ITEM]...
# --pretty <STYLE>                       Controls output processing [possible values: all, colors, format, none]
# --format-options <FORMAT_OPTIONS>      Set output formatting options
# -s, --style <THEME>                    Output coloring style [possible values: auto, solarized, monokai, fruity]
# -p, --print <FORMAT>                   String specifying what the output should contain
# -h, --headers                          Print only the response headers. Shortcut for --print=h
# -v, --verbose...                       Print the whole request as well as the response
# -q, --quiet...                         Do not print to stdout or stderr
# -o, --output <FILE>                    Save output to FILE instead of stdout
# -d, --download                         Download the body to a file instead of printing it
# -c, --continue                         Resume an interrupted download. Requires --download and --output
# -A, --auth-type <AUTH_TYPE>            Specify the auth mechanism [possible values: basic, bearer, digest]
# -a, --auth <USER[:PASS] | TOKEN>       Authenticate as USER with PASS (-A basic|digest) or with TOKEN (-A bearer)
# --check-status                         (default) Exit with an error status code if the server replies with an error
# -F, --follow                           Do follow redirects
# --max-redirects <NUM>                  Number of redirects to follow. Only respected if --follow is used
# --timeout <SEC>                        Connection timeout of the request
# -I, --ignore-stdin                     Do not attempt to read stdin

function setup_util_xh() (
	source "$DOROTHY/sources/bash.bash"

	# improve performance for detectable utilities with conditional assets
	if setup-util --check --cli=xh "$@"; then
		return 0
	fi

	# despite docs, no apk
	local arch options=(
		--cli='xh'
		"$@"
		APT_REPO='deb [arch={ARCH} signed-by={KEY}] https://apt.cli.rs/ stable main'
		APT='xh'
		AUR='xh'
		PACMAN='xh'
		PKG='xh'
		PKGIN='xh'
		NIX='nixpkgs.xh'
		SCOOP='xh'
		CHOCO='xh'
		WINGET='xh'
	)
	function __get_github_asset_url {
		local regexp
		regexp="$(echo-escape-regexp -- "$1")$" || return $?
		github-download --dry --slug='ducaale/xh' --latest --asset-regexp="$regexp" | echo-first-line || return $?
	}
	function __add_download_option {
		local url
		url="$(__get_github_asset_url "$1")" || return $?
		options+=(
			DOWNLOAD="$url"
			DOWNLOAD_ARCHIVE_GLOB="*/$2"
		)
	}
	function __add_deb_option {
		local url
		url="$(__get_github_asset_url "$1")" || return $?
		options+=(
			DEB="$url"
		)
	}
	arch="$(__get_arch)"
	if __is_macos; then
		if [[ $arch == 'a64' ]]; then
			__add_download_option '-aarch64-apple-darwin.tar.gz' 'xh' || :
		elif [[ $arch == 'x64' ]]; then
			__add_download_option '-x86_64-apple-darwin.tar.gz' 'xh' || :
		fi
	elif __is_linux; then
		if [[ $arch == 'a64' ]]; then
			__add_download_option '-aarch64-unknown-linux-musl.tar.gz' 'xh' || :
		elif [[ $arch == 'a32' ]]; then
			__add_download_option '-arm-unknown-linux-gnueabihf.tar.gz' 'xh' || :
		elif [[ $arch == 'x64' ]]; then
			__add_deb_option '_amd64.deb' || :
			__add_download_option '-x86_64-unknown-linux-musl.tar.gz' 'xh' || :
		fi
	elif is-system --windows; then
		if [[ $arch == 'x64' ]]; then
			__add_download_option '-x86_64-pc-windows-msvc.zip' 'xh.exe' || :
		fi
	fi
	setup-util "${options[@]}"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	setup_util_xh "$@"
fi
