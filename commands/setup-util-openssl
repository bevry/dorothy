#!/usr/bin/env bash

# https://packages.debian.org/sid/amd64/libssl-dev/filelist (no bins...)
# https://repology.org/project/openssl/versions

function setup_util_openssl() (
	source "$DOROTHY/sources/bash.bash"

	local options=(
		--name='openssl/libssl'
		"$@"
		APK='openssl'
		APT='libssl-dev'
		AUR='openssl'
		BREW='openssl'
		EMERGE='dev-libs/openssl'
		RPM='openssl-devel'
		URPMI='openssl'
		XBPS='openssl'
		ZYPPER='openssl'
	)
	setup-util "${options[@]}"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	setup_util_openssl "$@"
fi
