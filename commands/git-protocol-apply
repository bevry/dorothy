#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

remote="$("$DOROTHY/commands/ask-mandatory" 'What remote to configure?' "${1:-"origin"}")"
protocol="$("$DOROTHY/commands/git-protocol-ask" "${2-}")"

ourl="$("$DOROTHY/commands/git-remote-url" "$remote")"
url="$("$DOROTHY/commands/git-protocol-format" "$ourl" "$protocol")"
"$DOROTHY/commands/git-remote-apply" "$remote" "$url"

git remote -v
