#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

# USAGE: git-protocol-apply [remote=origin] [protocol]
remote="${1:-"origin"}"
protocol="${2-}"

ourl="$(git remote get-url "$remote")"
url="$("$DOROTHY/commands/git-protocol-format" "$ourl" "$protocol")"
git remote set-url "$remote" "$url"
# ssh:// is actually https://
# git@ is actually ssh
# git remote -v
