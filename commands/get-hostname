#!/usr/bin/env bash

function get_hostname_test() (
	source "$DOROTHY/sources/bash.bash"

	local via_uname
	via_uname="$(uname -n)" # `uname -n` is hostname
	eval-tester --name="matches uname" --stdout="$via_uname" -- get-hostname

	return 0
)
function get_hostname() (
	source "$DOROTHY/sources/bash.bash"

	# =====================================
	# Arguments

	function help {
		__print_help "$@" <<-EOF || return $?
			ABOUT:
			Output the current machine's hostname.
			If you wish to set the hostname, use \`set-hostname <hostname>\` instead.

			USAGE:
			\`get-hostname\`
		EOF
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--'*) help 'An unrecognised flag was provided: ' --variable-value={item} ;;
		*) help 'An unrecognised argument was provided: ' --variable-value={item} ;;
		esac
	done

	# =====================================
	# Action

	__print_lines "$HOSTNAME" || return $?
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	if [[ $* == '--test' ]]; then
		get_hostname_test
	else
		get_hostname "$@"
	fi
fi
