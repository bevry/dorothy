#!/usr/bin/env bash

# https://github.com/veeso/termscp
# https://termscp.veeso.dev/get-started.html

# https://github.com/veeso/termscp/releases
# termscp-v0.16.1-aarch4-apple-darwin.tar.gz
# termscp-v0.16.1-arm64-apple-darwin.tar.gz
# termscp-v0.16.1-x86_64-apple-darwin.tar.gz
# termscp-v0.16.1-x86_64-pc-windows-msvc.zip
# termscp-v0.16.1-x86_64-unknown-linux-gnu.tar.gz
# termscp.0.16.1.nupkg
# termscp_0.16.1_amd64.deb
# termscp_0.16.1_arm64.deb

function setup_util_termscp() (
	source "$DOROTHY/sources/bash.bash"

	# improve performance for detectable utilities with conditional assets
	if setup-util --check --cli=termscp "$@"; then
		return 0
	fi

	# setup
	local arch options=(
		--cli='termscp'
		"$@"
		BREW='veeso/termscp/termscp'
		CHOCO='termscp'
		PKGIN='termscp'
		CARGO='termscp'
		PACMAN='termscp'
	)
	function __get_github_asset_url {
		local regexp
		regexp="$(echo-escape-regexp -- "$1")$" || return $?
		github-download --dry --slug='veeso/termscp' --latest --asset-regexp="$regexp" | echo-first-line || return $?
	}
	function __add_download_option {
		local url
		url="$(__get_github_asset_url "$1")" || return $?
		options+=(
			DOWNLOAD="$url"
			DOWNLOAD_ARCHIVE_GLOB='bin/termscp'
		)
	}
	function __add_deb_option {
		local url
		url="$(__get_github_asset_url "$1")" || return $?
		options+=(
			DEB="$url"
		)
	}
	arch="$(__get_arch)"
	if __is_macos; then
		if [[ $arch == 'a64' ]]; then
			__add_download_option '-arm64-apple-darwin.tar.gz' || :
			# strangely, there is a aarch4 and arm64 build for macos: https://github.com/veeso/termscp/issues/315#issuecomment-2645840568
		elif [[ $arch == 'x64' ]]; then
			__add_download_option '-x86_64-apple-darwin.tar.gz' || :
		fi
	elif __is_linux; then
		if [[ $arch == 'a64' ]]; then
			# strangely, no tar build for arm64: https://github.com/veeso/termscp/issues/315#issuecomment-2645840568
			__add_deb_option '_arm64.deb' || :
		elif [[ $arch == 'x64' ]]; then
			__add_deb_option '_amd64.deb' || :
			__add_download_option '-x86_64-unknown-linux-gnu.tar.gz' || :
		fi
	fi
	setup-util "${options[@]}"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	setup_util_termscp "$@"
fi
