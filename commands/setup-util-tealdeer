#!/usr/bin/env bash

# https://github.com/dbrgn/tealdeer
# tldr alternative

# https://dbrgn.github.io/tealdeer/installing.html

# https://github.com/dbrgn/tealdeer/releases
# completions_bash
# completions_fish
# completions_zsh
# tealdeer-linux-arm-musleabi
# tealdeer-linux-arm-musleabihf
# tealdeer-linux-armv7-musleabihf
# tealdeer-linux-i686-musl
# tealdeer-linux-x86_64-musl
# tealdeer-macos-x86_64
# tealdeer-windows-x86_64-msvc.exe

function setup_util_tealdeer() (
	source "$DOROTHY/sources/bash.bash"

	# options
	local option_reconfigure='yes'
	__flag --target={option_reconfigure} --name='reconfigure' --affirmative --coerce -- "$@"

	# helpers
	function __reconfigure {
		# if reconfigure is not desired, or if not installed, then don't reconfigure
		if [[ $option_reconfigure == 'no' ]] || __command_missing -- tldr; then
			return 0
		fi

		# @todo figure out why this hangs forever on wsl
		if ! __is_wsl; then
			eval-helper --quiet --wrap -- tldr --update || return $?
		fi
	}

	# improve performance for detectable utilities with conditional assets
	if setup-util --check --cli=tldr "$@"; then
		__reconfigure
		return 0
	fi

	# apt is marked for removal
	local arch options=(
		--name='tealdeer'
		--cli='tldr'
		"$@"
		AUR='tealdeer-bin'
		BREW='tealdeer'
		BSD='sysutils/tealdeer'
		CARGO='tealdeer'
		MACPORTS='tealdeer'
		NIX='tealdeer'
		RPM='rust-tealdeer'
		SCOOP='tealdeer'
		EOPKG='tealdeer'
		XBPS='tealdeer'
		ZYPPER='tealdeer'
	)
	function __get_github_asset_url {
		local regexp
		regexp="$(echo-escape-regexp -- "$1")$" || return $?
		github-download --dry --slug='dbrgn/tealdeer' --latest --asset-regexp="$regexp" | echo-first-line || return $?
	}
	function __add_download_option {
		local url
		url="$(__get_github_asset_url "$1")" || return $?
		options+=(DOWNLOAD="$url")
	}
	arch="$(__get_arch)"
	if __is_macos; then
		__add_download_option '-macos-x86_64' || :
	elif __is_linux; then
		if [[ $arch == 'x64' ]]; then
			__add_download_option '-linux-x86_64-musl' || :
		elif [[ $arch == 'x32' ]]; then
			__add_download_option '-linux-i686-musl' || :
		elif [[ $arch == 'a64' ]]; then
			__add_download_option '-linux-arm-musleabihf' || :
		elif [[ $arch == 'a32' ]]; then
			__add_download_option '-linux-armv7-musleabihf' || :
		fi
	elif is-windows; then
		if [[ $arch == 'x64' ]]; then
			__add_download_option '-windows-x86_64-msvc.exe' || : # uses windows config, rather than wsl config
		fi
	fi
	setup-util "${options[@]}"

	# finish
	__reconfigure
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	setup_util_tealdeer "$@"
fi
