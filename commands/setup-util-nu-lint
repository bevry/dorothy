#!/usr/bin/env bash

# https://github.com/wvhulle/nu-lint

function setup_util_nu_lint() (
	source "$DOROTHY/sources/bash.bash"

	# no apt
	local options=(
		--name='Nu-Lint'
		--cli='nu-lint'
		"$@"
		CARGO='nu-lint'
	)
	setup-util "${options[@]}" || return $?
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	setup_util_nu_lint "$@"
fi
