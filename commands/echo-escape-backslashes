#!/usr/bin/env bash

function echo_escape_backslashes_test() (
	source "$DOROTHY/sources/bash.bash"
	eval-tester --ignore-stderr --status=22 -- echo-escape-backslashes --help

	eval-tester --stdout='C:\\Dir\\File' -- \
		echo-escape-backslashes -- 'C:\Dir\File'

	echo-lines -- 'C:\Dir\File' | eval-tester --stdout='C:\\Dir\\File' -- \
		echo-escape-backslashes --stdin
)

function echo_escape_backslashes() (
	source "$DOROTHY/sources/stdinargs.bash"

	# =====================================
	# Arguments

	function help {
		__print_help "$@" <<-EOF || return $?
			ABOUT:
			For each <input>, escape backslashes, transforming each \`\\\` into \`\\\\\`.

			USAGE:
			\`echo-escape-backslashes [...options] [--] ...<input>\`
			\`echo-lines ...<input> | echo-escape-backslashes [...options]\`

			OPTIONS:
			$(__stdinargs__help_options --)
		EOF
		return 22 # EINVAL 22 Invalid argument
	}

	# =====================================
	# Action

	function __on_whole {
		local value="$1"
		value="${value//\\/\\\\}"
		__print_piece "$value" || return $?
	}

	stdinargs "$@"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	if [[ $* == '--test' ]]; then
		echo_escape_backslashes_test
	else
		echo_escape_backslashes "$@"
	fi
fi
