#!/usr/bin/env bash

# https://packages.debian.org/sid/amd64/procps/filelist
# /usr/bin/free
# /usr/bin/kill
# /usr/bin/pgrep
# /usr/bin/pidwait
# /usr/bin/pkill
# /usr/bin/pmap
# /usr/bin/ps
# /usr/bin/pwdx
# /usr/bin/skill
# /usr/bin/slabtop
# /usr/bin/snice
# /usr/bin/tload
# /usr/bin/top
# /usr/bin/uptime
# /usr/bin/vmstat
# /usr/bin/w
# /usr/bin/watch
# /usr/sbin/sysctl

# https://repology.org/project/procps/versions

function setup_util_ps() (
	source "$DOROTHY/sources/bash.bash"

	# setup
	local options=(
		--cli='ps'
		"$@"
		APT='procps'
		DNF='procps'
		PACMAN='procps-ng'
		PAMAC='procps-ng'
	)
	setup-util "${options[@]}"
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	setup_util_ps "$@"
fi
