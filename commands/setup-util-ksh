#!/usr/bin/env bash

# https://repology.org/project/ksh/versions

function setup_util_ksh() (
	source "$DOROTHY/sources/bash.bash"

	# setup
	local options=(
		--cli='ksh'
		"$@"
		APT='ksh' # UBUNTU
		AUR='ksh' # ARCH
		BREW='ksh'
		EMERGE='app-shells/ksh' # GENTOO
		NIX='ksh'
		RPM='ksh'    # FEDORA
		ZYPPER='ksh' # SUSE
	)
	setup-util "${options[@]}"
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	setup_util_ksh "$@"
fi
