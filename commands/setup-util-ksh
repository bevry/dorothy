#!/usr/bin/env bash

# https://repology.org/project/ksh/versions

function setup_util_ksh() (
	source "$DOROTHY/sources/bash.bash"

	# setup
	local options=(
		--cli='ksh'
		"$@"
		APT='ksh'
		AUR='ksh'
		BREW='ksh'
		EMERGE='app-shells/ksh'
		NIX='ksh'
		RPM='ksh'
		ZYPPER='ksh'
	)
	setup-util "${options[@]}"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	setup_util_ksh "$@"
fi
