#!/usr/bin/env bash

function echo_or_fail() (
	source "$DOROTHY/sources/stdinargs.bash"

	# =====================================
	# Arguments

	function help {
		cat <<-EOF >&2
			ABOUT:
			If input is provided, output it.
			If no input was provided, fail.

			USAGE:
			echo-or-fail [...options] [--] ...<input>
			echo-lines ...<input> | echo-or-fail [...options]

			OPTIONS:
			$(__stdinargs__help_options --)

			EXAMPLE:

			# success cases
			echo-or-fail -- 'sup'
			printf '%s\n' 'sup' | echo-or-fail --stdin

			    sup
			    # exit status: 0

			# failure cases, no stdin, no arguments
			echo-or-fail ''
			echo-or-fail -- ''
			echo-or-fail --
			printf '%s' '' | echo-or-fail --stdin
			true | echo-or-fail --stdin

			    # exit status: 96
		EOF
		if [[ $# -ne 0 ]]; then
			__print_error "$@"
		fi
		return 22 # EINVAL 22 Invalid argument
	}

	# =====================================
	# Action

	function __on_whole {
		__print_piece "$1" || return $?
	}

	function __on_nothing {
		return 96 # ENODATA 96 No message available on STREAM
	}

	stdinargs "$@"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	echo_or_fail "$@"
fi
