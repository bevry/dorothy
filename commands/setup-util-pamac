#!/usr/bin/env bash

# https://wiki.manjaro.org/index.php/Pamac

function setup_util_pamac() (
	source "$DOROTHY/sources/bash.bash"

	# checks
	if ! is-manjaro; then
		echo-style --notice="[$0] is only intended to be run on Manjaro systems, skipping." >/dev/stderr
		return 0
	fi

	# improve performance
	if is-needle --quiet "$@" && ! is-needle --upgrade "$@" && ! is-needle --uninstall "$@" && command-exists pamac; then
		return 0
	fi

	# no apt
	local options=(
		--name='pamac'
		--cli='pamac'
		"$@"
		PACMAN='pamac-cli'
	)
	setup-util "${options[@]}"
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	setup_util_pamac "$@"
fi
