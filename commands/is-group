#!/usr/bin/env bash

function is_group() (
	source "$DOROTHY/sources/bash.bash"

	# =====================================
	# Arguments

	function help {
		cat <<-EOF >/dev/stderr
			ABOUT:
			Checks if a <group> is registered as a group on the system.

			USAGE:
			is-group [...options] [--] <group>

			OPTIONS:
			<group> | --group=<group>
			    Verify this <group> is registered as a group on the system.

			RETURNS:
			[0] if all <group>s were a group on the system.
			[1] if any <group>s were not a group on the system.
			[19] if the OS is not supported.
		EOF
		if test "$#" -ne 0; then
			echo-error "$@"
		fi
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item option_groups=()
	while test "$#" -ne 0; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--group='*) option_groups+=("${item#*=}") ;;
		'--')
			option_groups+=("$@")
			shift $#
			break
			;;
		'--'*) help "An unrecognised flag was provided: $item" ;;
		*) option_groups+=("$item") ;;
		esac
	done

	# =====================================
	# Action

	# https://stackoverflow.com/a/36131231/130638
	# https://superuser.com/a/444218/32418
	local group
	for group in "${option_groups[@]}"; do
		if command-exists getent; then
			getent group "$group" &>/dev/null
		elif command-exists dscacheutil; then
			{
				dscacheutil -q group -a name "$group" | echo-or-fail --stdin
			} &>/dev/null
		else
			echo-error "$0: Unsupported OS"
			return 19 # ENODEV 19 Operation not supported by device
		fi
	done
	return 0
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	is_group "$@"
fi
