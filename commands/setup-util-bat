#!/usr/bin/env bash

# https://github.com/sharkdp/bat
# cat alternative

# https://github.com/sharkdp/bat/releases
# bat-musl_0.26.0_arm64.deb <-- musl only as prefix, not suffix
# bat-musl_0.26.0_musl-linux-amd64.deb <-- musl as prefix and suffix
# bat-musl_0.26.0_musl-linux-i686.deb <-- musl as prefix and suffix
# bat-v0.26.0-aarch64-apple-darwin.tar.gz
# bat-v0.26.0-aarch64-pc-windows-msvc.zip
# bat-v0.26.0-aarch64-unknown-linux-gnu.tar.gz
# bat-v0.26.0-aarch64-unknown-linux-musl.tar.gz
# bat-v0.26.0-arm-unknown-linux-gnueabihf.tar.gz
# bat-v0.26.0-arm-unknown-linux-musleabihf.tar.gz
# bat-v0.26.0-i686-pc-windows-msvc.zip
# bat-v0.26.0-i686-unknown-linux-gnu.tar.gz
# bat-v0.26.0-i686-unknown-linux-musl.tar.gz
# bat-v0.26.0-x86_64-apple-darwin.tar.gz
# bat-v0.26.0-x86_64-pc-windows-msvc.zip
# bat-v0.26.0-x86_64-unknown-linux-gnu.tar.gz
# bat-v0.26.0-x86_64-unknown-linux-musl.tar.gz
# bat_0.26.0_amd64.deb
# bat_0.26.0_arm64.deb
# bat_0.26.0_armhf.deb
# bat_0.26.0_i686.deb
# bat_0.26.0_musl-linux-armhf.deb <-- musl only as suffix

# https://repology.org/project/bat-cat/versions

function setup_util_bat() (
	source "$DOROTHY/sources/bash.bash"

	# improve performance for detectable utilities with conditional assets
	if setup-util --check --cli=bat "$@"; then
		return 0
	fi

	# despite docs, no apk
	# aur is outdated, installs 0.24 <https://github.com/bevry/dorothy/actions/runs/19231237567/job/54970077887#step:4:26505> (which breaks `echo-file` tests) instead of 0.26
	local arch options=(
		--cli='bat'
		"$@"
		APT='rust-bat'
		BREW='bat'
		BSD='sysutils/bat'
		CARGO='bat'
		CHOCO='bat'
		EMERGE='sys-apps/bat'
		EOPKG='bat'
		NIX='bat'
		PORT='bat'
		RPM='rust-bat'
		SCOOP='bat'
		URPMI='bat'
		XBPS='bat'
		# ZYPPER='bat' # SUSE <-- outdated on leap, so install manually: https://github.com/bevry/dorothy/actions/runs/18323839922/job/52183264104#step:4:32671
	)
	function __get_github_asset_url {
		local suffix="$1" regexp
		regexp="$(echo-escape-regexp -- "$suffix")$" || return $?
		github-download --dry --slug='sharkdp/bat' --latest --asset-regexp="$regexp" | echo-first-line || return $?
	}
	function __add_download_option {
		local suffix="$1" file="$2" url
		url="$(__get_github_asset_url "$suffix")" || return $?
		options+=(
			DOWNLOAD="$url"
			DOWNLOAD_ARCHIVE_GLOB="*/$file"
		)
	}
	function __add_deb_option {
		local suffix="$1" url
		url="$(__get_github_asset_url "$suffix")" || return $?
		options+=(DEB="$url")
	}
	arch="$(__get_arch)"
	if __is_macos; then
		if [[ $arch == 'a64' ]]; then
			__add_download_option '-aarch64-apple-darwin.tar.gz' 'bat' || :
		elif [[ $arch == 'x64' ]]; then
			__add_download_option '-x86_64-apple-darwin.tar.gz' 'bat' || :
		fi
	elif __is_linux; then
		if [[ $arch == 'a64' ]]; then
			__add_deb_option '_arm64.deb' || : # there is a musl build, however it is prefix and not suffix
			__add_download_option '-aarch64-unknown-linux-musl.tar.gz' 'bat' || :
		elif [[ $arch == 'a32' ]]; then
			__add_deb_option '_musl-linux-armhf.deb' || :
			__add_download_option '-arm-unknown-linux-musleabihf.tar.gz' 'bat' || :
		elif [[ $arch == 'x64' ]]; then
			__add_deb_option '_musl-linux-amd64.deb' || :
			__add_download_option '-x86_64-unknown-linux-musl.tar.gz' 'bat' || :
		elif [[ $arch == 'x32' ]]; then
			__add_deb_option '_musl-linux-i686.deb' || :
			__add_download_option '-i686-unknown-linux-musl.tar.gz' 'bat' || :
		fi
	elif is-system --windows; then
		if [[ $arch == 'a64' ]]; then
			__add_download_option '-aarch64-pc-windows-msvc.zip' 'bat.exe' || :
		elif [[ $arch == 'x64' ]]; then
			__add_download_option '-x86_64-pc-windows-msvc.zip' 'bat.exe' || :
		elif [[ $arch == 'x32' ]]; then
			__add_download_option '-i686-pc-windows-msvc.zip' 'bat.exe' || :
		fi
	fi
	setup-util "${options[@]}"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	setup_util_bat "$@"
fi
