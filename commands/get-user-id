#!/usr/bin/env bash

function get_user_id() (
	source "$DOROTHY/sources/bash.bash"

	# =====================================
	# Arguments

	function help {
		cat <<-EOF >/dev/stderr
			ABOUT:
			Get the user identifier for a username.

			USAGE:
			get-user-id [<username>]
			get-user-id [--username=<username>]
			get-user-id [--user=<username>]

			QUIRKS:
			If no username is provided, the current user via [whoami] will be used.
		EOF
		if test "$#" -ne 0; then
			echo-error "$@"
		fi
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item option_user=''
	while test "$#" -ne 0; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--username='*) option_user="${item#*--username=}" ;;
		'--user='*) option_user="${item#*--user=}" ;;
		'--'*) help "An unrecognised flag was provided: $item" ;;
		*)
			if test -z "$option_user"; then
				option_user="$item"
			else
				help "An unrecognised argument was provided: $item"
			fi
			;;
		esac
	done

	# fallback username to current user
	if test -z "$option_user"; then
		option_user="$(whoami)"
	fi

	# =====================================
	# Act

	id -u "$option_user"
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	get_user_id "$@"
fi
