#!/usr/bin/env bash

function get_user_id_test() (
	source "$DOROTHY/sources/bash.bash"
	eval-tester --ignore-stderr --status=22 -- get-user-id --help
)

function get_user_id() (
	source "$DOROTHY/sources/bash.bash"

	# =====================================
	# Arguments

	function help {
		__print_help "$@" <<-EOF || return $?
			ABOUT:
			Get the user identifier for a username.

			USAGE:
			get-user-id [...options] [--] ...<user>

			OPTIONS:
			--user=<user> | --users=<users> | ...<user>
			    Users to verify and fetch their IDs for.
			--login
			    If enabled, the login user will be used as the <user>, if none were provided.
			    Otherwise, the current user will be used as the <user>, if none were provided.

			RETURNS:
			[0] if all <user>s were found and their IDs were printed
			[1] if any <user>s were not found or could not be accessed

			COMPANION COMMANDS:
			[get-group-id]
			[get-profile]
			[get-user-id]
			[is-admin]
			[is-group]
			[is-owner]
			[is-password-usable]
			[is-root]
			[is-user-in-group]
			[is-user]
		EOF
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item option_users=() option_login=''
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		'--no-login'* | '--login'*) __flag --source={item} --target={option_login} --affirmative ;;
		'--user='* | '--users='*) __split --target={option_users} --append --delimiters=$'\n\t ,|' --no-zero-length -- "${item#*=}" ;;
		'--')
			option_users+=("$@")
			shift $#
			break
			;;
		'--'*) help 'An unrecognised flag was provided: ' --variable-value={item} ;;
		*) option_users+=("$item") ;;
		esac
	done

	# ensure
	if [[ ${#option_users[@]} -eq 0 ]]; then
		if [[ $option_login == 'yes' ]]; then
			__prepare_login_user
			option_users+=("$LOGIN_USER")
		else
			__prepare_current_user # could prompt
			option_users+=("$CURRENT_USER")
		fi
	fi

	# =====================================
	# Action

	local user
	for user in "${option_users[@]}"; do
		id -u "$user" || return $?
	done
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	if [[ $* == '--test' ]]; then
		get_user_id_test
	else
		get_user_id "$@"
	fi
fi
