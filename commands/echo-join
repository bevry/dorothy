#!/usr/bin/env bash

function echo_join_test() (
	source "$DOROTHY/sources/bash.bash"

	eval-tester --stdout='a b' -- echo-join -- a b

	eval-tester --stdout='a, b' -- echo-join ', ' -- a b

	eval-tester --stdout=$'a\n\tb' -- echo-join --delimiter=$'\n\t' -- a b

	eval-tester --stdout=$'\e[1ma\e[22m \e[1mb\e[22m' -- echo-join --join=' ' --style=bold -- a b

	__print_lines a b | eval-tester --stdout='a b' -- echo-join --stdin

	__print_lines a b | eval-tester --stdout='a, b' -- echo-join ', ' --stdin

	__print_lines a b | eval-tester --stdout=$'a\n\tb' -- echo-join --join=$'\n\t' --stdin

	return 0
)
function echo_join() (
	source "$DOROTHY/sources/stdinargs.bash"

	# =====================================
	# Arguments

	function help {
		cat <<-EOF >&2
			ABOUT:
			Concatenate the inputs with the <join> between them.

			USAGE:
			echo-join <join> [...options] [--] ...<input>
			echo-lines ...<input> | echo-join <join> [...options]

			OPTIONS:
			<delimiter> | --join=<delimiter> | --delimiter=<delimiter>
			    The delimiter to put between each <input>. If not provided, a space is used.

			$(__stdinargs__help_options --)

			QUIRKS:
			There will be no newline at the end, in case you your input or <join> contains newlines, we do not wish to mangle your intention.
		EOF
		if [[ $# -ne 0 ]]; then
			__print_error "$@"
		fi
		return 22 # EINVAL 22 Invalid argument
	}

	# process our own arguments, delegate everything else to stdinargs
	local rand="$RANDOM"
	local item option_delimiter="$rand" option_style='' option_args=()
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--delimiter='* | '--join='*) option_delimiter="${item#*=}" ;;
		'--style='*) option_style="${item#*=}" ;;
		# forward to stdinargs, however support mixing and matching of our options, with stdinargs options
		'--')
			option_args+=("$item" "$@")
			shift $#
			break
			;;
		'--'*) option_args+=("$item") ;;
		*)
			if [[ $option_delimiter == "$rand" ]]; then
				option_delimiter="$item"
			else
				option_args+=("$item")
			fi
			;;
		esac
	done

	# default to empty space
	if [[ $option_delimiter == "$rand" ]]; then
		option_delimiter=' '
	fi

	# =================================
	# Action

	local items=()
	if [[ -n $option_style ]]; then
		function __on_piece {
			local item="$1" render
			if [[ -n $item ]]; then
				render="$(__print_style "--$option_style=$item")" || return
				items+=("$render")
			fi
		}
	else
		function __on_piece {
			items+=("$1")
		}
	fi
	function __on_finish {
		__join --source={items} --delimiter="$option_delimiter" || return
	}

	stdinargs "${option_args[@]}"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	if [[ $* == '--test' ]]; then
		echo_join_test
	else
		echo_join "$@"
	fi
fi
