#!/usr/bin/env bash

# for some reason, apt exists on macos at /usr/bin/apt

function is_apt() (
	source "$DOROTHY/sources/bash.bash"

	# =====================================
	# Arguments

	function help {
		cat <<-EOF >&2
			ABOUT:
			Checks if the system has $(echo-style --code=apt) available, which is the preferred package manager on Ubuntu and Debian.

			USAGE:
			is-apt

			RETURNS:
			[0] if the system has apt
			[1] if the system does not have apt
		EOF
		if [[ $# -ne 0 ]]; then
			__print_error "$@"
		fi
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--'*) help "An unrecognised flag was provided: $item" ;;
		*) help "An unrecognised argument was provided: $item" ;;
		esac
	done

	# =====================================
	# Action

	if __command_exists -- apt-get; then
		return 0
	else
		return 1
	fi
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	is_apt "$@"
fi
