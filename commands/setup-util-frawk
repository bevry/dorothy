#!/usr/bin/env bash

# https://github.com/ezrosent/frawk
# awk alternative

# https://github.com/ezrosent/frawk/releases
# no assets

function setup_util_frawk() (
	source "$DOROTHY/sources/bash.bash"

	# setup
	local arch options=(
		--cli='frawk'
		"$@"
		CARGO='frawk'
	)
	setup-util "${options[@]}"
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	setup_util_frawk "$@"
fi
