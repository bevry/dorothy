#!/usr/bin/env bash

# @todo consider <https://developer.mozilla.org/en-US/docs/Web/JavaScript/Reference/Global_Objects/RegExp/escape>

function echo_escape_regexp_test() (
	source "$DOROTHY/sources/bash.bash"
	eval-tester --ignore-stderr --status=22 -- echo-escape-regexp --help
)

function echo_escape_regexp() (
	source "$DOROTHY/sources/stdinargs.bash"

	# =====================================
	# Arguments

	function help {
		__print_help "$@" <<-EOF || return $?
			ABOUT:
			For each <input>, escape regular expression control characters by prepending backslashes.

			USAGE:
			\`echo-escape-regexp [...options] [--] ...<input>\`
			\`echo-lines ...<input> | echo-escape-regexp [...options]\`

			OPTIONS:
			$(__stdinargs__help_options --)

			EXAMPLES:
			\`\`\`
			echo-escape-regexp -- '[a-z](?:test)/a/.*.+?'
			echo-lines -- '[a-z](?:test)/a/.*.+?' | echo-escape-regexp --stdin
			\`\`\`
			Outputs: \`\[a-z\]\(\?:test\)/a/\.\*\.\+\?\`
			Returns: [0]
		EOF
		return 22 # EINVAL 22 Invalid argument
	}

	# =====================================
	# Action

	# this was provided by chatgpt, with printf modifications
	function __on_whole {
		local input="$1" i char output=''
		for ((i = 0; i < ${#input}; i++)); do
			char="${input:i:1}"
			case "$char" in
			# trunk-ignore(shellcheck/SC1001)
			\\ | \[ | \] | \{ | \} | \^ | \$ | \. | \* | \+ | \? | \| | \( | \))
				output+="\\$char" || return $?
				;;
			*)
				output+="$char" || return $?
				;;
			esac
		done
		__print_piece "$output" || return $?
	}

	stdinargs "$@"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	if [[ $* == '--test' ]]; then
		echo_escape_regexp_test
	else
		echo_escape_regexp "$@"
	fi
fi
