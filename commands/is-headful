#!/usr/bin/env bash

# ubuntu desktop on raspi
# XDG_CURRENT_DESKTOP='ubuntu:GNOME'
# DESKTOP_SESSION='ubuntu'

# ubuntu server on raspi
# both empty

function is_headful() (
	source "$DOROTHY/sources/bash.bash"

	# =====================================
	# Arguments

	function help {
		cat <<-EOF >&2
			ABOUT:
			Checks if there is Desktop/GUI available to our current session.
			macOS and WSL will always return [0] success.
			This is usually used in conjunction with [is-ssh].

			USAGE:
			is-headful

			RETURNS:
			[0] if the session exposes a Desktop/GUI.
			[1] if the session does not expose a Desktop/GUI.
		EOF
		if [[ $# -ne 0 ]]; then
			__print_error "$@"
		fi
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--'*) help 'An unrecognised flag was provided: ' --variable-value={item} ;;
		*) help 'An unrecognised argument was provided: ' --variable-value={item} ;;
		esac
	done

	# =====================================
	# Action

	if [[ -n ${XDG_CURRENT_DESKTOP-} || -n ${DESKTOP_SESSION-} ]] || is-mac || is-windows; then
		return 0
	else
		return 1
	fi
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	is_headful "$@"
fi
