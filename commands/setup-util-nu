#!/usr/bin/env bash

# https://github.com/nushell/nushell
# https://github.com/nushell/nushell/issues/9999

# https://github.com/nushell/nushell/releases
# nu-0.108.0-aarch64-apple-darwin.tar.gz
# nu-0.108.0-aarch64-pc-windows-msvc.msi
# nu-0.108.0-aarch64-pc-windows-msvc.zip
# nu-0.108.0-aarch64-unknown-linux-gnu.tar.gz
# nu-0.108.0-aarch64-unknown-linux-musl.tar.gz
# nu-0.108.0-armv7-unknown-linux-gnueabihf.tar.gz
# nu-0.108.0-armv7-unknown-linux-musleabihf.tar.gz
# nu-0.108.0-loongarch64-unknown-linux-gnu.tar.gz
# nu-0.108.0-loongarch64-unknown-linux-musl.tar.gz
# nu-0.108.0-riscv64gc-unknown-linux-gnu.tar.gz
# nu-0.108.0-x86_64-apple-darwin.tar.gz
# nu-0.108.0-x86_64-pc-windows-msvc.msi
# nu-0.108.0-x86_64-pc-windows-msvc.zip
# nu-0.108.0-x86_64-unknown-linux-gnu.tar.gz
# nu-0.108.0-x86_64-unknown-linux-musl.tar.gz

# https://repology.org/project/nushell/versions

function setup_util_nu() (
	source "$DOROTHY/sources/bash.bash"

	# options
	local option_reconfigure='yes'
	__flag --target={option_reconfigure} --name='reconfigure' --affirmative --coerce -- "$@"

	# nushell requires all sources files to exist ahead of time
	function __quoted_realpath {
		local path="$1"
		path="$(fs-path --resolve -- "$path")" || return $?
		echo-quote -- "$path" || return $?
	}
	function __reconfigure {
		# if reconfigure is not desired, or if not installed, then don't reconfigure
		if [[ $option_reconfigure == 'no' ]] || __command_missing -- nu; then
			return 0
		fi

		# prep
		local autoload_path="$XDG_DATA_HOME/nushell/vendor/autoload" state_path="$DOROTHY/state" removals=()

		# starship
		if __command_exists -- starship; then
			{
				__print_lines '#!/usr/bin/env nu'
				starship init nu
			} >"$state_path/starship.nu" || return $?
		else
			{ __print_lines '#!/usr/bin/env nu'; } >"$state_path/starship.nu" || return $?
		fi
		removals+=("$autoload_path/starship.nu" "$XDG_STATE_HOME/starship/init.nu" "$state_path/sources/starship.nu") # deprecated

		# carapace
		if __command_exists -- carapace; then
			{
				__print_lines '#!/usr/bin/env nu'
				carapace _carapace nushell
			} >"$state_path/carapace.nu" || return $?
		else
			{ __print_lines '#!/usr/bin/env nu'; } >"$state_path/carapace.nu" || return $?
		fi
		removals+=("$autoload_path/carapace.nu" "$state_path/sources/carapace.nu" "$XDG_STATE_HOME/carapace/init.nu") # deprecated

		# dorothy configuration files
		if [[ -f "$DOROTHY/user/config.local/interactive.nu" ]]; then
			{ __print_lines '#!/usr/bin/env nu' "source $(__quoted_realpath "$DOROTHY/user/config.local/interactive.nu")"; } >"$state_path/interactive.nu" || return $?
		elif [[ -f "$DOROTHY/user/config/interactive.nu" ]]; then
			{ __print_lines '#!/usr/bin/env nu' "source $(__quoted_realpath "$DOROTHY/user/config/interactive.nu")"; } >"$state_path/interactive.nu" || return $?
		elif [[ -f "$DOROTHY/config/interactive.nu" ]]; then
			{ __print_lines '#!/usr/bin/env nu' "source $(__quoted_realpath "$DOROTHY/config/interactive.nu")"; } >"$state_path/interactive.nu" || return $?
		else
			{ __print_lines '#!/usr/bin/env nu'; } >"$state_path/interactive.nu" || return $?
		fi
		removals+=("$autoload_path/dorothy-interactive.nu" "$state_path/config.local/interactive.nu" "$state_path/config/interactive.nu") # deprecated

		# deprecated
		removals+=("$autoload_path/dorothy.nu")

		# removals
		if [[ ${#removals[@]} -ne 0 ]]; then
			fs-remove --quiet --no-confirm -- "${removals[@]}" || return $?
		fi
	}

	# improve performance for detectable utilities with conditional assets
	if setup-util --check --cli=nu "$@"; then
		__reconfigure
		return 0
	fi

	# setup
	# rpm is outdated, dnf has its own repo to bypass out of date version
	# aur is outdated in practice, even though repology says otherwise <https://github.com/bevry/dorothy/actions/runs/19231237567/job/54970077887#step:4:9851> which results in 0.90 being installed despite 0.108 being available
	local arch options=(
		--name='Nushell'
		--cli='nu'
		"$@"
		APK='nushell'
		BREW='nushell'
		CARGO='nu'
		DNF_REPO='https://yum.fury.io/nushell/'
		DNF='nushell'
		EMERGE='app-shells/nushell'
		NIX='nushell'
		EOPKG='nushell'
		NODE='nushell'
		SCOOP='nu'
		WINGET='nushell'
		ZYPPER='nushell'
	)
	function __get_github_asset_url {
		local suffix="$1" regexp
		regexp="$(echo-escape-regexp -- "$suffix")$" || return $?
		github-download --dry --slug='nushell/nushell' --latest --asset-regexp="$regexp" | echo-first-line || return $?
	}
	function __add_download_option {
		local suffix="$1" file="$2" url
		url="$(__get_github_asset_url "$suffix")" || return $?
		options+=(
			DOWNLOAD="$url"
			DOWNLOAD_ARCHIVE_GLOB="*/$file"
		)
	}
	arch="$(__get_arch)"
	if __is_macos; then
		if [[ $arch == 'a64' ]]; then
			__add_download_option '-aarch64-apple-darwin.tar.gz' 'nu' || :
		else
			__add_download_option '-x86_64-apple-darwin.tar.gz' 'nu' || :
		fi
	elif __is_linux; then # includes wsl
		if [[ $arch == 'r64' ]]; then
			__add_download_option '-riscv64gc-unknown-linux-gnu.tar.gz' 'nu' || :
		elif [[ $arch == 'a64' ]]; then
			__add_download_option '-aarch64-unknown-linux-musl.tar.gz' 'nu' || :
		elif [[ $arch == 'a32' ]]; then
			__add_download_option '-armv7-unknown-linux-musleabihf.tar.gz' 'nu' || :
		elif [[ $arch == 'x64' ]]; then
			__add_download_option '-x86_64-unknown-linux-musl.tar.gz' 'nu' || :
		fi
	fi
	setup-util "${options[@]}"
	# .msi failed with: This installation package could not be opened. Contact the application vendor to verify that this is a valid Windows Installer package.
	#
	# function add_installer_option {
	# 	options+=(
	# 		INSTALLER="$(__get_github_asset_url "$1")"
	# 		INSTALLER_OPEN=yes
	# 	)
	# }
	# add_installer_option '-aarch64-pc-windows-msvc.msi'
	# add_installer_option '-x86_64-pc-windows-msvc.msi'

	# finish
	__reconfigure
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	setup_util_nu "$@"
fi
