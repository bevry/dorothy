#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

# =====================================
# Arguments

# help
function help() {
	cat <<-EOF >/dev/stderr
		ABOUT:
		Make a temporary file inside a directory.

		USAGE:
		fs-temp [--xdg] [--directory=...] [--prefix=...] [--suffix=...] [--filename=...]
	EOF
	if test "$#" -ne 0; then
		echo-style $'\n' --error="ERROR:" $'\n' --red="$(echo-lines -- "$@")" >/dev/stderr
	fi
	return 22 # Invalid argument
}

# process
option_directory=''
option_prefix=''
option_suffix=''
option_filename=''
option_xdg='no'
while test "$#" -ne 0; do
	item="$1"
	shift
	case "$item" in
	'help' | '--help' | '-h') help ;;
	'--no-xdg'* | '--xdg'*) option_xdg="$(
		get-flag-value xdg --missing="$option_xdg" -- "$item" | echo-affirmative
	)" ;;
	'--directory='*) option_directory="${item:12}" ;;
	'--prefix='*) option_prefix="${item:9}" ;;
	'--suffix='*) option_suffix="${item:9}" ;;
	'--filename='*) option_filename="${item:11}" ;;
	'--') ;;
	'--'*) help "An unrecognised flag was provided: $item" ;;
	*) help "An unrecognised argument was provided: $item" ;;
	esac
done

# adjust directory
if test "$option_xdg" = 'yes'; then
	if test -z "$option_directory"; then
		option_directory="${XDG_CACHE_HOME}/dorothy"
	else
		option_directory="${XDG_CACHE_HOME}/dorothy/$option_directory"
	fi
	mkdir -p "$option_directory"
else
	if test -z "$option_directory"; then
		option_directory="$(mktemp -d)"
	else
		mkdir -p "$option_directory"
	fi
fi

# =====================================
# Act

# generate a non-existent path
if test -n "$option_filename"; then
	result="${option_directory}/${option_filename}"
else
	result=''
	while true; do
		result="${option_directory}/${option_prefix}$(get-random-number)${option_suffix}"
		if test ! -e "$result"; then
			break
		fi
	done
fi

# done
echo "$result"
