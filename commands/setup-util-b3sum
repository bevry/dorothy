#!/usr/bin/env bash

# https://github.com/BLAKE3-team/BLAKE3/releases/tag/1.8.2
# b3sum_linux_x64_bin
# b3sum_macos_x64_bin
# b3sum_windows_x64_bin.exe

# https://github.com/rhash/RHash <-- only available via brew, brew version lags behind, only 1.4.6 and above supports blake3, but brew is 1.4.5

# https://repology.org/project/b3sum/versions

function setup_util_b3sum() (
	source "$DOROTHY/sources/bash.bash"

	# improve performance for detectable utilities with conditional assets
	if setup-util --check --cli=b3sum "$@"; then
		return 0
	fi

	# despite docs, no apk
	local arch options=(
		--cli='b3sum'
		"$@"
		BREW='b3sum' # blake3 is the c implementation
		CARGO='b3sum'
		APK='b3sum'
		AUR='b3sum'
		RPM='b3sum'
		ZYPPER='b3sum'
		SCOOP='b3sum'
		VOID='b3sum'
	)
	function __get_github_asset_url {
		local suffix="$1" regexp
		regexp="$(echo-escape-regexp -- "$suffix")$" || return $?
		github-download --dry --slug='BLAKE3-team/BLAKE3' --latest --asset-regexp="$regexp" | echo-first-line || return $?
	}
	function __add_download_option {
		local suffix="$1" url
		url="$(__get_github_asset_url "$suffix")" || return $?
		options+=(DOWNLOAD="$url")
	}
	arch="$(__get_arch)"
	if __is_macos; then
		__add_download_option '_macos_x64_bin' || :
	elif __is_linux; then
		if [[ $arch == 'x64' ]]; then
			__add_download_option '_linux_x64_bin' || :
		fi
	elif is-system --windows; then
		if [[ $arch == 'x64' ]]; then
			__add_download_option '_windows_x64_bin.exe' || :
		fi
	fi
	setup-util "${options[@]}"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	setup_util_b3sum "$@"
fi
