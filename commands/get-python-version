#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

# python outputs the version to stderr, so we have to redirect stderr to stdout for it to be captured
version="$("${1:-"python"}" --version 2>&1)"

if test -n "${2-}"; then
	if [[ $version == "Python $2"* ]]; then
		exit 0
	else
		exit 1
	fi
else
	echo "$version"
fi
