#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

# Mode
if test "${1-}" = "update"; then
	mode="update"
else
	mode="install"
fi

if test "$mode" = "install"; then
	setup-dns
fi

setup-bin
setup-git
setup-rust
setup-node
setup-go
setup-ruby
setup-python
setup-vim
setup-bin
setup-utils
if test "$mode" = "install"; then
	select-shell
fi
