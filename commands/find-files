#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"
source "$DOROTHY/sources/globstar.bash"
if test "$GLOBSTAR" = 'no'; then
	exit 1
fi

p="${1:-.}"
exectension="$(ask --question="What is the extension of the files you wish to find?" --default="${args[0]-}" --flag=extension -- "$@")"
_exec="$(ask --question="If you wish to run a command for each file, enter it now." --default="${args[0]-}" --flag=exec -- "$@")"

# @todo confirm the stringification of below was intentional... I'm very doubtful
if test -n "$_exec"; then
	find "$p" -path "**/*.$exectension" -exec "$_exec" {} \;
else
	find "$p" -path "**/*.$exectension"
fi
