#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"
source "$DOROTHY/sources/globstar.bash"

ext="$(ask-mandatory "What is the extension of the files you wish to find?" "${1-}")"
cmd="$(ask-confirm "If you wish to run a command for each file, enter it now." "${2-}")"

if test -n "$cmd"; then
	find . -path "**/*.$ext" -exec "$cmd" {} \;
else
	find . -path "**/*.$ext"
fi
