#!/usr/bin/env bash

# https://github.com/showcases/fonts
# https://github.com/todylu/monaco.ttf

function setup_util_source_code_pro() (
	source "$DOROTHY/sources/bash.bash"

	# improve performance for detectable utilities with conditional assets
	if setup-util "$@" --check --font='SourceCodePro-*'; then
		return 0
	fi

	# setup
	local options=(
		--name='Source Code Pro'
		--font='SourceCodePro-*'
		"$@"
		CASK='font-source-code-pro'
	)
	function __get_github_asset_urls {
		# this provides two urls, one for otf and one for ttf
		github-download --dry --slug='adobe-fonts/source-code-pro' --latest --asset-regexp='^[OT]TF-' || return $?
	}
	function __add_download_option {
		local url
		url="$(__get_github_asset_urls)" || return $?
		options+=(
			DOWNLOAD="$url"
			DOWNLOAD_ARCHIVE_GLOB='**/*.{otf,ttf}'
		)
	}
	__add_download_option || :
	setup-util "${options[@]}"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	setup_util_source_code_pro "$@"
fi
