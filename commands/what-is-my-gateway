#!/usr/bin/env bash

function what_is_my_gateway() (
	source "$DOROTHY/sources/bash.bash"

	# =====================================
	# Arguments

	function help {
		cat <<-EOF >/dev/stderr
			ABOUT:
			Outputs your network gateway.

			USAGE:
			what-is-my-gateway
		EOF
		if test "$#" -ne 0; then
			echo-error "$@"
		fi
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item
	while test "$#" -ne 0; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--'*) help "An unrecognised flag was provided: $item" ;;
		*) help "An unrecognised argument was provided: $item" ;;
		esac
	done

	# =====================================
	# Dependencies

	source "$DOROTHY/sources/ripgrep.bash"
	setup-util-sd --quiet
	setup-util-netstat --quiet

	# =====================================
	# Act

	if command-exists ip; then
		# `ip route show dev eth0` is too specific, doesn't work on vms among others
		ip route show | rg -o 'via (.+?) ' --replace '$1' | echo-first-line
	elif command-exists netstat; then
		# trunk-ignore(shellcheck/SC2016)
		netstat -nr | rg ' UG.+?(en0|eth0)' | sd '(0.0.0.0|default) +(.+?) .+' '$2' | echo-first-line
	else
		echo-style --error='install [ip] or [netstat] and try again' >/dev/stderr
		return 19 # ENODEV 19 Operation not supported by device
	fi

)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	what_is_my_gateway "$@"
fi
