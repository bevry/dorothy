#!/usr/bin/env bash

function what_is_my_gateway() (
	source "$DOROTHY/sources/bash.bash"
	local all_tools=(ip netstat)

	# help
	function help {
		cat <<-EOF >&2
			ABOUT:
			Outputs your network gateway.

			USAGE:
			what-is-my-gateway

			OPTIONS:
			--tool=<tool:$(__join --source={all_tools} --delimiter='|')|?>
			    The tool to use. Use [?] to prompt. Default is the first available tool.
		EOF
		if [[ $# -ne 0 ]]; then
			__print_error "$@"
		fi
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item option_tool=''
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--tool='*) option_tool="${item#*=}" ;;
		'--'*) help "An unrecognised flag was provided: $item" ;;
		*) help "An unrecognised argument was provided: $item" ;;
		esac
	done

	# ensure tool
	__tool --tool={option_tool} --tools={all_tools} --help={help} || return

	# action
	if [[ $option_tool == 'ip' ]]; then
		# `ip route show dev eth0` is too specific, doesn't work on vms among others
		ip route show | echo-regexp -fon --regexp='via (.+?) ' --replace='$1' || return
	elif [[ $option_tool == 'netstat' ]]; then
		netstat -nr | echo-regexp -fon '(0.0.0.0|default) +(.+?) UG.+?(en0|eth0)' '$2' || return
	else
		return 19 # ENODEV 19 Operation not supported by device
	fi
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	what_is_my_gateway "$@"
fi
