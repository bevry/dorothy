#!/usr/bin/env bash

# https://github.com/pemistahl/grex
# regexp builder

# https://github.com/pemistahl/grex/releases
# grex-v1.4.2-aarch64-apple-darwin.tar.gz
# grex-v1.4.2-x86_64-apple-darwin.tar.gz
# grex-v1.4.2-x86_64-pc-windows-msvc.zip
# grex-v1.4.2-x86_64-unknown-linux-musl.tar.gz

function setup_util_grex() (
	source "$DOROTHY/sources/bash.bash"

	# improve performance for detectable utilities with conditional assets
	if setup-util --check --cli=grex "$@"; then
		return 0
	fi

	# setup
	local arch options=(
		--cli='grex'
		"$@"
		BREW='grex'
		CARGO='grex'
		CHOCO='grex'
		SCOOP='grex'
	)
	function __get_github_asset_url {
		local suffix="$1" regexp
		regexp="$(echo-escape-regexp -- "$suffix")$" || return $?
		github-download --dry --slug='pemistahl/grex' --latest --asset-regexp="$regexp" | echo-first-line || return $?
	}
	function __add_download_option {
		local suffix="$1" file="$2" url
		url="$(__get_github_asset_url "$suffix")" || return $?
		options+=(
			DOWNLOAD="$url"
			DOWNLOAD_ARCHIVE_GLOB="$file"
		)
	}
	arch="$(__get_arch)"
	if __is_macos; then
		if [[ $arch == 'a64' ]]; then
			__add_download_option '-aarch64-apple-darwin.tar.gz' 'grex' || :
		elif [[ $arch == 'x64' ]]; then
			__add_download_option '-x86_64-apple-darwin.tar.gz' 'grex' || :
		fi
	elif __is_linux; then
		if [[ $arch == 'x64' ]]; then
			__add_download_option '-x86_64-unknown-linux-musl.tar.gz' 'grex' || :
		fi
	elif is-system --windows; then
		if [[ $arch == 'x64' ]]; then
			__add_download_option '-x86_64-pc-windows-msvc.zip' 'grex.exe' || :
		fi
	fi
	setup-util "${options[@]}"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	setup_util_grex "$@"
fi
