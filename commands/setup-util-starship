#!/usr/bin/env bash

# https://starship.rs
# https://starship.rs/guide/#ðŸš€-installation
# cross-shell prompt

# https://github.com/starship/starship/releases
# starship-aarch64-apple-darwin.tar.gz
# starship-aarch64-pc-windows-msvc.zip
# starship-aarch64-unknown-linux-musl.tar.gz
# starship-arm-unknown-linux-musleabihf.tar.gz
# starship-i686-pc-windows-msvc.msi
# starship-i686-pc-windows-msvc.zip
# starship-i686-unknown-linux-musl.tar.gz
# starship-x86_64-apple-darwin.tar.gz
# starship-x86_64-pc-windows-msvc.msi
# starship-x86_64-pc-windows-msvc.zip
# starship-x86_64-unknown-freebsd.tar.gz
# starship-x86_64-unknown-linux-gnu.tar.gz
# starship-x86_64-unknown-linux-musl.tar.gz

function setup_util_starship() (
	source "$DOROTHY/sources/bash.bash"

	# options
	local option_reconfigure='yes'
	__flag --target={option_reconfigure} --name='reconfigure' --affirmative --coerce -- "$@"

	# helpers
	function __reconfigure {
		# if reconfigure is not desired, then don't reconfigure
		if [[ $option_reconfigure == 'no' ]]; then
			return 0
		fi

		# if starship, note fonts
		if __command_exists -- starship; then
			__print_style \
				'If you see unknown icons while using Starship, you probably require fonts:' --newline \
				--code='setup-util-noto-emoji # for emojis' --newline \
				--code='setup-util-nerd-fonts # for glyphs' --newline \
				'Then set your terminal to use one of the installed fonts.' || return
		fi

		# reconfigure nushell regardless of starship existence
		if __command_exists -- nu; then
			setup-util-nu --quiet || return
		fi
	}

	# improve performance for detectable utilities with conditional assets
	if setup-util --check --cli=starship "$@"; then
		__configure || return
		return 0
	fi

	# don't interfere with github download:
	# INSTALLER='https://starship.rs/install.sh'
	local arch options=(
		--name='Starship'
		--cli='starship'
		"$@"
		BREW='starship'
		SCOOP='starship'
	)
	function __get_github_asset_url {
		local regexp
		regexp="$(echo-escape-regexp -- "$1")$"
		github-download \
			--dry \
			--slug='starship/starship' \
			--latest \
			--asset-regexp="$regexp" | echo-first-line || return
	}
	function __add_download_option {
		local suffix="$1" glob="$2" url
		url="$(__get_github_asset_url "$suffix")" || return
		options+=(
			DOWNLOAD="$url"
			DOWNLOAD_ARCHIVE_GLOB="$glob"
		)
	}
	arch="$(get-arch)" || return
	if is-mac; then
		if [[ $arch == 'a64' ]]; then
			__add_download_option '-aarch64-apple-darwin.tar.gz' 'starship' || return
		elif [[ $arch == 'x64' ]]; then
			__add_download_option '-x86_64-apple-darwin.tar.gz' 'starship' || return
		fi
	elif is-linux; then
		if [[ $arch == 'a64' ]]; then
			__add_download_option '-aarch64-unknown-linux-musl.tar.gz' 'starship' || return
		elif [[ $arch == 'a32' ]]; then
			__add_download_option '-arm-unknown-linux-musl.tar.gz' 'starship' || return
		elif [[ $arch == 'x64' ]]; then
			__add_download_option '-x86_64-unknown-linux-musl.tar.gz' 'starship' || return
		elif [[ $arch == 'x32' ]]; then
			__add_download_option '-i686-unknown-linux-musl.tar.gz' 'starship' || return
		fi
	elif is-windows; then
		if [[ $arch == 'a64' ]]; then
			__add_download_option '-aarch64-pc-windows-msvc.zip' 'starship.exe' || return
		elif [[ $arch == 'x64' ]]; then
			__add_download_option '-x86_64-pc-windows-msvc.zip' 'starship.exe' || return
		elif [[ $arch == 'x32' ]]; then
			__add_download_option '-i686-pc-windows-msvc.zip' 'starship.exe' || return
		fi
	fi
	setup-util "${options[@]}" || return
	# .msi failed with: This installation package could not be opened. Contact the application vendor to verify that this is a valid Windows Installer package.
	#
	# function add_installer_option {
	# 	options+=(
	# 		INSTALLER="$(__get_github_asset_url "$1")"
	# 		INSTALLER_OPEN=yes
	# 	)
	# }
	# add_installer_option '-x86_64-pc-windows-msvc.msi'
	# add_installer_option '-i686-pc-windows-msvc.msi'

	# configure
	__configure || return
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	setup_util_starship "$@"
fi
