#!/usr/bin/env bash

# https://github.com/dandavison/delta
# diff alternative

# https://github.com/dandavison/delta/releases
# delta-0.16.5-aarch64-apple-darwin.tar.gz
# delta-0.16.5-aarch64-unknown-linux-gnu.tar.gz
# delta-0.16.5-arm-unknown-linux-gnueabihf.tar.gz
# delta-0.16.5-i686-unknown-linux-gnu.tar.gz
# delta-0.16.5-x86_64-apple-darwin.tar.gz
# delta-0.16.5-x86_64-pc-windows-msvc.zip
# delta-0.16.5-x86_64-unknown-linux-gnu.tar.gz
# delta-0.16.5-x86_64-unknown-linux-musl.tar.gz
# git-delta-musl_0.16.5_amd64.deb
# git-delta_0.16.5_amd64.deb
# git-delta_0.16.5_arm64.deb
# git-delta_0.16.5_armhf.deb
# git-delta_0.16.5_i386.deb

function setup_util_delta() (
	source "$DOROTHY/sources/bash.bash"

	# improve performance for detectable utilities with conditional assets
	if setup-util --check --cli=delta "$@"; then
		return 0
	fi

	# setup
	local arch options=(
		--cli='delta'
		"$@"
		AUR='git-delta-bin'
		BREW='git-delta'
		BSD='git-delta'
		CARGO='git-delta'
		CHOCO='delta'
		EMERGE='dev-util/git-delta'
		NIX='nixpkgs.gitAndTools.delta'
		PORT='git-delta'
		RPM='git-delta'
		SCOOP='delta'
		XBPS='delta'
		ZYPPER='git-delta'
	)
	function __get_github_asset_url {
		local suffix="$1" regexp
		regexp="$(echo-escape-regexp -- "$suffix")$" || return $?
		github-download --dry --slug='dandavison/delta' --latest --asset-regexp="$regexp" | echo-first-line || return $?
	}
	function __add_download_option {
		local suffix="$1" file="$2" url
		url="$(__get_github_asset_url "$suffix")" || return $?
		options+=(
			DOWNLOAD="$url"
			DOWNLOAD_ARCHIVE_GLOB="*/$file"
		)
	}
	function __add_deb_option {
		local suffix="$1" url
		url="$(__get_github_asset_url "$suffix")" || return $?
		options+=(DEB="$url")
	}
	arch="$(__get_arch)"
	if __is_macos; then
		if [[ $arch == 'a64' ]]; then
			__add_download_option '-aarch64-apple-darwin.tar.gz' 'delta' || :
		elif [[ $arch == 'x64' ]]; then
			__add_download_option '-x86_64-apple-darwin.tar.gz' 'delta' || :
		fi
	elif __is_linux; then
		if [[ $arch == 'a64' ]]; then
			__add_deb_option '_arm64.deb' || :
			__add_download_option '-aarch64-unknown-linux-gnu.tar.gz' 'delta' || :
		elif [[ $arch == 'a32' ]]; then
			__add_deb_option '_armhf.deb' || :
			__add_download_option '-arm-unknown-linux-gnueabihf.tar.gz' 'delta' || :
		elif [[ $arch == 'x64' ]]; then
			__add_deb_option '_amd64.deb' || :
			__add_download_option '-x86_64-unknown-linux-musl.tar.gz' 'delta' || :
		elif [[ $arch == 'x32' ]]; then
			__add_deb_option '_i386.deb' || :
			__add_download_option '-i686-unknown-linux-gnu.tar.gz' 'delta' || :
		fi
	elif is-system --windows; then
		if [[ $arch == 'x64' ]]; then
			__add_download_option '-x86_64-pc-windows-msvc.zip' 'delta.exe' || :
		fi
	fi
	setup-util "${options[@]}"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	setup_util_delta "$@"
fi
