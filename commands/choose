#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

# timeout
# pid="$BASHPID"
# timeout="${TIMEOUT:-3600}"  # timeout one hour
# ( sleep "$timeout" && kill "$pid" ) &
# ^ this works for timeout, but prevents the select from returning

# choose
select key in "$@"; do
	test -n "$key" && break
done > /dev/tty

# send result
echo "$key"

# the above does not support the enter key
# nor the arrow keys
# nor the escape key
# so we should bring in `choose-multiple` and make it support single selections, as well as number selection
