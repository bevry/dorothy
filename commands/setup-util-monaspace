#!/usr/bin/env bash

# https://github.com/githubnext/monaspace
# https://github.com/githubnext/monaspace/releases

function setup_util_monaspace() (
	source "$DOROTHY/sources/bash.bash"

	# improve performance for detectable utilities with conditional assets
	if setup-util "$@" --check --font='Monaspace*'; then
		return 0
	fi

	# setup
	function get_github_asset_url {
		# downloading the tarball includes all fonts variations, which is like a GB
		# github-download --dry --slug='githubnext/monaspace' --latest
		# this just fetches variable, which is 2MB
		github-download --dry --slug='githubnext/monaspace' --latest --asset-regexp='^monaspace-variable-v[0-9.]+\.zip$'
	}
	local options=(
		--name='Monaspace'
		--font='Monaspace*'
		"$@"
		CASK='font-monaspace-var'
		DOWNLOAD="$(get_github_asset_url)"
		# DOWNLOAD_ARCHIVE_GLOB='*/fonts/*/*.{otf,ttf}' # <-- for tarball
		DOWNLOAD_ARCHIVE_GLOB='Variable Fonts/*/*.ttf' # <-- for specific variation
	)
	setup-util "${options[@]}"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	setup_util_monaspace "$@"
fi
