#!/usr/bin/env bash

# https://zsh.sourceforge.io

# https://packages.debian.org/sid/amd64/zsh/filelist
# /bin/rzsh
# /bin/zsh
# /bin/zsh5

function setup_util_zsh() (
	source "$DOROTHY/sources/bash.bash"

	# improve performance
	if is-needle --quiet "$@" && ! is-needle --upgrade "$@" && ! is-needle --uninstall "$@" && command-exists zsh; then
		return 0
	fi

	# https://github.com/ohmyzsh/ohmyzsh/wiki/Installing-ZSH
	local options=(
		--name='zsh'
		--cli='zsh'
		"$@"
		APK='zsh' # ALPINE
		APT='zsh' # UBUNTU
		AUR='zsh' # ARCH
		BREW='zsh'
		BSD='zsh'
		EMERGE='zsh' # GENTOO
		EOPKG='zsh'  # SOLUS
		PORT='zsh'
		RPM='zsh'    # FEDORA
		XBPS='zsh'   # VOID
		ZYPPER='zsh' # SUSE
	)
	setup-util "${options[@]}"

	# make oh-my-zsh a seperate installer if desired
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	setup_util_zsh "$@"
fi
