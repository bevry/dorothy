#!/usr/bin/env bash

function echo-escape-special() (
	source "$DOROTHY/sources/bash.bash"

	function help {
		cat <<-EOF >/dev/stderr
			ABOUT:
			For each input, output its escaped form.

			USAGE:
			echo-escape-special <...input>
			echo-lines <...input> | echo-escape-special

			EXAMPLE:

			echo-escape-special "\$(echo-style --green=sup)"

			    $'\E[32msup?\E[39m'
			    # exit status: 0

			echo-style --green=sup | echo-escape-special

			    $'\E[32msup?\E[39m'
			    # exit status: 0

		EOF
		return 22 # Invalid argument
	}

	function on_input {
		printf '%q' "$1"
	}

	source "$DOROTHY/sources/stdinargs.bash"
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	echo-escape-special "$@"
fi
