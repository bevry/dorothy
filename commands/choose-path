#!/usr/bin/env bash

function choose_path() (
	source "$DOROTHY/sources/bash.bash"

	# =====================================
	# Arguments

	function help {
		cat <<-EOF >&2
			ABOUT:
			Select a basename from a series of paths, outputting the selection as an absolute path.

			USAGE:
			choose-path [...options forwarded to choose] -- ...<path>
		EOF
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item option_paths=() options=()
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--')
			option_paths+=("$@")
			shift "$#"
			break
			;;
		*) options+=("$item") ;;
		esac
	done

	# check
	if [[ ${#option_paths[@]} -eq 0 ]]; then
		help 'No <path>s provided.'
	fi

	# =====================================
	# Action

	# adjust args to paths and basenames
	local values=()
	__split --target={values} --no-zero-length --invoke -- \
		echo-paths-and-basenames -- "${option_paths[@]}"

	# ask with label
	choose --label "${options[@]}" -- "${values[@]}"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	choose_path "$@"
fi
