#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"
source "$DOROTHY/sources/splitlines.bash"

if test -n "${1-}"; then
	pushd "$1" > /dev/null
fi
nodes="$(ls -1)"

if test "${#nodes}" -eq 0; then
	# stderr echo 'empty'
	exit 1
fi

select node in $nodes; do
	echo -n "$(realpath "$node")"
	exit 0
done

