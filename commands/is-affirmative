#!/usr/bin/env bash

function is_affirmative_test() (
	source "$DOROTHY/sources/bash.bash"
	eval-tester --ignore-stderr --status=22 -- is-affirmative --help
)

function is_affirmative() (
	source "$DOROTHY/sources/bash.bash"

	function __help {
		__print_help "$@" <<-EOF || return $?
			ABOUT:
			Check if <input> is an affirmative value.

			USAGE:
			\`is-affirmative [...options] [--] ...<input>\`

			OPTIONS:
			<input>
			    Input to check is an affirmative value.

			--ignore-empty:
			    Ignore/skip empty values.

			RETURNS:
			[0] if all <input>s are affirmative.
			[1] if any <input>s are non-affirmative.
			[91] if invalid values are provided, or no <input>s are provided.
		EOF
		return 22 # EINVAL 22 Invalid argument
	}

	if [[ $* == '--help' ]]; then
		__help || return $?
	else
		__is_affirmative "$@" || return $?
	fi
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	if [[ $* == '--test' ]]; then
		is_affirmative_test
	else
		is_affirmative "$@"
	fi
fi
