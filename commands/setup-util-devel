#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

env NAME='Build Essentials' \
	APT='build-essential' \
	BREW='coreutils' \
	PAMAC='base-devel' \
	YUM='coreutils' \
	setup-util

env CLI=clang \
	APT=clang \
	BREW=clang \
	PACMAN=clang \
	YUM=clang \
	setup-util

env CLI=cmake \
	APT=cmake \
	BREW=cmake \
	PACMAN=cmake \
	YUM=cmake \
	setup-util

if command-missing pacman; then
	# llvm-gcc is bundled with arch it seems, as it is not exposed by the cli yet pacman says it is installed
	env CLI=llvm-gcc \
		APT=llvm \
		BREW=llvm \
		PACMAN=llvm \
		YUM=llvm \
		setup-util
fi

env CLI=pkg-config \
	APT=pkg-config \
	BREW=pkg-config \
	PACMAN=pkg-config \
	YUM=pkg-config \
	setup-util

env NAME=libssl \
	APT=libssl-dev \
	BREW=openssl \
	PACMAN=openssl \
	YUM=openssl-devel \
	setup-util || :
