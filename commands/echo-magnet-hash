#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

# dependencies
source "$DOROTHY/sources/ripgrep.bash"

# act
function act {
	# shellcheck disable=2016
	hash="$(rg -o 'btih:([\w\d]+)' --replace '$1' <<<"$1" || :)"
	if test -n "$hash"; then
		echo "${hash,,}"
	fi
}
source "$DOROTHY/sources/stdinargs.bash"
