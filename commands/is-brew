#!/usr/bin/env bash

function is_brew_test() (
	source "$DOROTHY/sources/bash.bash"

	local expected_status
	if [[ -n ${HOMEBREW_PREFIX-} && -x "${HOMEBREW_PREFIX-}/bin/brew" ]]; then
		expected_status=0
	else
		expected_status=1
	fi
	eval-tester --status="$expected_status" -- \
		is-brew

	return 0
)
function is_brew() (
	source "$DOROTHY/sources/bash.bash"

	# =====================================
	# Arguments

	function help {
		cat <<-EOF >&2
			ABOUT:
			Checks if the system has Homebrew installed.

			USAGE:
			is-brew

			RETURNS:
			[0] if the system has Homebrew installed.
			[1] if the system does not have Homebrew installed.
		EOF
		if [[ $# -ne 0 ]]; then
			__print_error "$@"
		fi
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--'*) help "An unrecognised flag was provided: $item" ;;
		*) help "An unrecognised argument was provided: $item" ;;
		esac
	done

	# =====================================
	# Action

	# call the [bash.bash] helper
	__is_brew
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	if [[ $* == '--test' ]]; then
		is_brew_test
	else
		is_brew "$@"
	fi
fi
