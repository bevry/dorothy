#!/usr/bin/env bash

# https://github.com/rs/curlie?tab=readme-ov-file#install
# [curlie] wraps around [curl]

# https://github.com/rs/curlie/releases
# curlie_1.8.2_darwin_amd64.tar.gz
# curlie_1.8.2_darwin_arm64.tar.gz
# curlie_1.8.2_freebsd_386.tar.gz
# curlie_1.8.2_freebsd_amd64.tar.gz
# curlie_1.8.2_freebsd_arm64.tar.gz
# curlie_1.8.2_freebsd_armv6.tar.gz
# curlie_1.8.2_freebsd_armv7.tar.gz
# curlie_1.8.2_linux_386.deb
# curlie_1.8.2_linux_386.rpm
# curlie_1.8.2_linux_386.tar.gz
# curlie_1.8.2_linux_amd64.deb
# curlie_1.8.2_linux_amd64.rpm
# curlie_1.8.2_linux_amd64.tar.gz
# curlie_1.8.2_linux_arm64.deb
# curlie_1.8.2_linux_arm64.rpm
# curlie_1.8.2_linux_arm64.tar.gz
# curlie_1.8.2_linux_armv6.deb
# curlie_1.8.2_linux_armv6.rpm
# curlie_1.8.2_linux_armv6.tar.gz
# curlie_1.8.2_linux_armv7.deb
# curlie_1.8.2_linux_armv7.rpm
# curlie_1.8.2_linux_armv7.tar.gz
# curlie_1.8.2_linux_ppc64le.deb
# curlie_1.8.2_linux_ppc64le.rpm
# curlie_1.8.2_linux_ppc64le.tar.gz
# curlie_1.8.2_linux_s390x.deb
# curlie_1.8.2_linux_s390x.rpm
# curlie_1.8.2_linux_s390x.tar.gz
# curlie_1.8.2_windows_386.zip
# curlie_1.8.2_windows_amd64.zip
# curlie_1.8.2_windows_arm64.zip
# curlie_1.8.2_windows_armv6.zip
# curlie_1.8.2_windows_armv7.zip

# https://repology.org/project/curlie/versions

function setup_util_curlie() (
	source "$DOROTHY/sources/bash.bash"

	# improve performance for detectable utilities with conditional assets
	if setup-util --check --cli=curlie "$@"; then
		return 0
	fi

	# despite docs, no apk
	local arch options=(
		--cli='curlie'
		"$@"
		AUR='curlie'
		BREW='curlie'
		EMERGE='net-misc/curlie' # GENTOO
		GO='github.com/rs/curlie'
		NIX='curlie'
		PKG='curlie'
		PORT='curlie'
		SCOOP='curlie'
		ZYPPER='curlie' # OPENSUSE
	)
	function get_github_asset_url {
		github-download \
			--dry \
			--slug='rs/curlie' \
			--latest \
			--asset-regexp="$(echo-escape-regexp -- "$1")$" | echo-first-line || :
	}
	function add_download_option {
		options+=(
			DOWNLOAD="$(get_github_asset_url "$1")"
			DOWNLOAD_ARCHIVE_GLOB="$2"
		)
	}
	function add_deb_option {
		options+=(
			DEB="$(get_github_asset_url "$1")"
		)
	}
	function add_rpm_option {
		options+=(
			RPM="$(get_github_asset_url "$1")"
		)
	}
	arch="$(get-arch)"
	if is-mac; then
		if [[ $arch == 'a64' ]]; then
			add_download_option '_darwin_arm64.tar.gz' 'curlie'
		else
			add_download_option '_darwin_amd64.tar.gz' 'curlie'
		fi
	elif is-linux; then
		if [[ $arch == 'a64' ]]; then
			add_deb_option '_linux_arm64.deb'
			add_rpm_option '_linux_arm64.rpm'
			add_download_option '_linux_arm64.tar.gz' 'curlie'
		elif [[ $arch == 'a32' ]]; then
			add_deb_option '_linux_armv7.deb'
			add_rpm_option '_linux_armv7.rpm'
			add_download_option '_linux_armv7.tar.gz' 'curlie'
		elif [[ $arch == 'x64' ]]; then
			add_deb_option '_linux_2_linux_amd64.deb'
			add_rpm_option '_linux_2_linux_amd64.rpm'
			add_download_option '_linux_2_linux_amd64.tar.gz' 'curlie'
		elif [[ $arch == 'x32' ]]; then
			add_deb_option '_linux_386.deb'
			add_rpm_option '_linux_386.rpm'
			add_download_option '_linux_386.tar.gz' 'curlie'
		fi
	elif is-wsl; then
		if [[ $arch == 'a64' ]]; then
			add_download_option '_windows_arm64.zip' 'curlie.exe'
		elif [[ $arch == 'a32' ]]; then
			add_download_option '_windows_armv7.zip' 'curlie.exe'
		elif [[ $arch == 'x64' ]]; then
			add_download_option '_windows_amd64.zip' 'curlie.exe'
		elif [[ $arch == 'x32' ]]; then
			add_download_option '_windows_386.zip' 'curlie.exe'
		fi
	fi
	setup-util "${options[@]}"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	setup_util_curlie "$@"
fi
