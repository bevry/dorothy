#!/usr/bin/env bash
source "$DOROTHY/sources/essentials.sh"
source "$DOROTHY/sources/strict.bash"
source "$DOROTHY/sources/globstar.bash"
source "$DOROTHY/sources/nullglob.bash"
if test "$NULLGLOB" = 'no' -o "$GLOBSTAR" = 'no'; then
	exit 1
fi

# perform the act
chmod 700 ~/.ssh
find ~/.ssh/*.pub | while read -r f; do
	chmod 600 "$f"
	ok chmod 600 "${f%.pub}"
done

find ~/.ssh/*.pub | while read -r f; do
	p="${f%.pub}"
	if test -f "$p"; then
		if is-mac; then
			/usr/bin/ssh-add -K "$p"
		else
			ssh-add "$p"
		fi
	fi
done