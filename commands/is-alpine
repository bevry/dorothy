#!/usr/bin/env bash

function is_alpine() (
	source "$DOROTHY/sources/bash.bash"

	# =====================================
	# Arguments

	function help {
		cat <<-EOF >&2
			ABOUT:
			Checks if the system is Alpine Linux.

			USAGE:
			is-alpine

			RETURNS:
			[0] if the system is Alpine Linux
			[1] if the system is not Alpine Linux
		EOF
		if [[ $# -ne 0 ]]; then
			__print_error "$@"
		fi
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--'*) help 'An unrecognised flag was provided: ' --variable-value={item} ;;
		*) help 'An unrecognised argument was provided: ' --variable-value={item} ;;
		esac
	done

	# =====================================
	# Action

	if [[ -f /etc/os-release ]] && grep --quiet --ignore-case --fixed-strings --regexp='ID=alpine' -- /etc/os-release 2>/dev/null; then
		return 0
	else
		return 1
	fi
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	is_alpine "$@"
fi
