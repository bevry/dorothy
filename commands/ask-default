#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

question="${1:?"USAGE: ask-default <QUESTION> <DEFAULT>"}"
fallback="${2:?"USAGE: ask-default <question> <DEFAULT>"}"

stderr echo "$question [$fallback]"
read -r -p "> " result
if test -z "$result"; then
	echo "$fallback"
else
	echo "$result"
fi
