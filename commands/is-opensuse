#!/usr/bin/env bash

function is_opensuse() (
	source "$DOROTHY/sources/bash.bash"

	# =====================================
	# Arguments

	function help {
		cat <<-EOF >&2
			ABOUT:
			Checks if the system is OpenSUSE

			USAGE:
			is-opensuse

			RETURNS:
			[0] if the system is OpenSUSE
			[1] if the system is not OpenSUSE
		EOF
		if [[ $# -ne 0 ]]; then
			__print_error "$@"
		fi
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--'*) help 'An unrecognised flag was provided: ' --variable-value={item} ;;
		*) help 'An unrecognised argument was provided: ' --variable-value={item} ;;
		esac
	done

	# =====================================
	# Action

	# NAME="openSUSE Tumbleweed"
	# ID="opensuse-tumbleweed"
	# ID_LIKE="opensuse suse"
	is-linux --regexp='openSUSE' || return $?
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	is_opensuse "$@"
fi
