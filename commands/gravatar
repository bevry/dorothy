#!/usr/bin/env bash

function gravatar() (
	source "$DOROTHY/sources/bash.bash"

	# =====================================
	# Arguments

	function help {
		cat <<-EOF >/dev/stderr
			ABOUT:
			Get the URL of the email's gravatar.

			USAGE:
			gravatar [...options] [<email>]

			OPTIONS:
			--open
			    Open the gravatar in your web browser.
		EOF
		if test "$#" -ne 0; then
			echo-error "$@"
		fi
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item option_email='' option_open='no'
	while test "$#" -ne 0; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--no-open'* | '--open'*)
			option_open="$(get-flag-value --affirmative --fallback="$option_open" -- "$item")"
			;;
		'--'*) help "An unrecognised flag was provided: $item" ;;
		*)
			if test -z "$option_email"; then
				option_email="$item"
			else
				help "An unrecognised argument was provided: $item"
			fi
			;;
		esac
	done

	# ensure
	option_email="$(
		ask --required \
			--question="Enter the email to get the Gravatar for" \
			--default="$option_email"
	)"

	# =====================================
	# Act

	local hash url
	hash="$(echo-checksum --algorithm=md5 -- "$option_email")"
	url="https://www.gravatar.com/avatar/${hash}?s=2048"
	print_line "$url"
	if test "$option_open" = 'yes'; then
		open "$url"
	fi
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	gravatar "$@"
fi
