#!/usr/bin/env bash

# https://github.com/RsyncProject/rsync

# https://packages.debian.org/sid/amd64/rsync/filelist
# /usr/bin/rrsync
# /usr/bin/rsync
# /usr/bin/rsync-ssl

# https://github.com/RsyncProject/rsync/releases/tag/v3.4.1
# only source code

# https://repology.org/project/rsync/versions

function setup_util_rsync() (
	source "$DOROTHY/sources/bash.bash"

	# setup
	local options=(
		--cli='rsync'
		"$@"
		APK='rsync'
		APT='rsync'
		AUR='rsync'
		BREW='rsync'
		EMERGE='rsync'
		EOPKG='rsync'
		NIX='rsync'
		RPM='rsync'
		ZYPPER='rsync'
	)
	setup-util "${options[@]}"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	setup_util_rsync "$@"
fi
