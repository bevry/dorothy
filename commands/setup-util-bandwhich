#!/usr/bin/env bash

# https://github.com/imsnif/bandwhich
# bandwidth monitor

# https://github.com/imsnif/bandwhich/releases
# bandwhich-v0.20.0-x86_64-unknown-linux-musl.tar.gz

# https://repology.org/project/bandwhich/versions

function setup_util_bandwhich() (
	source "$DOROTHY/sources/bash.bash"

	# improve performance for detectable utilities with conditional assets
	if setup-util --check --cli=bandwhich "$@"; then
		return 0
	fi

	# setup
	local arch options=(
		--cli='bandwhich'
		"$@"
		AUR='bandwhich' # ARCH
		BREW='bandwhich'
		BSD='bandwhich'
		CARGO='bandwhich'
		DNF_COPR='atim/bandwhich'
		DNF='bandwhich' # FEDORA
		NIX='nixpkgs.bandwhich'
		XBPS='bandwhich' # VOID
	)
	function __get_github_asset_url {
		local regexp
		regexp="$(echo-escape-regexp -- "$1")$" || return $?
		github-download --dry --slug='imsnif/bandwhich' --latest --asset-regexp="$regexp" | echo-first-line || return $?
	}
	function __add_download_option {
		local url
		url="$(__get_github_asset_url "$1")" || return $?
		options+=(
			DOWNLOAD="$url"
			DOWNLOAD_ARCHIVE_GLOB='**/bandwhich'
		)
	}
	arch="$(__get_arch)"
	if [[ $arch == 'x64' ]] && __is_linux; then
		__add_download_option 'x86_64-unknown-linux-musl.tar.gz' || :
	fi
	setup-util "${options[@]}"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	setup_util_bandwhich "$@"
fi
