#!/usr/bin/env bash

function is_snap() (
	source "$DOROTHY/sources/bash.bash"

	# =====================================
	# Arguments

	function __help {
		cat <<-EOF >&2 || return
			ABOUT:
			Checks if the system has $(__print_style --code=snap) available, which is the preferred package manager on Ubuntu.

			USAGE:
			is-snap

			RETURNS:
			[0] if the system has snap
			[1] if the system does not have snap, or is running on WSL
		EOF
		if [[ $# -ne 0 ]]; then
			__print_error "$@" || return
		fi
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') __help || return ;;
		'--'*) __help 'An unrecognised flag was provided: ' --variable-value={item} || return ;;
		*) __help 'An unrecognised argument was provided: ' --variable-value={item} || return ;;
		esac
	done

	# =====================================
	# Action

	if __command_exists -- snap && ! is-wsl; then
		return 0
	else
		return 1
	fi
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	is_snap "$@"
fi
