#!/usr/bin/env bash

# https://www.kernel.org/doc/html/latest/admin-guide/sysrq.html
# https://forum.manjaro.org/t/howto-reboot-turn-off-your-frozen-computer-reisub-reisuo/3855?u=balupton

function setup-linux-recovery() (
	source "$DOROTHY/sources/strict.bash"

	# check for compatibility
	if ! is-linux; then
		echo-style --notice="[$0] is only intended to be run on Linux systems, skipping." >/dev/stderr
		return 0
	fi
	if is-wsl; then
		echo-style --notice="[$0] is not applicable on WSL, skipping." >/dev/stderr
		return 0
	fi
	if is-alpine; then
		echo-style --notice="[$0] is not applicable on Alpine, skipping." >/dev/stderr
		return 0
	fi

	# =====================================
	# Action

	echo-segment --h1='Update GRUB with Recovery Hotkeys'

	sudo-helper --inherit \
		-- config-helper --file='/etc/sysctl.d/99-sysctl.conf' -- \
		--field='kernel.sysrq' --no-quote --value=1

	if grub-helper; then
		echo "ğŸ’ğŸ¼â€â™€ï¸ If your Linux machine ever locks up, you can follow the instructions here to safely shutdown/reboot: ğŸ’ğŸ¼â€â™€ï¸"
		echo-style '    ' --code='https://forum.manjaro.org/t/3855?u=balupton'
	else
		stderr echo-style --error='Failed to upgrade grub with the recovery options. Please send a PR to Dorothy to add support. Continuing...'
	fi

	echo-segment --g1='Update GRUB with Recovery Hotkeys'
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	setup-linux-recovery "$@"
fi
