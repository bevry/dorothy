#!/usr/bin/env bash

function echo_split() (
	source "$DOROTHY/sources/stdinargs.bash"

	# =====================================
	# Arguments

	function help {
		cat <<-EOF >&2
			ABOUT:
			Split <input> by <needle> and print each part on a new line.

			USAGE:
			echo-split <needle> [...options] [--] ...<input>
			echo-lines ...<input> | echo-split <needle> [...options]

			OPTIONS:
			<string> | --string=<string> | --needle=<string>
			    The string to split the <input> at, the string itself is the delimiter.

			--characters=<characters>
			    The characters to split the <input> at, each character is a delimiter.

			--no-zero_length
			    Ignore zero_length results.

			$(stdinargs_options_help --)

			USAGE:
			echo-split --needle=' ' -- 'a b' 'c d'
			echo-lines -- 'a b' 'c d' | echo-split --needle=' ' --stdin

			    a
			    b
			    c
			    d
			    # exit status: 0
		EOF
		if [[ $# -ne 0 ]]; then
			echo-error "$@"
		fi
		return 22 # EINVAL 22 Invalid argument
	}

	# process our own arguments, delegate everything else to stdinargs
	local item option_split_args=() option_args=()
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--no-zero-length'* | '--zero-length'*)
			__flag --source+target={item} --affirmative
			if [[ $item == 'yes' ]]; then
				option_split_args+=('--no-zero-length')
			fi
			;;
		'--delimiter='* | '--needle='*) option_split_args+=("--delimiter=${item#*=}") ;;
		'--delimiters='* | '--characters='*) option_split_args+=("--delimiters=${item#*=}") ;;
		# forward to stdinargs, however support mixing and matching of our options, with stdinargs options
		'--')
			option_args+=("$item" "$@")
			shift $#
			break
			;;
		'--'*) option_args+=("$item") ;;
		*) option_args+=("$item") ;;
		esac
	done

	# =====================================
	# Action

	function __on_piece {
		local value="$1" values=()
		__split --source={value} --target={values} "${option_split_args[@]}" || return
		__print_lines "${values[@]}" || return
	}

	stdinargs "${option_args[@]}"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	echo_split "$@"
fi
