#!/usr/bin/env bash

function echo_split_test() (
	source "$DOROTHY/sources/bash.bash"
	eval-tester --ignore-stderr --status=22 -- echo-split --help
)

function echo_split() (
	source "$DOROTHY/sources/stdinargs.bash"

	# =====================================
	# Arguments

	function help {
		__print_help "$@" <<-EOF || return $?
			ABOUT:
			Split <input> by <needle> and print each part on a new line.

			USAGE:
			\`echo-split <needle> [...options] [--] ...<input>\`
			\`echo-lines ...<input> | echo-split <needle> [...options]\`

			OPTIONS:
			--delimiter=<delimiter> | --between=<delimiter> | --needle=<delimiter>
			    The string to split the <input> at, the string itself is the delimiter.

			--delimiters=<delimiters> | --characters=<delimiters>
			    The characters to split the <input> at, each character is a delimiter.

			--no-zero-length
			    Ignore zero-length results.

			$(__stdinargs__help_options --)

			EXAMPLES:
			\`\`\`
			echo-split --delimiter=' ' -- 'a b' 'c d'
			echo-lines -- 'a b' 'c d' | echo-split --delimiter=' ' --stdin
			\`\`\`
			Outputs:
			\`a
			b
			c
			d\`
			Returns: [0]
		EOF
		return 22 # EINVAL 22 Invalid argument
	}

	# process our own arguments, delegate everything else to stdinargs
	local item option_split_args=() option_args=()
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--no-zero-length'* | '--zero-length'*) option_split_args+=("$item") ;;
		'--delimiter='* | '--between='* | '--needle='*) option_split_args+=("--delimiter=${item#*=}") ;;
		'--delimiters='* | '--characters='*) option_split_args+=("--delimiters=${item#*=}") ;;
		# forward to stdinargs, however support mixing and matching of our options, with stdinargs options
		'--')
			option_args+=("$item" "$@")
			shift $#
			break
			;;
		'--'*) option_args+=("$item") ;;
		*) help 'An unrecognised argument was provided: ' --variable-value={item} ;;
		esac
	done

	# =====================================
	# Action

	function __on_piece {
		# trunk-ignore(shellcheck/SC2034)
		local value="$1" values=()
		__split --source={value} --target={values} "${option_split_args[@]}" || return $?
		__print_lines "${values[@]}" || return $?
	}

	stdinargs "${option_args[@]}"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	if [[ $* == '--test' ]]; then
		echo_split_test
	else
		echo_split "$@"
	fi
fi
