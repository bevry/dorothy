		--path="$root/targets/unexecutable-filled-dir/empty-subfile"
		--path="$root/targets/unexecutable-filled-dir/filled-subdir" --status=79
		--path="$root/targets/unexecutable-filled-dir/filled-subdir/empty-subdir" --status=79
		--path="$root/targets/unexecutable-filled-dir/filled-subfile" --status=27
		--path="$root/targets/unreadable-empty-file"
		--path="$root/targets/unreadable-filled-file" --status=27

