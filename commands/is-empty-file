		--path="$root/targets/empty-dir" --status=79
		--path="$root/targets/empty-file"
		--path="$root/targets/filled-dir/empty-subfile"
		--path="$root/targets/filled-dir/filled-subdir" --status=79
		--path="$root/targets/filled-dir/filled-subdir/empty-subdir" --status=79
		--path="$root/targets/filled-dir/filled-subfile" --status=27
		--path="$root/targets/filled-file" --status=27
		--path="$root/targets/unaccessible-empty-dir" --status=79
		--path="$root/targets/unaccessible-empty-file" --status="$(__is_fs_tests__print_root_or_nonroot 0 13)"
