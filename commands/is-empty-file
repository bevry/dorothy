		--path="$root/targets/unaccessible-filled-dir/empty-subfile" --status="$(__is_fs_tests__print_root_or_nonroot 0 13)"
		--path="$root/targets/unaccessible-filled-dir/filled-subdir" --status="$(__is_fs_tests__print_root_or_nonroot 79 13)"
		--path="$root/targets/unaccessible-filled-dir/filled-subdir/empty-subdir" --status="$(__is_fs_tests__print_root_or_nonroot 79 13)"
		--path="$root/targets/unaccessible-filled-dir/filled-subfile" --status="$(__is_fs_tests__print_root_or_nonroot 27 13)"
		--path="$root/targets/unaccessible-filled-file" --status="$(__is_fs_tests__print_root_or_nonroot 27 13)"
		--path="$root/targets/unexecutable-empty-dir" --status=79
		--path="$root/targets/unexecutable-empty-file"
		--path="$root/targets/unexecutable-filled-dir" --status=79
		--path="$root/targets/unexecutable-filled-dir/empty-subfile" --status="$(__is_fs_tests__print_root_or_nonroot 0 13)"
		--path="$root/targets/unexecutable-filled-dir/filled-subdir" --status="$(__is_fs_tests__print_root_or_nonroot 79 13)"
		--path="$root/targets/unexecutable-filled-dir/filled-subdir/empty-subdir" --status="$(__is_fs_tests__print_root_or_nonroot 79 13)"
		--path="$root/targets/unexecutable-filled-dir/filled-subfile" --status="$(__is_fs_tests__print_root_or_nonroot 27 13)"
		--path="$root/targets/unexecutable-filled-file" --status=27
		--path="$root/targets/unreadable-empty-dir" --status=79
		--path="$root/targets/unreadable-empty-file" --status="$(__is_fs_tests__print_root_or_nonroot 0 13)"
		--path="$root/targets/unreadable-filled-dir" --status=79
		--path="$root/targets/unreadable-filled-dir/empty-subfile"
		--path="$root/targets/unreadable-filled-dir/filled-subdir" --status=79
		--path="$root/targets/unreadable-filled-dir/filled-subdir/empty-subdir" --status=79
		--path="$root/targets/unreadable-filled-dir/filled-subfile" --status=27
		--path="$root/targets/unreadable-filled-file" --status="$(__is_fs_tests__print_root_or_nonroot 27 13)"
		--path="$root/targets/unwritable-empty-dir" --status=79
		--path="$root/targets/unwritable-empty-file"
		--path="$root/targets/unwritable-filled-dir" --status=79
		--path="$root/targets/unwritable-filled-dir/empty-subfile"
		--path="$root/targets/unwritable-filled-dir/filled-subdir" --status=79
		--path="$root/targets/unwritable-filled-dir/filled-subdir/empty-subdir" --status=79
		--path="$root/targets/unwritable-filled-dir/filled-subfile" --status=27
		--path="$root/targets/unwritable-filled-file" --status=27

		--path="$root/symlinks/empty-dir" --status=79
		--path="$root/symlinks/empty-file"
		--path="$root/symlinks/filled-dir--empty-subfile"
		--path="$root/symlinks/filled-dir--filled-subdir" --status=79
		--path="$root/symlinks/filled-dir--filled-subdir--empty-subdir" --status=79
		--path="$root/symlinks/filled-dir--filled-subfile" --status=27
		--path="$root/symlinks/filled-file" --status=27
		--path="$root/symlinks/unaccessible-empty-dir" --status=79
		--path="$root/symlinks/unaccessible-empty-file" --status="$(__is_fs_tests__print_root_or_nonroot 0 13)"
		--path="$root/symlinks/unaccessible-filled-dir" --status=79
		--path="$root/symlinks/unaccessible-filled-dir--empty-subfile" --status="$(__is_fs_tests__print_root_or_nonroot 0 13)"
		--path="$root/symlinks/unaccessible-filled-dir--filled-subdir" --status="$(__is_fs_tests__print_root_or_nonroot 79 13)"
		--path="$root/symlinks/unaccessible-filled-dir--filled-subdir--empty-subdir" --status="$(__is_fs_tests__print_root_or_nonroot 79 13)"
		--path="$root/symlinks/unaccessible-filled-dir--filled-subfile" --status="$(__is_fs_tests__print_root_or_nonroot 27 13)"
		--path="$root/symlinks/unaccessible-filled-file" --status="$(__is_fs_tests__print_root_or_nonroot 27 13)"
		--path="$root/symlinks/unexecutable-empty-dir" --status=79
		--path="$root/symlinks/unexecutable-empty-file"
		--path="$root/symlinks/unexecutable-filled-dir" --status=79
		--path="$root/symlinks/unexecutable-filled-dir--empty-subfile" --status="$(__is_fs_tests__print_root_or_nonroot 0 13)"
		--path="$root/symlinks/unexecutable-filled-dir--filled-subdir" --status="$(__is_fs_tests__print_root_or_nonroot 79 13)"
		--path="$root/symlinks/unexecutable-filled-dir--filled-subdir--empty-subdir" --status="$(__is_fs_tests__print_root_or_nonroot 79 13)"
		--path="$root/symlinks/unexecutable-filled-dir--filled-subfile" --status="$(__is_fs_tests__print_root_or_nonroot 27 13)"
		--path="$root/symlinks/unexecutable-filled-file" --status=27
		--path="$root/symlinks/unreadable-empty-dir" --status=79
		--path="$root/symlinks/unreadable-empty-file" --status="$(__is_fs_tests__print_root_or_nonroot 0 13)"
		--path="$root/symlinks/unreadable-filled-dir" --status=79
		--path="$root/symlinks/unreadable-filled-dir--empty-subfile"
		--path="$root/symlinks/unreadable-filled-dir--filled-subdir" --status=79
		--path="$root/symlinks/unreadable-filled-dir--filled-subdir--empty-subdir" --status=79
		--path="$root/symlinks/unreadable-filled-dir--filled-subfile" --status=27
		--path="$root/symlinks/unreadable-filled-file" --status="$(__is_fs_tests__print_root_or_nonroot 27 13)"
		--path="$root/symlinks/unwritable-empty-dir" --status=79
		--path="$root/symlinks/unwritable-empty-file"
		--path="$root/symlinks/unwritable-filled-dir" --status=79
		--path="$root/symlinks/unwritable-filled-dir--empty-subfile"
		--path="$root/symlinks/unwritable-filled-dir--filled-subdir" --status=79
		--path="$root/symlinks/unwritable-filled-dir--filled-subdir--empty-subdir" --status=79
		--path="$root/symlinks/unwritable-filled-dir--filled-subfile" --status=27
		--path="$root/symlinks/unwritable-filled-file" --status=27
