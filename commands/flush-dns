#!/usr/bin/env bash

function flush_dns() (
	source "$DOROTHY/sources/bash.bash"

	# =====================================
	# Arguments

	function help {
		cat <<-EOF >&2
			ABOUT:
			Flush the system's DNS cache.

			USAGE:
			flush-dns
		EOF
		if [[ $# -ne 0 ]]; then
			__print_error "$@"
		fi
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--'*) help "An unrecognised flag was provided: $item" ;;
		*) help "An unrecognised argument was provided: $item" ;;
		esac
	done

	# =====================================
	# Action

	__print_style --h1='Flush DNS'

	# https://support.apple.com/en-us/HT202516
	if is-mac; then
		if __command_exists -- mDNSResponder; then
			eval-helper --quiet --elevate \
				--pending="$(__print_style --bold='Restarting: mDNSResponder')" \
				--success="$(__print_style --success='Restarted: mDNSResponder')" \
				--failure="$(__print_style --error='Failed to restart: mDNSResponder')" -- \
				killall -HUP mDNSResponder
		fi
		if __command_exists -- dscacheutil; then
			# doesn't need elevation
			eval-helper --quiet \
				--pending="$(__print_style --bold='Flushing: dscacheutil')" \
				--success="$(__print_style --success='Flushed: dscacheutil')" \
				--failure="$(__print_style --error='Failed to flush: dscacheutil')" -- \
				dscacheutil -flushcache
		fi
		if __command_exists -- discoveryutil; then
			eval-helper --quiet --elevate \
				--pending="$(__print_style --bold='Flushing: discoveryutil')" \
				--success="$(__print_style --success='Flushed: discoveryutil')" \
				--failure="$(__print_style --error='Failed to flush: discoveryutil')" -- \
				discoveryutil mdnsflushcache
		fi
	elif __command_exists -- resolvectl; then
		eval-helper --quiet --elevate \
			--pending="$(__print_style --bold='Flushing DNS cache via Systemd')" \
			--success="$(__print_style --success='Flushed DNS cache via Systemd')" \
			--failure="$(
				__print_style --error='Failed to flush DNS cache via Systemd.' ' ' --notice='If using an alternative DNS service, then this is expected.'
			)" -- \
			resolvectl flush-caches --no-pager || :
	else
		__print_error 'DNS flushing not yet implemented for this operating system.'
		return 19 # ENODEV 19 Operation not supported by device
	fi

	__print_style --g1="Flush DNS"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	flush_dns "$@"
fi
