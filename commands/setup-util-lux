#!/usr/bin/env bash

# https://github.com/iawia002/lux
# Fast and simple video download library and CLI tool written in Go

# https://github.com/iawia002/lux/releases
# lux_0.24.1_Darwin_arm64.tar.gz
# lux_0.24.1_Darwin_x86_64.tar.gz
# lux_0.24.1_Freebsd_i386.tar.gz
# lux_0.24.1_Freebsd_x86_64.tar.gz
# lux_0.24.1_Linux_arm64.tar.gz
# lux_0.24.1_Linux_armv6.tar.gz
# lux_0.24.1_Linux_i386.tar.gz
# lux_0.24.1_Linux_x86_64.tar.gz
# lux_0.24.1_Netbsd_arm64.tar.gz
# lux_0.24.1_Netbsd_armv6.tar.gz
# lux_0.24.1_Netbsd_i386.tar.gz
# lux_0.24.1_Netbsd_x86_64.tar.gz
# lux_0.24.1_Openbsd_arm64.tar.gz
# lux_0.24.1_Openbsd_i386.tar.gz
# lux_0.24.1_Openbsd_x86_64.tar.gz
# lux_0.24.1_Windows_arm64.zip
# lux_0.24.1_Windows_armv6.zip
# lux_0.24.1_Windows_i386.zip
# lux_0.24.1_Windows_x86_64.zip

function setup_util_lux() (
	source "$DOROTHY/sources/bash.bash"

	# setup
	local options=(
		--cli='lux'
		"$@"
		BREW='lux'
		GO='github.com/iawia002/lux'
		SCOOP='lux'
		XBPS='lux'
	)
	setup-util "${options[@]}"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	setup_util_lux "$@"
fi
