#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

file="${1:-'twitter_advertiser_list.pdf'}"
if is-missing "$file"; then
	{
		echo 'You need to download your advertiser list PDF file first.'
		echo 'Get it from: https://twitter.com/settings/your_twitter_data/audiences'
		echo 'Then run this command either in the same directory, or have the file as an argument.'
	} >/dev/stderr
	exit 1
fi

extract-pdf "$file" '@([^@]+)'
