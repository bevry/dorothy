#!/usr/bin/env bash

# https://github.com/ajeetdsouza/zoxide
# z/cd alternative

# apt option is requires debian testing, instead of debian stable

# https://github.com/ajeetdsouza/zoxide/releases
# zoxide-0.9.1-aarch64-apple-darwin.tar.gz
# zoxide-0.9.1-aarch64-pc-windows-msvc.zip
# zoxide-0.9.1-aarch64-unknown-linux-musl.tar.gz
# zoxide-0.9.1-arm-unknown-linux-musleabihf.tar.gz
# zoxide-0.9.1-armv7-unknown-linux-musleabihf.tar.gz
# zoxide-0.9.1-x86_64-apple-darwin.tar.gz
# zoxide-0.9.1-x86_64-pc-windows-msvc.zip
# zoxide-0.9.1-x86_64-unknown-linux-musl.tar.gz
# zoxide_0.9.1_amd64.deb
# zoxide_0.9.1_arm64.deb

# https://packages.debian.org/sid/amd64/zoxide/filelist
# /usr/bin/zoxide

function setup_util_zoxide() (
	source "$DOROTHY/sources/bash.bash"

	# improve performance
	if is-needle --quiet "$@" && ! is-needle --upgrade "$@" && ! is-needle --uninstall "$@" && command-exists zoxide; then
		return 0
	fi

	# setup
	local arch options=(
		--name='zoxide'
		--cli='z'
		"$@"
		AUR='zoxide-bin' # ARCH
		APK='zoxide'     # ALPINE
		BREW='zoxide'
		CARGO='zoxide'
		CONDA_CHANNEL='conda-forge'
		CONDA='zoxide'
		DNF_COPR='atim/zoxide'
		DNF='zoxide' # FEDORA
		NIX='nixpkgs.zoxide'
		XBPS='zoxide' # VOID
		EMERGE_REPO='dm9pZCAq'
		EMERGE='app-shells/zoxide' # GENTOO
	)
	function get_github_asset_url {
		github-download \
			--dry \
			--slug='ajeetdsouza/zoxide' \
			--release='latest' \
			--asset-filter="$(echo-escape-regex "$1")$" | echo-first-line || :
	}
	function add_download_option {
		options+=(
			DOWNLOAD="$(get_github_asset_url "$1")"
			DOWNLOAD_UNZIP_FILTER='zoxide'
		)
	}
	function add_deb_option {
		options+=(
			DEB="$(get_github_asset_url "$1")"
		)
	}
	arch="$(get-arch)"
	if is-mac; then
		if test "$arch" = 'a64'; then
			add_download_option '-aarch64-apple-darwin.tar.gz'
		elif test "$arch" = 'x64'; then
			add_download_option '-x86_64-apple-darwin.tar.gz'
		fi
	elif is-wsl; then
		if test "$arch" = 'a64'; then
			add_download_option '-aarch64-pc-windows-msvc.zip'
		elif test "$arch" = 'x64'; then
			add_download_option '-x86_64-pc-windows-msvc.zip'
		fi
	else
		if test "$arch" = 'a64'; then
			add_deb_option '_arm64.deb'
			add_download_option '-aarch64-unknown-linux-musl.tar.gz'
		elif test "$arch" = 'a32'; then
			add_download_option '-armv7-unknown-linux-musl.tar.gz'
		elif test "$arch" = 'x64'; then
			add_deb_option '_amd64.deb'
			add_download_option '-x86_64-unknown-linux-musl.tar.gz'
		fi
	fi
	setup-util "${options[@]}"
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	setup_util_zoxide "$@"
fi
