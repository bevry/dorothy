#!/usr/bin/env bash

# https://github.com/ajeetdsouza/zoxide
# z/cd alternative

# apt option is requires debian testing, instead of debian stable

# https://github.com/ajeetdsouza/zoxide/releases
# zoxide-0.9.1-aarch64-apple-darwin.tar.gz
# zoxide-0.9.1-aarch64-pc-windows-msvc.zip
# zoxide-0.9.1-aarch64-unknown-linux-musl.tar.gz
# zoxide-0.9.1-arm-unknown-linux-musleabihf.tar.gz
# zoxide-0.9.1-armv7-unknown-linux-musleabihf.tar.gz
# zoxide-0.9.1-x86_64-apple-darwin.tar.gz
# zoxide-0.9.1-x86_64-pc-windows-msvc.zip
# zoxide-0.9.1-x86_64-unknown-linux-musl.tar.gz
# zoxide_0.9.1_amd64.deb
# zoxide_0.9.1_arm64.deb

# https://packages.debian.org/sid/amd64/zoxide/filelist
# /usr/bin/zoxide

function setup_util_zoxide() (
	source "$DOROTHY/sources/bash.bash"

	# improve performance for detectable utilities with conditional assets
	if setup-util --check --cli=zoxide "$@"; then
		return 0
	fi

	# setup
	local arch options=(
		--name='zoxide'
		--cli='z'
		"$@"
		AUR='zoxide-bin' # ARCH
		APK='zoxide'     # ALPINE
		BREW='zoxide'
		CARGO='zoxide'
		CONDA_CHANNEL='conda-forge'
		CONDA='zoxide'
		DNF_COPR='atim/zoxide'
		DNF='zoxide' # FEDORA
		NIX='nixpkgs.zoxide'
		XBPS='zoxide' # VOID
		EMERGE_REPO='dm9pZCAq'
		EMERGE='app-shells/zoxide' # GENTOO
	)
	function __get_github_asset_url {
		local url
		url="$(echo-escape-regexp -- "$1")$" || return $?
		github-download --dry --slug='ajeetdsouza/zoxide' --latest --asset-regexp="$url" | echo-first-line || return $?
	}
	function __add_download_option {
		local url
		url="$(__get_github_asset_url "$1")" || return $?
		options+=(
			DOWNLOAD="$url"
			DOWNLOAD_ARCHIVE_GLOB="$2"
		)
	}
	function __add_deb_option {
		local url
		url="$(__get_github_asset_url "$1")" || return $?
		options+=(
			DEB="$url"
		)
	}
	arch="$(__get_arch)"
	if __is_macos; then
		if [[ $arch == 'a64' ]]; then
			__add_download_option '-aarch64-apple-darwin.tar.gz' 'zoxide' || :
		elif [[ $arch == 'x64' ]]; then
			__add_download_option '-x86_64-apple-darwin.tar.gz' 'zoxide' || :
		fi
	elif __is_linux; then
		if [[ $arch == 'a64' ]]; then
			__add_deb_option '_arm64.deb' || :
			__add_download_option '-aarch64-unknown-linux-musl.tar.gz' 'zoxide' || :
		elif [[ $arch == 'a32' ]]; then
			__add_download_option '-armv7-unknown-linux-musl.tar.gz' 'zoxide' || :
		elif [[ $arch == 'x64' ]]; then
			__add_deb_option '_amd64.deb' || :
			__add_download_option '-x86_64-unknown-linux-musl.tar.gz' 'zoxide' || :
		fi
	elif is-windows; then
		if [[ $arch == 'a64' ]]; then
			__add_download_option '-aarch64-pc-windows-msvc.zip' 'zoxide.exe' || :
		elif [[ $arch == 'x64' ]]; then
			__add_download_option '-x86_64-pc-windows-msvc.zip' 'zoxide.exe' || :
		fi
	fi
	setup-util "${options[@]}"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	setup_util_zoxide "$@"
fi
