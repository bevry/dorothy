#!/usr/bin/env bash

# https://difftastic.wilfred.me.uk
# https://github.com/Wilfred/difftastic

# https://github.com/Wilfred/difftastic/releases/tag/0.62.0
# difft-aarch64-apple-darwin.tar.gz
# difft-aarch64-unknown-linux-gnu.tar.gz
# difft-x86_64-apple-darwin.tar.gz
# difft-x86_64-pc-windows-msvc.zip
# difft-x86_64-unknown-linux-gnu.tar.gz

# https://repology.org/project/difftastic/versions

function setup_util_difftastic() (
	source "$DOROTHY/sources/bash.bash"

	# improve performance for detectable utilities with conditional assets
	if setup-util --check --cli=difft "$@"; then
		return 0
	fi

	# setup
	local arch options=(
		--cli='difft' # another project that uses a different cli from its name, promoting conflicts
		"$@"
		APK='difftastic'             # ALPINE
		AUr='difftastic'             # ARCH
		CHOCO='difftastic'           # WINDOWS
		EMERGE='dev-util/difftastic' # GENTOO
		NIX='difftastic'
		RPM='rust-difftastic' # FEDORA
		WINGET='difftastic'   # WINDOWS
		XBPS='difftastic'     # VOID
		ZYPPER='difftastic'   # SUSE
	)
	function __get_github_asset_url {
		local regexp
		regexp="$(echo-escape-regexp -- "$1")$" || return $?
		github-download --dry --slug='Wilfred/difftastic' --latest --asset-regexp="$regexp" | echo-first-line || return $?
	}
	function __add_download_option {
		local url
		url="$(__get_github_asset_url "$1")" || return $?
		options+=(
			DOWNLOAD="$url"
			DOWNLOAD_ARCHIVE_GLOB="$2"
		)
	}
	arch="$(get-arch)"
	if is-mac; then
		if [[ $arch == 'a64' ]]; then
			__add_download_option '-aarch64-apple-darwin.tar.gz' 'difft' || :
		elif [[ $arch == 'x64' ]]; then
			__add_download_option '-x86_64-apple-darwin.tar.gz' 'difft' || :
		fi
	elif is-linux; then
		if [[ $arch == 'a64' ]]; then
			__add_download_option '-aarch64-unknown-linux-gnu.tar.gz' 'difft' || :
		elif [[ $arch == 'x64' ]]; then
			__add_download_option '-x86_64-unknown-linux-gnu.tar.gz' 'difft' || :
		fi
	elif is-windows; then
		if [[ $arch == 'x64' ]]; then
			__add_download_option '-x86_64-pc-windows-msvc.zip' 'difft.exe' || :
		fi
	fi
	setup-util "${options[@]}"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	setup_util_difftastic "$@"
fi
