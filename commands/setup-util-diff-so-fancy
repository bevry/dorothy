#!/usr/bin/env bash

# https://github.com/so-fancy/diff-so-fancy

# https://github.com/so-fancy/diff-so-fancy/releases/tag/v1.4.4
# only provides a universal shell script?

# https://repology.org/project/diff-so-fancy/versions

function setup_util_diff_so_fancy() (
	source "$DOROTHY/sources/bash.bash"

	# setup
	local options=(
		--cli='diff-so-fancy'
		"$@"
		APK='diff-so-fancy'  # ALPINE
		AUR='diff-so-fancy'  # ARCH
		BREW='diff-so-fancy' # MACOS
		NIX='diff-so-fancy'
		NPM='diff-so-fancy'
		RPM='diff-so-fancy'    # FEDORA
		SCOOP='diff-so-fancy'  # WINDOWS
		ZYPPER='diff-so-fancy' # SUSE
	)
	setup-util "${options[@]}"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	setup_util_diff_so_fancy "$@"
fi
