#!/usr/bin/env bash

function setup_util_btrfs() (
	source "$DOROTHY/sources/bash.bash"

	# improve performance
	if is-needle --quiet "$@" && ! is-needle --upgrade "$@" && ! is-needle --uninstall "$@" && command-exists btrfs; then
		return 0
	fi

	# setup
	local options=(
		--cli='btrfs'
		"$@"
		# APK='curl' # ALPINE
		APT='btrfs-progs' # UBUNTU
		# AUR='curl' # ARCH
		# BREW='curl'
		# EMERGE='net-misc/curl' # GENTOO
		# NIX='nixpkgs.curl'
		# RPM='curl'   # FEDORA
		# URPMI='curl' # MAGEIA
		# WINGET='cURL'
		# XBPS='curl'   # VOID
		# ZYPPER='curl' # SUSE
	)
	setup-util "${options[@]}"
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	setup_util_btrfs "$@"
fi