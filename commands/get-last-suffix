#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

# prepare
needle="${1-}"
haystack="${2-}"
if test -z "$needle" -o "$#" -le 1; then
	stderr cat <<-EOF
		USAGE:
		get-last-suffix <needle> <haystack>

		EXAMPLES:
		get-last-suffix = a=b=c  # c
		get-last-suffix = sup    # sup
	EOF
	exit 22 # Invalid argument
fi

# check if empty
if test -z "$haystack"; then
	exit 0
fi

# cheat by reversing then reversing back
get-first-prefix "$(echo "$needle" | rev)" "$(echo "$haystack" | rev)" | rev
