#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

# only yes should be yes
# anything that is not yes should no

# timeout, escape, enter, should be no
# y, Y should be yes

# yes being a success exit code (0)
# no being a failure exit code (1)

echo -ne "${1?"USAGE: confirm-negative <message>"} (y/N) "
ec=0; read -t 60 -r -n 1 answer || ec="$?"
if test "$ec" -gt 128; then
	exit 62 # Timer expired
elif test "$ec" -ne 0; then
	exit "$ec"
fi
echo ""

test "$answer" = 'y' -o "$answer" = 'Y'
