#!/usr/bin/env bash

# https://kb.vmware.com/selfservice/search.do?cmd=displayKC&docType=kc&docTypeID=DT_KB_1_1&externalId=1017838
sudo rmtrash -u "$USER" "/Library/Application Support/VMware"
sudo rmtrash -u "$USER" "/Library/Application Support/VMware Fusion"
sudo rmtrash -u "$USER" "/Library/Preferences/VMware Fusion"
rmtrash "$HOME/Library/Application Support/VMware Fusion"
rmtrash "$HOME/Library/Caches/com.vmware.fusion"
rmtrash "$HOME/Library/Preferences/VMware Fusion"
rmtrash "$HOME/Library/Preferences/com.vmware.fusion.LSSharedFileList.plist"
rmtrash "$HOME/Library/Preferences/com.vmware.fusion.LSSharedFileList.plist.lockfile"
rmtrash "$HOME/Library/Preferences/com.vmware.fusion.plist"
rmtrash "$HOME/Library/Preferences/com.vmware.fusion.plist.lockfile"
rmtrash "$HOME/Library/Preferences/com.vmware.fusionDaemon.plist"
rmtrash "$HOME/Library/Preferences/com.vmware.fusionDaemon.plist.lockfile"
rmtrash "$HOME/Library/Preferences/com.vmware.fusionStartMenu.plist"
rmtrash "$HOME/Library/Preferences/com.vmware.fusionStartMenu.plist.lockfile"
