#!/usr/bin/env bash

function echo_fstab_encode() (
	source "$DOROTHY/sources/stdinargs.bash"

	# =====================================
	# Arguments

	function help {
		cat <<-EOF >&2
			ABOUT:
			fstab encode all input received.

			USAGE:
			echo-fstab-encode [...options] [--] ...<input>
			echo-lines ...<input> | echo-fstab-encode [...options]

			OPTIONS:
			$(stdinargs_options_help --)

			EXAMPLE:

			echo-fstab-encode -- '| |=|,|\|#|'

			    |\040|\075|\054|\134|\043|

			echo-lines -- '| |=|,|\|#|' | echo-fstab-encode --stdin

			    |\040|\075|\054|\134|\043|
		EOF
		if [[ $# -ne 0 ]]; then
			echo-error "$@"
		fi
		return 22 # EINVAL 22 Invalid argument
	}

	# =====================================
	# Action

	# this was provided by chatgpt, with printf modifications
	function on_input {
		local string="$1" char i
		for ((i = 0; i < ${#string}; i++)); do
			char="${string:i:1}"
			case "$char" in
			# trunk-ignore(shellcheck/SC1003)
			' ' | '=' | ',' | '\' | '#')
				printf '\\%03o' "'$char"
				;;
			*)
				__print_string "$char"
				;;
			esac
		done
		__print_line
	}

	stdinargs "$@"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	echo_fstab_encode "$@"
fi
