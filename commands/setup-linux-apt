#!/usr/bin/env bash
source "$DOROTHY/sources/essentials.sh"
source "$DOROTHY/sources/strict.bash"

# apt update
sudo apt-get update -y
sudo apt-get upgrade -y
if confirm-positive 'Perform a distribution upgrade too?'; then
	sudo apt-get dist-upgrade -y
fi

# apt remove
if is-present "${APT_REMOVE-}"; then
	sudo apt-get remove -y --purge "${APT_REMOVE[@]}"
fi

# apt install
if is-present "${APT_ADD-}"; then
	sudo apt-get install -y "${APT_ADD[@]}"
fi

# apt clean
sudo apt-get autoremove -y --purge
sudo apt-get autoclean -y
sudo apt-get clean -y

# snap update
sudo snap refresh

# raspi
if is-raspi; then
	# ensure raspi firmware is up to date
	# otherwise newer operating system releases can cause issues

	# install necessary packages
	sudo apt-get install -y rpi-eeprom raspi-config

	# ensure autoupdates on restart
	sudo systemctl unmask rpi-eeprom-update

	# prompt an update on next restart
	sudo rpi-eeprom-update -a
fi
