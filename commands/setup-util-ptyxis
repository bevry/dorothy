#!/usr/bin/env bash

# https://gitlab.gnome.org/chergert/ptyxis

# https://flathub.org/en/apps/app.devsuite.Ptyxis

# https://repology.org/project/ptyxis/versions

function setup_util_ptyxis() (
	source "$DOROTHY/sources/bash.bash"

	local options=(
		--app='ptyxis'
		--cli=ptyxis
		"$@"
		APK='pytxis'
		AUR='pytxis'
		DEB='ptyxis'
		FLATPAK='app.devsuite.Ptyxis'
		RPM='pytxis'
		SOLUS='pytxis'
		VOID='ptyxis'
		ZYPPER='ptyxis'
	)
	setup-util "${options[@]}"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	setup_util_ptyxis "$@"
fi
