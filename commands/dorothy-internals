		return 124
	}
	function __outer {
		__inner || return $?
		__print_lines "FAIL: [$?] SHOULD NOT SEE THIS (2/3)"
		__return 125 || return $?
		__print_lines "FAIL: [$?] SHOULD NOT SEE THIS (3/3)"
		return 126
	}
