#!/usr/bin/env bash

# https://elv.sh/get/

# https://github.com/elves/elvish/releases <-- just source

# https://repology.org/project/elvish/versions

function setup_util_elvish() (
	source "$DOROTHY/sources/bash.bash"

	# improve performance for detectable utilities with conditional assets
	if setup-util --check --cli=elvish "$@"; then
		return 0
	fi

	# setup
	local arch options=(
		--cli='elvish'
		"$@"
		AUR='elvish'
		# DEB='elvish' -- outdated
		BREW='elvish'
		PORT='elvish'
		SCOOP='elvish'
		PKG='elvish'
		PKGIN='elvish'
		PKGADD='elvish'
		# NIX='elvish' -- outdated
	)
	function __add_download_option {
		local release url platform="$1"
		release="$(get-github-release --slug='elves/elvish' --tag)" || return $? # v0.19.2
		url="https://dl.elv.sh/$platform/elvish-$release.$2"
		options+=(
			DOWNLOAD="$url"
			DOWNLOAD_ARCHIVE_EXTRACT='yes'
		)
	}
	arch="$(__get_arch)"
	if __is_macos; then
		if [[ $arch == 'a64' ]]; then
			__add_download_option 'darwin-arm64' 'tar.gz' || :
		elif [[ $arch == 'x64' ]]; then
			__add_download_option 'darwin-amd64' 'tar.gz' || :
		fi
	elif __is_linux; then
		if [[ $arch == 'a64' ]]; then
			__add_download_option 'linux-arm64' 'tar.gz' || :
		elif [[ $arch == 'x64' ]]; then
			__add_download_option 'linux-amd64' 'tar.gz' || :
		elif [[ $arch == 'x32' ]]; then
			__add_download_option 'linux-386' 'tar.gz' || :
		fi
	fi
	setup-util "${options[@]}"
	# doesn't work on WSL: Cannot connect to daemon: failed to spawn daemon: fork/exec \\wsl.localhost\Ubuntu\home\balupton\.local\bin\elvish: Incorrect function.
	#
	# elif is-windows; then
	# 	if [[ "$arch" = 'x64' ]]; then
	# 		__add_download_option 'windows-amd64' 'zip' || :
	# 	elif [[ "$arch" = 'x32' ]]; then
	# 		__add_download_option 'windows-386' 'zip' || :
	# 	fi
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	setup_util_elvish "$@"
fi
