# dpkg / Debian / Ubuntu / Linux Mint / elementary OS / etc
# used for installing .deb files
function do_dpkg() {
	# check applicable
	if test -n "${DPKG-}" -o -n "${DPKG_EVAL-}"; then
		# check possible
		if ! command-exists dpkg; then
			# not possible
			return 1
		fi

		# eval case
		if test -n "${DPKG_EVAL-}"; then
			eval "${DPKG_EVAL}"
			return "$?"
		fi

		# package case
		if test -n "${DPKG-}"; then
			eval-collapse -- sudo dpkg --install "${DPKG}"
		fi
	else
		# not applicable
		return 1
	fi
}

