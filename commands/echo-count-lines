#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

count_inline='yes'
if test "${1-}" = '--inline'; then
	count_inline='yes'
	shift
elif test "${1-}" = '--no-inline'; then
	count_inline='no'
	shift
fi

i=0
function arg {
	echo-clear-lines <<<"$*"
}
function line {
	i="$((i + 1))"
}
function inline {
	if test "$count_inline" = 'yes'; then
		i="$((i + 1))"
	fi
}
function finish {
	echo "$i"
}

source "$DOROTHY/sources/stdinargs.bash"
