#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

# dependencies
env QUIET=y setup-util-ripgrep
env QUIET=y setup-util-jq

# act
u="https://api.github.com/repos/${1:?"USAGE: github-release-file org/repo"}/releases/latest"
f="${2:?"USAGE: github-release-file org/repo filename"}"
mapfile -t urls <<<"$(curl -s "$u" | jq -r ".assets[] | select(.name|contains(\"$f\")) | .browser_download_url" | rg  --invert-match  '.(mini)?sig$')"

# fetch a exact match, otherwise fetch the first
echo-lines "${urls[@]}" | rg --line-regexp "$f" || {
	echo "${urls[0]}"
}
