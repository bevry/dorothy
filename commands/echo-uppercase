#!/usr/bin/env bash

function echo_uppercase() (
	source "$DOROTHY/sources/stdinargs.bash"

	# =====================================
	# Arguments

	function help {
		cat <<-EOF >&2
			ABOUT:
			Output each input as uppercase.

			USAGE:
			echo-uppercase [...options] [--] ...<input>
			echo-lines ...<input> | echo-uppercase [...options]

			OPTIONS:
			$(stdinargs_options_help --)

			EXAMPLES:

			echo-uppercase -- hello world

			    HELLO
			    WORLD
			    # exit status: 0

			echo-lines -- hello world | echo-uppercase

			    HELLO
			    WORLD
			    # exit status: 0
		EOF
		if [[ $# -ne 0 ]]; then
			echo-error "$@"
		fi
		return 22 # EINVAL 22 Invalid argument
	}

	# =====================================
	# Action

	function __on_whole {
		local string="$1"
		__get_uppercase_string -- "$string" || return
	}

	stdinargs "$@"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	echo_uppercase "$@"
fi
