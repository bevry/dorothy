#!/usr/bin/env bash

function echo_uppercase_test() (
	source "$DOROTHY/sources/bash.bash"
	eval-tester --ignore-stderr --status=22 -- echo-uppercase --help
)

function echo_uppercase() (
	source "$DOROTHY/sources/stdinargs.bash"

	# =====================================
	# Arguments

	function help {
		__print_help "$@" <<-EOF || return $?
			ABOUT:
			Output each input as uppercase.

			USAGE:
			\`echo-uppercase [...options] [--] ...<input>\`
			\`echo-lines ...<input> | echo-uppercase [...options]\`

			OPTIONS:
			$(__stdinargs__help_options --)

			EXAMPLES:
			\`\`\`
			echo-uppercase -- hello world
			echo-lines -- hello world | echo-uppercase
			\`\`\`
			Outputs:
			\`\`\`
			HELLO
			WORLD
			\`\`\`
			Returns: [0]
		EOF
		return 22 # EINVAL 22 Invalid argument
	}

	# =====================================
	# Action

	function __on_whole {
		local string="$1"
		__get_uppercase_string "$string" || return $?
	}

	stdinargs "$@"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	if [[ $* == '--test' ]]; then
		echo_uppercase_test
	else
		echo_uppercase "$@"
	fi
fi
