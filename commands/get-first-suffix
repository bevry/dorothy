#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

# prepare
needle="${1-}"
haystack="${2-}"
if test -z "$needle" -o "$#" -le 1; then
	stderr cat <<-EOF
		USAGE:
		get-first-suffix <needle> <haystack>

		EXAMPLES:
		get-first-suffix = a=b=c  # b=c
		get-first-suffix = sup    # sup
	EOF
	exit 22 # Invalid argument
fi

# check if empty
if test -z "$haystack"; then
	exit 0
fi

# do the magic
echo "${haystack#*"$needle"}"
