#!/usr/bin/env bash

# https://repology.org/project/libxcrypt/versions

# resolves:
# /home/balupton/.cache/trunk/tools/python/3.10.8-b6e96641f2c120698c300f1bdd98bc0e/bin/python3: error while loading shared libraries: libcrypt.so.1: cannot open shared object file: No such file or directory

function setup_util_libcrypt() (
	source "$DOROTHY/sources/bash.bash"

	local options=(
		--name='LibXCrypt'
		"$@"
		AUR='libxcrypt'
		APT='libxcrypt'
		BREW='libxcrypt'
		RPM='libxcrypt'
		XBPS='libxcrypt'
		ZYPPER='libxcrypt'
	)
	setup-util "${options[@]}"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	setup_util_libcrypt "$@"
fi
