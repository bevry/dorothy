#!/usr/bin/env bash

# @todo rename to is-root-user or is-user-root

function is_root_test() (
	source "$DOROTHY/sources/is-fs-tests.bash"

	eval-helper --invalidate-elevation

	eval-helper --verbose --wrap -- bash -c 'echo $USER' || :
	eval-helper --verbose --wrap -- whoami || :
	eval-helper --verbose --wrap -- logname || :
	eval-helper --verbose --wrap -- id || :
	eval-helper --verbose --wrap -- id -u || :
	eval-helper --verbose --wrap -- id -un || :
	eval-helper --verbose --wrap -- is-root --verbose || :
	eval-helper --verbose --wrap -- is-root --login --verbose || :

	eval-helper --elevate --verbose --wrap -- bash -c 'echo $USER' || :
	eval-helper --elevate --verbose --wrap -- whoami || :
	eval-helper --elevate --verbose --wrap -- logname || :
	eval-helper --elevate --verbose --wrap -- id || :
	eval-helper --elevate --verbose --wrap -- id -u || :
	eval-helper --elevate --verbose --wrap -- id -un || :
	eval-helper --elevate --inherit --verbose --wrap -- is-root --verbose || :
	eval-helper --elevate --inherit --verbose --wrap -- is-root --login --verbose || :

	return 0
)
function is_root() (
	source "$DOROTHY/sources/bash.bash"

	# =====================================
	# Arguments

	function help {
		__print_help "$@" <<-EOF || return $?
			ABOUT:
			Check if the currently logged in user, or the specified <user>s are root.

			USAGE:
			is-root [...options] [--] ...<user>

			OPTIONS:
			--user=<user> | --users=<users> | ...<user>
			    Specify a <user> to check if it is root.
			--login
			    If enabled, the login user will be used as the <user>, if none were provided.
			    Otherwise, the current user will be used as the <user>, if none were provided.

			RETURNS:
			[0] if all <user>s were root
			[1] if a <user> was not accessible

			COMPANION COMMANDS:
			[get-group-id]
			[get-profile]
			[get-user-id]
			[is-admin]
			[is-group]
			[is-owner]
			[is-password-usable]
			[is-root]
			[is-user-in-group]
			[is-user]
		EOF
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item option_login='' option_users=()
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--no-login'* | '--login'*) __flag --source={item} --target={option_login} --affirmative ;;
		'--user='* | '--users='*) __split --target={option_users} --append --delimiters=$'\n\t ,|' --no-zero-length -- "${item#*=}" ;;
		'--')
			option_users+=("$@")
			shift $#
			break
			;;
		'--'*) help 'An unrecognised flag was provided: ' --variable-value={item} ;;
		*) option_users+=("$item") ;;
		esac
	done

	# verify
	if [[ ${#option_users[@]} -eq 0 ]]; then
		if [[ $option_login == 'yes' ]]; then
			__prepare_login_user
			option_users+=("$LOGIN_USER")
		else
			__prepare_current_user # could prompt
			option_users+=("$CURRENT_USER")
		fi
	fi

	# =====================================
	# Action

	local user
	for user in "${option_users[@]}"; do
		if [[ $user != 'root' && $user != 0 ]]; then
			return 1
		fi
	done
	return 0
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	if [[ $* == '--test' ]]; then
		is_root_test
	else
		is_root "$@"
	fi
fi
