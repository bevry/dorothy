#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

# download and extract a github repository rather than cloning it, should be faster if you don't need git history

# extract the slug from a url
slug="$1"
slug="${slug/https\:\/\/github.com/}"
slug="${slug/.git//}"

# download and unzip
down-zip "https://github.com/$slug/archive/master.tar.gz" --filter='*-master/*'
