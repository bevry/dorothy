#!/usr/bin/env bash

function get_terminal_device_file_test() (
	source "$DOROTHY/sources/bash.bash"
	eval-tester --ignore-stderr --status=22 -- get-terminal-device-file --help
)

function get_terminal_device_file() (
	source "$DOROTHY/sources/bash.bash"

	# =====================================
	# Arguments

	function help {
		__print_help "$@" <<-EOF || return $?
			ABOUT:
			If the terminal supports the \`/dev/tty\` device file, then output \`/dev/tty\`, otherwise output \`/dev/stderr\`.

			USAGE:
			\`get-terminal-device-file [...options]\`
		EOF
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--'*) help 'An unrecognised flag was provided: ' --variable-value={item} ;;
		*) help 'An unrecognised argument was provided: ' --variable-value={item} ;;
		esac
	done

	# =====================================
	# Action

	__print_lines "$TERMINAL_OUTPUT_TARGET"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	if [[ $* == '--test' ]]; then
		get_terminal_device_file_test
	else
		get_terminal_device_file "$@"
	fi
fi
