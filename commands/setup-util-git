#!/usr/bin/env bash

function setup_util_git() (
	source "$DOROTHY/sources/bash.bash"

	# Git
	# https://git-scm.com/download/linux
	# https://packages.debian.org/sid/amd64/git/filelist
	# /usr/bin/git
	# /usr/bin/git-receive-pack
	# /usr/bin/git-shell
	# /usr/bin/git-upload-archive
	# /usr/bin/git-upload-pack
	# /usr/bin/scalar
	local options=(
		--name='git'
		--cli='git'
		"$@"
		APK='git'
		APT='git'
		AUR='git'
		BREW='git'
		BSD='git'
		EMERGE='dev-vcs/git'
		NIX='nixpkgs.git'
		RPM='git'
		URPMI='git'
		XBPS='git'
		ZYPPER='git-core'
	)
	setup-util "${options[@]}"

	# @todo move all of these in `setup-git`

	# GPG
	setup-util-gpg --optional "$@"

	# https://en.wikipedia.org/wiki/OpenSSH
	setup-util-ssh --optional "$@"

	# Diff/Merge Tool: meld
	# setup-util-meld --optional "$@"
	# ^ does anyone use this?

	# Diff/Merge Tool: delta
	setup-util-delta --optional "$@"
	# ^ superior to delta

	# Diff/Merge Tool: diff
	setup-util-diff --optional "$@"

	# Git LFS
	setup-util-git-lfs --optional "$@"

	# Pinentry
	setup-util-pinentry --optional "$@"

	# ssh-askpass
	setup-util-ssh-askpass --optional "$@"

	# Gitell
	setup-util-gitell --optional "$@"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	setup_util_git "$@"
fi
