#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

# git
env NAME='git' CLI='git' \
	APK='git' \
	APT='git' \
	BREW='git' \
	PACMAN='git' \
	PAMAC='git' \
	setup-util

# https://pkgs.org/download/gnupg
env NAME='GnuPG' CLI='gpg' \
	APT='gnupg' \
	BREW='gnupg' \
	PACMAN='gnupg' \
	setup-util || :
# ^ optional

# https://en.wikipedia.org/wiki/SSHFS
env NAME='SSHFS' CLI='sshfs' \
	APT='sshfs' \
	BREW='sshfs' \
	PACMAN='sshfs' \
	setup-util || :
# ^ optional as: Error: sshfs has been disabled because it requires closed-source macFUSE!

# https://github.com/git-lfs/git-lfs
# https://packagecloud.io/github/git-lfs/install
env NAME='Git Large File Storage' CLI='git-lfs' \
	APT_EVAL='fetch https://packagecloud.io/install/repositories/github/git-lfs/script.deb.sh | sudo bash' \
	BREW='git-lfs' \
	GEM_EVAL='fetch https://packagecloud.io/install/repositories/github/git-lfs/script.gem.sh | bash' \
	NODE_EVAL='fetch https://packagecloud.io/install/repositories/github/git-lfs/script.node.sh | bash' \
	PYTHON_EVAL='fetch https://packagecloud.io/install/repositories/github/git-lfs/script.python.sh | bash' \
	RPM_EVAL='fetch https://packagecloud.io/install/repositories/github/git-lfs/script.rpm.sh | sudo bash' \
	setup-util || :
# ^ optional

# https://www.gnupg.org/related_software/pinentry/
# https://github.com/GPGTools/pinentry
# https://gpgtools.org/
# on brew, `pinentry` replaces the casks `pinentry-mac` and `gpg-suite-pinentry`
env NAME='Pinentry' CLI='pinentry' \
	BREW='pinentry' \
	setup-util || :
# ^ optional
# @todo figure out linux options
