#!/usr/bin/env bash

function is_symlink_test() (
	source "$DOROTHY/sources/is-fs-tests.bash"
	local root command='is-symlink' tuples=()
	root="$(is_fs_tests__prep "$command")"

	eval-tester --ignore-stderr --status=22 -- "$command" --help
	eval-tester --name='no args' --status=22 --ignore-stderr -- "$command" --

	# test no escalation
	tuples=(
		--path='' --status=22

		--path="$root/missing-dir/missing-file" --status=2
		--path="$root/missing-file" --status=2

		--path="$root/targets/empty-dir" --status=79
		--path="$root/targets/empty-file" --status=79
		--path="$root/targets/filled-dir/empty-subfile" --status=79
		--path="$root/targets/filled-dir/filled-subdir" --status=79
		--path="$root/targets/filled-dir/filled-subdir/empty-subdir" --status=79
		--path="$root/targets/filled-dir/filled-subfile" --status=79
		--path="$root/targets/filled-file" --status=79
		--path="$root/targets/unaccessible-empty-dir" --status=79
		--path="$root/targets/unaccessible-empty-file" --status=79
		--path="$root/targets/unaccessible-filled-dir" --status=79
		--path="$root/targets/unaccessible-filled-dir/empty-subfile" --status="$(__is_fs_tests__print_root_or_nonroot 79 13)"
		--path="$root/targets/unaccessible-filled-dir/filled-subdir" --status="$(__is_fs_tests__print_root_or_nonroot 79 13)"
		--path="$root/targets/unaccessible-filled-dir/filled-subdir/empty-subdir" --status="$(__is_fs_tests__print_root_or_nonroot 79 13)"
		--path="$root/targets/unaccessible-filled-dir/filled-subfile" --status="$(__is_fs_tests__print_root_or_nonroot 79 13)"
		--path="$root/targets/unaccessible-filled-file" --status=79
		--path="$root/targets/unexecutable-empty-dir" --status=79
		--path="$root/targets/unexecutable-empty-file" --status=79
		--path="$root/targets/unexecutable-filled-dir" --status=79
		--path="$root/targets/unexecutable-filled-dir/empty-subfile" --status="$(__is_fs_tests__print_root_or_nonroot 79 13)"
		--path="$root/targets/unexecutable-filled-dir/filled-subdir" --status="$(__is_fs_tests__print_root_or_nonroot 79 13)"
		--path="$root/targets/unexecutable-filled-dir/filled-subdir/empty-subdir" --status="$(__is_fs_tests__print_root_or_nonroot 79 13)"
		--path="$root/targets/unexecutable-filled-dir/filled-subfile" --status="$(__is_fs_tests__print_root_or_nonroot 79 13)"
		--path="$root/targets/unexecutable-filled-file" --status=79
		--path="$root/targets/unreadable-empty-dir" --status=79
		--path="$root/targets/unreadable-empty-file" --status=79
		--path="$root/targets/unreadable-filled-dir" --status=79
		--path="$root/targets/unreadable-filled-dir/empty-subfile" --status=79
		--path="$root/targets/unreadable-filled-dir/filled-subdir" --status=79
		--path="$root/targets/unreadable-filled-dir/filled-subdir/empty-subdir" --status=79
		--path="$root/targets/unreadable-filled-dir/filled-subfile" --status=79
		--path="$root/targets/unreadable-filled-file" --status=79
		--path="$root/targets/unwritable-empty-dir" --status=79
		--path="$root/targets/unwritable-empty-file" --status=79
		--path="$root/targets/unwritable-filled-dir" --status=79
		--path="$root/targets/unwritable-filled-dir/empty-subfile" --status=79
		--path="$root/targets/unwritable-filled-dir/filled-subdir" --status=79
		--path="$root/targets/unwritable-filled-dir/filled-subdir/empty-subdir" --status=79
		--path="$root/targets/unwritable-filled-dir/filled-subfile" --status=79
		--path="$root/targets/unwritable-filled-file" --status=79

		--path="$root/symlinks/empty-dir"
		--path="$root/symlinks/empty-file"
		--path="$root/symlinks/filled-dir--empty-subfile"
		--path="$root/symlinks/filled-dir--filled-subdir"
		--path="$root/symlinks/filled-dir--filled-subdir--empty-subdir"
		--path="$root/symlinks/filled-dir--filled-subfile"
		--path="$root/symlinks/filled-file"
		--path="$root/symlinks/unaccessible-empty-dir"
		--path="$root/symlinks/unaccessible-empty-file"
		--path="$root/symlinks/unaccessible-filled-dir"
		# these pass as the symlink itself as a file accessible even if the target's parent is unaccessible
		--path="$root/symlinks/unaccessible-filled-dir--empty-subfile"
		--path="$root/symlinks/unaccessible-filled-dir--filled-subdir"
		--path="$root/symlinks/unaccessible-filled-dir--filled-subdir--empty-subdir"
		--path="$root/symlinks/unaccessible-filled-dir--filled-subfile"
		--path="$root/symlinks/unaccessible-filled-file"
		--path="$root/symlinks/unexecutable-empty-dir"
		--path="$root/symlinks/unexecutable-empty-file"
		--path="$root/symlinks/unexecutable-filled-dir"
		# these pass as the symlink itself as a file accessible even if the target's parent is unexecutable
		--path="$root/symlinks/unexecutable-filled-dir--empty-subfile"
		--path="$root/symlinks/unexecutable-filled-dir--filled-subdir"
		--path="$root/symlinks/unexecutable-filled-dir--filled-subdir--empty-subdir"
		--path="$root/symlinks/unexecutable-filled-dir--filled-subfile"
		--path="$root/symlinks/unexecutable-filled-file"
		--path="$root/symlinks/unreadable-empty-dir"
		--path="$root/symlinks/unreadable-empty-file"
		--path="$root/symlinks/unreadable-filled-dir"
		--path="$root/symlinks/unreadable-filled-dir--empty-subfile"
		--path="$root/symlinks/unreadable-filled-dir--filled-subdir"
		--path="$root/symlinks/unreadable-filled-dir--filled-subdir--empty-subdir"
		--path="$root/symlinks/unreadable-filled-dir--filled-subfile"
		--path="$root/symlinks/unreadable-filled-file"
		--path="$root/symlinks/unwritable-empty-dir"
		--path="$root/symlinks/unwritable-empty-file"
		--path="$root/symlinks/unwritable-filled-dir"
		--path="$root/symlinks/unwritable-filled-dir--empty-subfile"
		--path="$root/symlinks/unwritable-filled-dir--filled-subdir"
		--path="$root/symlinks/unwritable-filled-dir--filled-subdir--empty-subdir"
		--path="$root/symlinks/unwritable-filled-dir--filled-subfile"
		--path="$root/symlinks/unwritable-filled-file"
	)
	is_fs_tests__tuples --group='test no escalation' "$command" --no-elevate -- "${tuples[@]}"

	# test default escalation
	tuples=(
		--path="$root/targets/unaccessible-filled-dir/empty-subfile" --status=79
		--path="$root/targets/unaccessible-filled-dir/filled-subdir" --status=79
		--path="$root/targets/unaccessible-filled-dir/filled-subdir/empty-subdir" --status=79
		--path="$root/targets/unaccessible-filled-dir/filled-subfile" --status=79
		--path="$root/targets/unexecutable-filled-dir/empty-subfile" --status=79
		--path="$root/targets/unexecutable-filled-dir/filled-subdir" --status=79
		--path="$root/targets/unexecutable-filled-dir/filled-subdir/empty-subdir" --status=79
		--path="$root/targets/unexecutable-filled-dir/filled-subfile" --status=79
		--path="$root/symlinks/unaccessible-filled-dir--empty-subfile"
		--path="$root/symlinks/unaccessible-filled-dir--filled-subdir"
		--path="$root/symlinks/unaccessible-filled-dir--filled-subdir--empty-subdir"
		--path="$root/symlinks/unaccessible-filled-dir--filled-subfile"
		--path="$root/symlinks/unexecutable-filled-dir--empty-subfile"
		--path="$root/symlinks/unexecutable-filled-dir--filled-subdir"
		--path="$root/symlinks/unexecutable-filled-dir--filled-subdir--empty-subdir"
		--path="$root/symlinks/unexecutable-filled-dir--filled-subfile"
	)
	is_fs_tests__tuples --group='test default escalation' "$command" -- "${tuples[@]}"

	# test with escalation
	tuples=(
		--path="$root/targets/unaccessible-filled-dir/empty-subfile" --status=79
		--path="$root/targets/unaccessible-filled-dir/filled-subdir" --status=79
		--path="$root/targets/unaccessible-filled-dir/filled-subdir/empty-subdir" --status=79
		--path="$root/targets/unaccessible-filled-dir/filled-subfile" --status=79
		--path="$root/targets/unexecutable-filled-dir/empty-subfile" --status=79
		--path="$root/targets/unexecutable-filled-dir/filled-subdir" --status=79
		--path="$root/targets/unexecutable-filled-dir/filled-subdir/empty-subdir" --status=79
		--path="$root/targets/unexecutable-filled-dir/filled-subfile" --status=79
		--path="$root/symlinks/unaccessible-filled-dir--empty-subfile"
		--path="$root/symlinks/unaccessible-filled-dir--filled-subdir"
		--path="$root/symlinks/unaccessible-filled-dir--filled-subdir--empty-subdir"
		--path="$root/symlinks/unaccessible-filled-dir--filled-subfile"
		--path="$root/symlinks/unexecutable-filled-dir--empty-subfile"
		--path="$root/symlinks/unexecutable-filled-dir--filled-subdir"
		--path="$root/symlinks/unexecutable-filled-dir--filled-subdir--empty-subdir"
		--path="$root/symlinks/unexecutable-filled-dir--filled-subfile"
	)
	is_fs_tests__tuples --group='test with escalation' "$command" --elevate -- "${tuples[@]}"

	# break the symlinks
	is_fs_tests__break_symlinks
	tuples=(
		--path="$root/symlinks/empty-dir"
		--path="$root/symlinks/empty-file"
		--path="$root/symlinks/filled-dir--empty-subfile"
		--path="$root/symlinks/filled-dir--filled-subdir"
		--path="$root/symlinks/filled-dir--filled-subdir--empty-subdir"
		--path="$root/symlinks/filled-dir--filled-subfile"
		--path="$root/symlinks/filled-file"
		--path="$root/symlinks/unaccessible-empty-dir"
		--path="$root/symlinks/unaccessible-empty-file"
		--path="$root/symlinks/unaccessible-filled-dir"
		--path="$root/symlinks/unaccessible-filled-dir--empty-subfile"
		--path="$root/symlinks/unaccessible-filled-dir--filled-subdir"
		--path="$root/symlinks/unaccessible-filled-dir--filled-subdir--empty-subdir"
		--path="$root/symlinks/unaccessible-filled-dir--filled-subfile"
		--path="$root/symlinks/unaccessible-filled-file"
		--path="$root/symlinks/unexecutable-empty-dir"
		--path="$root/symlinks/unexecutable-empty-file"
		--path="$root/symlinks/unexecutable-filled-dir"
		--path="$root/symlinks/unexecutable-filled-dir--empty-subfile"
		--path="$root/symlinks/unexecutable-filled-dir--filled-subdir"
		--path="$root/symlinks/unexecutable-filled-dir--filled-subdir--empty-subdir"
		--path="$root/symlinks/unexecutable-filled-dir--filled-subfile"
		--path="$root/symlinks/unexecutable-filled-file"
		--path="$root/symlinks/unreadable-empty-dir"
		--path="$root/symlinks/unreadable-empty-file"
		--path="$root/symlinks/unreadable-filled-dir"
		--path="$root/symlinks/unreadable-filled-dir--empty-subfile"
		--path="$root/symlinks/unreadable-filled-dir--filled-subdir"
		--path="$root/symlinks/unreadable-filled-dir--filled-subdir--empty-subdir"
		--path="$root/symlinks/unreadable-filled-dir--filled-subfile"
		--path="$root/symlinks/unreadable-filled-file"
		--path="$root/symlinks/unwritable-empty-dir"
		--path="$root/symlinks/unwritable-empty-file"
		--path="$root/symlinks/unwritable-filled-dir"
		--path="$root/symlinks/unwritable-filled-dir--empty-subfile"
		--path="$root/symlinks/unwritable-filled-dir--filled-subdir"
		--path="$root/symlinks/unwritable-filled-dir--filled-subdir--empty-subdir"
		--path="$root/symlinks/unwritable-filled-dir--filled-subfile"
		--path="$root/symlinks/unwritable-filled-file"
	)
	is_fs_tests__tuples --group='test broken symlinks' "$command" -- "${tuples[@]}"

	return 0
)
function is_symlink() (
	source "$DOROTHY/sources/is-fs.bash"

	# =====================================
	# Arguments

	function __help {
		local fodder
		fodder="$(__is_fs__options '13')" || return $?
		__print_help "$@" <<-EOF || return $?
			ABOUT:
			Check if all <path>s are a symlink, broken or otherwise.
			Companion to: $(__join --style=code --between=', ' -- 'is-broken-symlink' 'is-not-symlink').

			USAGE:
			\`is-symlink [...options] [--] ...<path>\`

			OPTIONS:
			$fodder

			RETURNS:
			[0] if all <path>s were a symlink (broken or otherwise)
			[2] if a <path> was missing
			[13] if a <path> was not accessible
			[22] if empty arguments were provided
			[79] if a <path> was present, but was not a symlink (broken or otherwise)
		EOF
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	__is_fs__args "$@" || return $?

	# invoke
	__is_fs__invoke 'is-symlink.bash' '13' || return $?

	# errors
	case "$fs_status" in
	79) __is_fs__error 'The <path> was present, but was not a symlink (broken or otherwise):' || return $? ;;
	*) __is_fs__error || return $? ;;
	esac

	# done
	return "$fs_status"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	if [[ $* == '--test' ]]; then
		is_symlink_test
	else
		is_symlink "$@"
	fi
fi
