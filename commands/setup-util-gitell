#!/usr/bin/env bash

# https://github.com/deadc0de6/gitell

function setup_util_gitell() (
	source "$DOROTHY/sources/bash.bash"

	# improve performance for detectable utilities with conditional assets
	if setup-util "$@" --check --cli='gitell'; then
		return 0
	fi

	# setup
	local url
	url="$(github-download --dry --slug='deadc0de6/gitell' --head --pathname='gitell' || :)"
	local options=(
		--cli='gitell'
		"$@"
		DOWNLOAD="$url"
	)
	setup-util "${options[@]}"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	setup_util_gitell "$@"
fi
