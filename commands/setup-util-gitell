#!/usr/bin/env bash

# https://github.com/deadc0de6/gitell

function setup_util_gitell() (
	source "$DOROTHY/sources/bash.bash"

	# setup
	local options=(
		--cli='gitell'
		"$@"
		DOWNLOAD="$(
			github-download \
				--dry \
				--slug='deadc0de6/gitell' \
				--head \
				--pathname='gitell'
		)"
	)
	setup-util "${options[@]}"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	setup_util_gitell "$@"
fi
