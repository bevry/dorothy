#!/usr/bin/env bash

function is_ci() (
	source "$DOROTHY/sources/bash.bash"

	# =====================================
	# Arguments

	function help {
		cat <<-EOF >&2
			ABOUT:
			Checks if the environment is a CI environment.

			USAGE:
			is-ci [...options]

			OPTIONS:
			--verbose
			    Output [yes] if the environment is a CI environment, otherwise [no].
			--quiet
			    Return an exit status of [0] if the environment is a CI environment, otherwise [1].
			    This is the default behaviour.
		EOF
		if [[ $# -ne 0 ]]; then
			echo-error "$@"
		fi
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item option_quiet='yes'
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--no-verbose'* | '--verbose'*)
			option_quiet="$(get-flag-value --non-affirmative --fallback="$option_quiet" -- "$item")"
			;;
		'--no-quiet'* | '--quiet'*)
			option_quiet="$(get-flag-value --affirmative --fallback="$option_quiet" -- "$item")"
			;;
		'--'*) help "An unrecognised flag was provided: $item" ;;
		*) help "An unrecognised argument was provided: $item" ;;
		esac
	done

	# =====================================
	# Action

	# https://docs.github.com/en/actions/learn-github-actions/variables#default-environment-variables
	# "${GITHUB_ACTIONS-}" "${CONTINUOUS_INTEGRATION-}" "${BUILD_NUMBER-}" "${RUN_ID-}"
	function __check {
		is-affirmative --ignore-empty -- "${CI-}" || return
	}
	if [[ $option_quiet == 'yes' ]]; then
		__check || return 1
		return
	elif __check; then
		__print_lines 'yes'
	else
		__print_lines 'no'
	fi
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	is_ci "$@"
fi
