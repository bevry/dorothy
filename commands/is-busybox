#!/usr/bin/env bash

function is_busybox_test() (
	source "$DOROTHY/sources/bash.bash"
	eval-tester --ignore-stderr --status=22 -- is-busybox --help
)

function is_busybox() (
	source "$DOROTHY/sources/bash.bash"

	# =====================================
	# Arguments

	# help
	function help {
		__print_help "$@" <<-EOF || return $?
			ABOUT:
			Checks if the <input> is a busybox executable.

			USAGE:
			\`is-busybox [--] <input>\`

			OPTIONS:
			<input>
			    Verify this <input> is a busybox executable.

			RETURNS:
			[0] if all <input>s are busybox executables.
			[1] if any <input>s are not a busybox executable.
		EOF
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item option_inputs=()
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--')
			option_inputs+=("$@")
			shift $#
			break
			;;
		'--'*) help 'An unrecognised flag was provided: ' --variable-value={item} ;;
		*) option_inputs+=("$item") ;;
		esac
	done

	# verify
	if [[ ${#option_inputs[@]} -eq 0 ]]; then
		help --help='No <input>s provided.'
	fi

	# =====================================
	# Action

	local input busybox
	busybox="$(type -P busybox)" || return 19                # ENODEV 19
	busybox="$(fs-path --follow -- "$busybox")" || return 19 # ENODEV 19 Operation not supported by device
	for input in "${option_inputs[@]}"; do
		input="$(type -P "$input")" || return 2             # ENOENT 2 No such file or directory
		input="$(fs-path --follow -- "$input")" || return 2 # ENOENT 2 No such file or directory
		[[ $input == "$busybox" ]] || return 1
	done
	return 0
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	if [[ $* == '--test' ]]; then
		is_busybox_test
	else
		is_busybox "$@"
	fi
fi
