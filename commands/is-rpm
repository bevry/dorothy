#!/usr/bin/env bash

function is_rpm() (
	source "$DOROTHY/sources/bash.bash"

	# =====================================
	# Arguments

	function help {
		__print_help "$@" <<-EOF || return $?
			ABOUT:
			Checks if the system can process \`.rpm\` files, by checking if the system has \`dnf\`, \`rpm\`, \`urpmi\`, or \`yum\` available.

			USAGE:
			\`is-rpm\`

			RETURNS:
			[0] if the system can process \`.rpm\` files
			[1] if the system cannot process \`.rpm\` files
		EOF
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--'*) help 'An unrecognised flag was provided: ' --variable-value={item} ;;
		*) help 'An unrecognised argument was provided: ' --variable-value={item} ;;
		esac
	done

	# =====================================
	# Action

	if __command_exists -- dnf || __command_exists -- rpm || __command_exists -- urpmi || __command_exists -- yum; then
		return 0
	else
		return 1
	fi
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	is_rpm "$@"
fi
