#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

# python2
env CLI='python' \
	APK='python' \
	APT='python' \
	BREW='python' \
	PACMAN='python' \
	YUM='python' \
	setup-util

# python3
env CLI='python3' \
	APK='python3' \
	APT='python3' \
	BREW='python3' \
	PACMAN='python3' \
	YUM='python3' \
	setup-util

# pipx dependencies for linux, not macos
if is-linux; then
	env OPTIONAL=yes NAME='python3-venv' \
		APT='python3-venv' \
		PACMAN='python-virtualenv' \
		setup-util
fi
