#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

if test "$#" -eq 0 || is-needle '--help' "$@"; then
	stderr echo 'USAGE: down-zip-file <URL> [destination=.]'
	stderr echo 'USAGE: down-zip-file <URL> <zip-subfile> [destination]'
	exit 1
else
	url="$1"
	if test "$#" -eq 1; then
		destination="$(pwd)"
	elif test "$#" -eq 2; then
		destination="$2"
	elif test "$#" -eq 3; then
		subfile="$2"
		destination="$3"
	fi
fi

tempdir="$(mktemp -d)"
tempfile="$(mktemp)"

down "$url" "$tempfile"

unziptar "$tempfile" "$tempdir" "$url"

if test -n "${subfile-}"; then
	cp -rf "$(expand-path "$tempdir/$subfile")" "$destination"
	echo "unzipped $subfile from $url to $destination"
else
	cp -rf "$tempdir/"* "$destination"
	echo "unzipped $url to $destination"
fi

rm -Rf "$tempdir"
rm -f "$tempfile"
