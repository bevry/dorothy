#!/usr/bin/env bash

function is_windows() (
	source "$DOROTHY/sources/bash.bash"

	# =====================================
	# Arguments

	function help {
		cat <<-EOF >&2
			ABOUT:
			Checks if the environment is Windows

			USAGE:
			is-windows

			RETURNS:
			[0] if the environment is Windows
			[1] if the environment is not Windows
		EOF
		if [[ $# -ne 0 ]]; then
			__print_error "$@"
		fi
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--'*) help "An unrecognised flag was provided: $item" ;;
		*) help "An unrecognised argument was provided: $item" ;;
		esac
	done

	# =====================================
	# Action

	# CI:
	# OSTYPE: msys
	# uname -a: MINGW64_NT-10.0-26100 fv-az1791-892 3.6.3-086201ea.x86_64 2025-06-05 13:51 UTC x86_64 Msys

	# WSL:
	# OSTYPE: linux-gnu
	# uname -a: Linux balupton-windows 6.6.87.2-microsoft-standard-WSL2 #1 SMP PREEMPT_DYNAMIC Thu Jun  5 18:30:46 UTC 2025 x86_64 x86_64 x86_64 GNU/Linux

	# UTM:
	# No bash nor uname as they need to be installed via WSL or via https://www.mingw-w64.org

	local u
	u="$(uname -a)"
	if [[ $u == MINGW64_NT* || $u == *-WSL* ]]; then
		return 0
	else
		return 1
	fi
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	is_windows "$@"
fi
