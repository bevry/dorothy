#!/usr/bin/env bash

# https://packages.debian.org/sid/amd64/gnome-software/filelist
# /usr/bin/gnome-software

function setup_util_gnome_software() (
	source "$DOROTHY/sources/bash.bash"

	# checks
	if ! is-system --gnome; then
		__print_style --stderr --notice='NOTICE:' ' ' --path="$0" --help=' is for Linux systems with `gnome` installed, skipping.' || return $?
		return 0
	fi

	# setup
	local options=(
		--name='Gnome Software'
		--cli='gnome-software'
		"$@"
		APT='gnome-software'
		AUR='gnome-software'
	)
	setup-util "${options[@]}" || return $?
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	setup_util_gnome_software "$@"
fi
