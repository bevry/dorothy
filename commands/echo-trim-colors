#!/usr/bin/env bash

function echo_trim_colors_test() (
	source "$DOROTHY/sources/bash.bash"

	# use [echo-write] instead of [cat], as [cat] can have issues with delayed stdin
	# https://github.com/bevry/dorothy/actions/runs/13055435464/job/36425209779#step:2:18900
	# update: I don't actually think this was a [cat] vs [echo-write] issue, aka a delayed stdin issue, I think this was a [eval_capture] race condition issue https://github.com/bevry/dorothy/issues/277 which is now fixed, as such change [echo-write] back to [cat] and see if it happens again

	{
		__print_style --green='i am green' --newline --red='i am red' | echo-trim-colors --stdin | echo-escape-newlines --stdin
	} | eval-tester --name='stdin with newline' --stdout='i am green\ni am red\n' -- \
		cat

	{
		__print_style --no-trail --green='i am green' --newline --red='i am red' | echo-trim-colors --stdin | echo-escape-newlines --stdin
	} | eval-tester --name='stdin without newline' --stdout='i am green\ni am red' -- \
		cat

	return 0
)
function echo_trim_colors() (
	source "$DOROTHY/sources/stdinargs.bash"

	# =====================================
	# Arguments

	function help {
		__print_help "$@" <<-EOF || return $?
			ABOUT:
			Attempt to strip colours from the input.

			USAGE:
			echo-trim-colors [...options] [--] ...<input>
			echo-lines ...<input> | echo-trim-colors [...options]

			OPTIONS:
			$(__stdinargs__help_options --)

			EXAMPLE:

			echo-style --green='plant' | echo-trim-colors --stdin

			    plant
			    # exit status: 0
		EOF
		return 22 # EINVAL 22 Invalid argument
	}

	# =====================================
	# Dependencies

	local bin_gsed_or_sed
	bin_gsed_or_sed="$(echo-gnu-command --install -- gsed)"

	# =====================================
	# Action

	# https://superuser.com/a/380778
	# @todo replace with `echo-regexp` and `echo-write`
	function __on_whole {
		"$bin_gsed_or_sed" 's/\x1b\[[0-9;]*m//g' < <(__print_string "$1")
	}

	stdinargs "$@"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	if [[ $* == '--test' ]]; then
		echo_trim_colors_test
	else
		echo_trim_colors "$@"
	fi
fi
