#!/usr/bin/env bash

# CLI
# https://app-updates.agilebits.com/product_history/CLI
# https://app-updates.agilebits.com/product_history/CLI2

function setup_util_1password_cli() (
	source "$DOROTHY/sources/bash.bash"

	# improve performance for detectable utilities with conditional assets
	if setup-util --check --cli=op "$@"; then
		return 0
	fi

	# prepare
	local arch platform version options=(
		--name='1Password CLI'
		--cli=op
		"$@"
	)
	function __add_download_option {
		options+=(
			DOWNLOAD="$1"
			DOWNLOAD_ARCHIVE_GLOB='op'
		)
	}
	function __add_installer_option {
		options+=(
			INSTALLER="$1"
			INSTALLER_OPEN='yes'
		)
	}
	arch="$(__get_arch)"
	platform="$(uname -s)"

	# fetch latest cli version
	version="v$(fetch 'https://app-updates.agilebits.com/product_history/CLI2' | echo-regexp -o --regexp='https://cache.agilebits.com/dist/1P/op2/pkg/v([^/-]+)/' --replace='$1')"

	# fetch appropriate platform url for that cli version
	if [[ $platform == 'Darwin' ]]; then
		__add_installer_option "https://cache.agilebits.com/dist/1P/op2/pkg/$version/op_apple_universal_$version.pkg" || :
		# uninstall cask version as it lags behind
		setup-util --quiet --optional --uninstall --name='1Password CLI' "$@" CASK='1password-cli'
	elif [[ $platform == 'Linux' ]]; then
		if [[ $arch == 'a64' ]]; then
			__add_download_option "https://cache.agilebits.com/dist/1P/op2/pkg/$version/op_linux_arm64_$version.zip" || :
		elif [[ $arch == 'a32' ]]; then
			__add_download_option "https://cache.agilebits.com/dist/1P/op2/pkg/$version/op_linux_arm_$version.zip" || :
		elif [[ $arch == 'x64' ]]; then
			__add_download_option "https://cache.agilebits.com/dist/1P/op2/pkg/$version/op_linux_amd64_$version.zip" || :
		elif [[ $arch == 'x32' ]]; then
			__add_download_option "https://cache.agilebits.com/dist/1P/op2/pkg/$version/op_linux_386_$version.zip" || :
		fi
	elif [[ $platform == 'FreeBSD' ]]; then
		if [[ $arch == 'a64' ]]; then
			__add_download_option "https://cache.agilebits.com/dist/1P/op2/pkg/$version/op_freebsd_arm64_$version.zip" || :
		elif [[ $arch == 'a32' ]]; then
			__add_download_option "https://cache.agilebits.com/dist/1P/op2/pkg/$version/op_freebsd_arm_$version.zip" || :
		elif [[ $arch == 'x64' ]]; then
			__add_download_option "https://cache.agilebits.com/dist/1P/op2/pkg/$version/op_freebsd_amd64_$version.zip" || :
		elif [[ $arch == 'x32' ]]; then
			__add_download_option "https://cache.agilebits.com/dist/1P/op2/pkg/$version/op_freebsd_386_$version.zip" || :
		fi
	elif [[ $platform == 'OpenBSD' ]]; then
		if [[ $arch == 'a64' ]]; then
			__add_download_option "https://cache.agilebits.com/dist/1P/op2/pkg/$version/op_openbsd_arm64_$version.zip" || :
		elif [[ $arch == 'x64' ]]; then
			__add_download_option "https://cache.agilebits.com/dist/1P/op2/pkg/$version/op_openbsd_amd64_$version.zip" || :
		elif [[ $arch == 'x32' ]]; then
			__add_download_option "https://cache.agilebits.com/dist/1P/op2/pkg/$version/op_openbsd_386_$version.zip" || :
		fi
	elif [[ $platform == 'Windows' ]]; then
		if [[ $arch == 'x64' ]]; then
			__add_download_option "https://cache.agilebits.com/dist/1P/op2/pkg/$version/op_windows_amd64_$version.zip" || :
		elif [[ $arch == 'x32' ]]; then
			__add_download_option "https://cache.agilebits.com/dist/1P/op2/pkg/$version/op_windows_386_$version.zip" || :
		fi
	fi

	# setup
	setup-util "${options[@]}"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	setup_util_1password_cli "$@"
fi
