#!/usr/bin/env bash

function get_terminal_alternative_support_test() (
	source "$DOROTHY/sources/bash.bash"
	eval-tester --ignore-stderr --status=22 -- get-terminal-alternative-support --help
)

function get_terminal_alternative_support() (
	source "$DOROTHY/sources/bash.bash"

	# =====================================
	# Arguments

	function help {
		__print_help "$@" <<-EOF || return $?
			ABOUT:
			Get whether the terminal supports alternative screen buffers, outputting [yes] if so, otherwise [no].

			USAGE:
			get-terminal-alternative-support [...options]

			OPTIONS:
			--quiet
			    Instead outputting [yes] or [no], return an exit status of [0] if so, otherwise [1].
		EOF
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item option_quiet=''
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--no-verbose'* | '--verbose'*) __flag --source={item} --target={option_quiet} --non-affirmative ;;
		'--no-quiet'* | '--quiet'*) __flag --source={item} --target={option_quiet} --affirmative ;;
		'--'*) help 'An unrecognised flag was provided: ' --variable-value={item} ;;
		*) help 'An unrecognised argument was provided: ' --variable-value={item} ;;
		esac
	done

	# =====================================
	# Action

	function __check {
		[[ $ALTERNATIVE_SCREEN_BUFFER_SUPPORTED == 'yes' ]] || return $?
	}

	if [[ $option_quiet == 'yes' ]]; then
		__check || return 1
	elif __check; then
		__print_lines 'no'
	else
		__print_lines 'yes'
	fi
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	if [[ $* == '--test' ]]; then
		get_terminal_alternative_support_test
	else
		get_terminal_alternative_support "$@"
	fi
fi
