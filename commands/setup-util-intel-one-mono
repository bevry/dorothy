#!/usr/bin/env bash

# https://github.com/intel/intel-one-mono

function setup_util_intel_one() (
	source "$DOROTHY/sources/bash.bash"

	# improve performance for detectable utilities with conditional assets
	if setup-util "$@" --check --font='IntelOneMono*'; then
		return 0
	fi

	# setup
	local options=(
		--name='Intel One Mono'
		--font='IntelOneMono*'
		"$@"
		CASK='font-intel-one-mono'
	)
	function __get_github_asset_url {
		github-download --dry --slug='intel/intel-one-mono' --latest --asset-regexp='^otf\.zip$' || return
	}
	function __add_download_option {
		local url
		url="$(__get_github_asset_url)" || return
		options+=(
			DOWNLOAD="$url"
			DOWNLOAD_ARCHIVE_GLOB='*/*.otf'
		)
	}
	__add_download_option || :
	setup-util "${options[@]}"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	setup_util_intel_one "$@"
fi
