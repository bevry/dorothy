#!/usr/bin/env bash

# https://github.com/intel/intel-one-mono

function setup_util_intel_one() (
	source "$DOROTHY/sources/bash.bash"

	# improve performance for detectable utilities with conditional assets
	if setup-util "$@" --check --font='IntelOneMono*'; then
		return 0
	fi

	# setup
	function get_github_asset_url {
		github-download --dry --slug='intel/intel-one-mono' --latest --asset-regexp='^otf\.zip$'
	}
	local options=(
		--name='Intel One Mono'
		--font='IntelOneMono*'
		"$@"
		CASK='font-intel-one-mono'
		DOWNLOAD="$(get_github_asset_url)"
		DOWNLOAD_ARCHIVE_GLOB='*/*.otf'
	)
	setup-util "${options[@]}"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	setup_util_intel_one "$@"
fi
