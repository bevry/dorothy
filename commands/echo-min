#!/usr/bin/env bash

function echo_min_test() (
	source "$DOROTHY/sources/bash.bash"
	eval-tester --ignore-stderr --status=22 -- echo-min --help

	eval-tester --status=0 -- \
		echo-min --

	eval-tester --stderr='ERROR: __minimum: The value must be an integer, it was: a' --status=22 -- \
		echo-min --no-color -- 1 a

	eval-tester --stdout=1 -- \
		echo-min -- 3 1 2

	echo-lines -- 3 1 2 | eval-tester --stdout=1 -- \
		echo-min --stdin
)
function echo_min() (
	source "$DOROTHY/sources/stdinargs.bash"

	function help {
		__print_help "$@" <<-EOF || return $?
			ABOUT:
			Output the largest integer from the <input>s.

			USAGE:
			\`echo-min [...options] [--] ...<input>\`
			\`echo-lines ...<input> | echo-min [...options]\`

			OPTIONS:
			$(__stdinargs__help_options --)

			QUIRKS:
			Empty inputs will be ignored. Non-integer inputs will error. Succeeds with no output if no <input>s are provided.

			OUTPUTS:
			The largest integer from the <input>s. Guaranteed to be an integer.
		EOF
		return 22 # EINVAL 22 Invalid argument
	}

	local inputs=()
	function __on_piece {
		local input="$1"
		[[ -n $input ]] || return 0
		inputs+=("$input")
	}
	function __on_finish {
		if [[ ${#inputs[@]} -eq 0 ]]; then
			return 0
		fi
		__minimum --source={inputs} || return $?
		printf '\n' || return $?
	}

	stdinargs "$@"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	if [[ $* == '--test' ]]; then
		echo_min_test
	else
		echo_min "$@"
	fi
fi
