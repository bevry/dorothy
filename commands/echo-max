#!/usr/bin/env bash

function echo_max_test() (
	source "$DOROTHY/sources/bash.bash"

	eval-tester --stdout=0 -- \
		echo-max --

	eval-tester --stderr='ERROR: __on_piece: The value must be an integer, it was: a' --status=22 -- \
		echo-max --no-color -- 1 a

	eval-tester --stdout=3 -- \
		echo-max -- 1 3 2

	echo-lines -- 1 3 2 | eval-tester --stdout=3 -- \
		echo-max --stdin
)
function echo_max() (
	source "$DOROTHY/sources/stdinargs.bash"

	function help {
		__print_help "$@" <<-EOF || return $?
			ABOUT:
			Output the largest integer from the <input>s.

			USAGE:
			\`echo-max [...options] [--] ...<input>\`
			\`echo-lines ...<input> | echo-max [...options]\`

			OPTIONS:
			$(__stdinargs__help_options --)

			QUIRKS:
			Empty inputs will be ignored. Non-integer inputs will error.

			OUTPUTS:
			The largest integer from the <input>s. Guaranteed to be an integer.
		EOF
		return 22 # EINVAL 22 Invalid argument
	}

	local integers=()
	function __on_piece {
		[[ -n $1 ]] || return 0
		__affirm_value_is_integer "$1" || return $?
		integers+=("$1")
	}
	function __on_finish {
		__maximum --source={integers} || return $?
		printf '\n' || return $?
	}

	stdinargs "$@"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	if [[ $* == '--test' ]]; then
		echo_max_test
	else
		echo_max "$@"
	fi
fi
