#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

# https://github.com/neovim/neovim/wiki/Installing-Neovim

# --HEAD
env NAME='Neovim' CLI='nvim' \
	APK='neovim' \
	APT='neovim python-neovim python3-neovim' \
	AUR='neovim-git' \
	BREW='neovim luajit tree-sitter' \
	CHOCO='neovim' \
	CLI='nvim' \
	DNS='neovim python3-neovim' \
	GUIX='neovim' \
	NIX='nixpkgs.neovim' \
	PACMAN='neovim python-pynvim' \
	PORT='neovim' \
	SCOOP='neovim' \
	ZYPPER='neovim python-neovim python3-neovim' \
	setup-util

env OPTIONAL=yes NAME='Neovim Node.js Support' NPM='neovim' setup-util
env OPTIONAL=yes NAME='Neovim Ruby Support' GEM='neovim' setup-util
env OPTIONAL=yes NAME='Neovim Python Support' PIP='neovim' setup-util
