#!/usr/bin/env bash

# https://github.com/neovim/neovim
# https://github.com/neovim/neovim/wiki/Installing-Neovim

# https://github.com/neovim/neovim/releases
# only support the installer and appimage, as the extras require complex {bin,libs,lib,share} setup
# nvim-linux64.tar.gz
# nvim-macos.tar.gz
# nvim-win64.msi
# nvim-win64.zip
# nvim.appimage

# https://packages.debian.org/sid/amd64/neovim/filelist
# /usr/bin/nvim

function setup_util_neovim() (
	source "$DOROTHY/sources/bash.bash"

	# improve performance
	if is-needle --quiet "$@" && ! is-needle --upgrade "$@" && ! is-needle --uninstall "$@" && command-exists nvim; then
		return 0
	fi

	# despite docs, no apk
	# yum install is undocumented but works
	local options=(
		--name='Neovim'
		--cli='nvim'
		"$@"
		APT='neovim'     # UBUNTU
		AUR='neovim-git' # ARCH
		BREW='neovim'
		CASK='neovim'
		CHOCO='neovim'
		GUIX='neovim'
		NIX='nixpkgs.neovim'
		PORT='neovim'
		RPM='neovim' # FEDORA
		SCOOP='neovim'
		ZYPPER='neovim' # SUSE
	)
	function get_github_asset_url {
		github-download \
			--dry \
			--slug='neovim/neovim' \
			--release='latest' \
			--asset-filter="$(echo-escape-regex -- "$1")$" | echo-first-line || :
	}
	function add_download_appimage_option {
		options+=(
			DOWNLOAD="$(get_github_asset_url "$1")"
			DOWNLOAD_FILENAME='nvim.appimage'
		)
	}
	if is-appimage; then
		add_download_appimage_option '.appimage'
	fi
	setup-util "${options[@]}"
	# .msi failed with: This installation package could not be opened. Contact the application vendor to verify that this is a valid Windows Installer package.
	# function add_installer_option {
	# 	options+=(
	# 		INSTALLER="$(get_github_asset_url "$1")"
	# 		INSTALLER_OPEN=yes
	# 	)
	# }
	# elif is-wsl; then
	# 	arch="$(get-arch)"
	# 	if test "$arch" = 'x64'; then
	# 		add_installer_option '-win64.msi'
	# 	fi
	# fi

	# all extras should be optional and below
	options=(
		--optional
		--name='Neovim Node.js Support'
		"$@"
		NODE='neovim'
	)
	setup-util "${options[@]}"

	options=(
		--optional
		--name='Neovim Ruby Support'
		"$@"
		GEM='neovim'
	)
	setup-util "${options[@]}"

	options=(
		--optional
		--name='Neovim Python Support'
		"$@"
		PIP='neovim'
	)
	setup-util "${options[@]}"
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	setup_util_neovim "$@"
fi
