#!/usr/bin/env bash

function is_manjaro() (
	source "$DOROTHY/sources/bash.bash"

	# =====================================
	# Arguments

	function help {
		__print_help "$@" <<-EOF || return $?
			ABOUT:
			Checks if the system is Manjaro Linux

			USAGE:
			\`is-manjaro\`

			RETURNS:
			[0] if the system is Manjaro Linux
			[1] if the system is not Manjaro Linux
		EOF
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--'*) help 'An unrecognised flag was provided: ' --variable-value={item} ;;
		*) help 'An unrecognised argument was provided: ' --variable-value={item} ;;
		esac
	done

	# =====================================
	# Action

	# `uname -r` is release level
	# `uname -r` = `6.11.0-1018-azure`
	# `ID=manjaro`
	is-linux --id='manjaro' || return $?
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	is_manjaro "$@"
fi
