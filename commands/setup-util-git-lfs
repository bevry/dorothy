#!/usr/bin/env bash

# Git LFS
# https://github.com/git-lfs/git-lfs/blob/main/INSTALLING.md

# https://packages.debian.org/sid/amd64/git-lfs/filelist
# /usr/bin/git-lfs

# https://repology.org/project/git-lfs/versions

function setup_util_git_lfs() (
	source "$DOROTHY/sources/bash.bash"

	# setup
	local options=(
		--name='Git Large File Storage'
		--cli='git-lfs'
		"$@"
		APK='git-lfs' # ALPINE
		APT='git-lfs' # UBUNTU
		AUR='git-lfs' # ARCH
		BREW='git-lfs'
		EOPKG='git-lfs' # SOLUS
		NIX='git-lfs'
		RPM='git-lfs'    # FEDORA
		ZYPPER='git-lfs' # SUSE
	)
	setup-util "${options[@]}"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	setup_util_git_lfs "$@"
fi
