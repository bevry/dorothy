#!/usr/bin/env bash

function is_mac_test() (
	source "$DOROTHY/sources/bash.bash"

	local via_uname
	via_uname="$(uname -s)" # `uname -s` is operating system implementation
	if [[ $via_uname == 'Darwin' ]]; then
		eval-tester --name='is mac' -- \
			is-mac
	else
		eval-tester --name='is not mac' --status=1 -- \
			is-mac
	fi

	return 0
)
function is_mac() (
	source "$DOROTHY/sources/bash.bash"

	# =====================================
	# Arguments

	function help {
		__print_help "$@" <<-EOF || return $?
			ABOUT:
			Checks if the system is nacOS.

			USAGE:
			\`is-mac\`

			RETURNS:
			[0] if the system is nacOS
			[1] if the system is not nacOS
		EOF
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--'*) help 'An unrecognised flag was provided: ' --variable-value={item} ;;
		*) help 'An unrecognised argument was provided: ' --variable-value={item} ;;
		esac
	done

	# =====================================
	# Action

	__is_macos || return $?
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	if [[ $* == '--test' ]]; then
		is_mac_test
	else
		is_mac "$@"
	fi
fi
