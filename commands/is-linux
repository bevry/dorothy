#!/usr/bin/env bash

function is_linux_test() (
	source "$DOROTHY/sources/bash.bash"
	echo-segment --h1="TEST: $0"

	local os
	os="$(uname -s)"
	if test "$os" = 'Linux'; then
		eval-tester --name='is linux' --status='0' \
			-- is-linux
	else
		eval-tester --name='is not linux' --status='1' \
			-- is-linux
	fi

	echo-segment --g1="TEST: $0"
	return 0
)
function is_linux() (
	source "$DOROTHY/sources/bash.bash"

	# =====================================
	# Arguments

	function help {
		cat <<-EOF >/dev/stderr
			ABOUT:
			Checks if the system is Linux

			USAGE:
			is-linux

			RETURNS:
			[0] if the system is Linux
			[1] if the system is not Linux
		EOF
		if test "$#" -ne 0; then
			echo-error "$@"
		fi
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item
	while test "$#" -ne 0; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--'*) help "An unrecognised flag was provided: $item" ;;
		*) help "An unrecognised argument was provided: $item" ;;
		esac
	done

	# =====================================
	# Action

	# this will/should pass on WSL on Windows
	if test "$(uname -s)" = 'Linux'; then
		return 0
	else
		return 1
	fi
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	if test "$*" = '--test'; then
		is_linux_test
	else
		is_linux "$@"
	fi
fi
