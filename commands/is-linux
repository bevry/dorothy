#!/usr/bin/env bash

function is_linux_test() (
	source "$DOROTHY/sources/bash.bash"

	local via_uname
	via_uname="$(uname -s)"
	if [[ $via_uname == 'Linux' ]]; then
		eval-tester --name='is linux' --status='0' -- \
			is-linux
	else
		eval-tester --name='is not linux' --status='1' -- \
			is-linux
	fi

	return 0
)
function is_linux() (
	source "$DOROTHY/sources/bash.bash"

	# =====================================
	# Arguments

	function help {
		__print_help "$@" <<-EOF || return $?
			ABOUT:
			Checks if the system is Linux

			USAGE:
			is-linux [...options]

			OPTIONS:
			--regexp=<regexp>
			    Checks \`/etc/os-release\` for the case-insensitive extended regular expression <regexp>.
			--id=<id>
			    Checks \`/etc/os-release\` for the case-insensitive ID.

			QUIRKS:
			Uses \`grep\` for regexp matching.

			RETURNS (if <regexp> or <id>):
			[0] if the pattern was found (is linux and the desired distro)
			[93] if the pattern was not found (is linux, but not the desired distro)
			[19] if the operation is not supported (not linux)

			RETURNS (no options):
			[0] if the system is Linux
			[1] if the system is not Linux
		EOF
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item option_id='' option_regexp=''
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--regexp='*) option_regexp="${item#*=}" ;;
		'--id='*) option_id="${item#*=}" ;;
		'--'*) help 'An unrecognised flag was provided: ' --variable-value={item} ;;
		*) help 'An unrecognised argument was provided: ' --variable-value={item} ;;
		esac
	done

	# checks
	if [[ -n $option_regexp && -n $option_id ]]; then
		help --help='<regexp> and <id> are mutually exclusive'
		return 22 # EINVAL 22 Invalid argument
	fi

	# =====================================
	# Action

	local regexp="$option_regexp"
	if [[ -n $option_id ]]; then
		# some distros have quotes for the ID (almalinux) and some don't (ubuntu)
		regexp="ID=\"?${option_id}\"?"
	fi
	if [[ -n $regexp ]]; then
		if [[ -f /etc/os-release ]]; then
			if grep --quiet --ignore-case --extended-regexp --regexp="$regexp" -- /etc/os-release 2>/dev/null; then
				return 0
			else
				return 93 # ENOATTR 93 Attribute not found
			fi
		else
			return 19 # ENODEV 19 Operation not supported by device
		fi
	fi

	__is_linux || return $?
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	if [[ $* == '--test' ]]; then
		is_linux_test
	else
		is_linux "$@"
	fi
fi
