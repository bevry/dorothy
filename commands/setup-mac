#!/usr/bin/env bash

function setup_mac_test() (
	source "$DOROTHY/sources/bash.bash"
	eval-tester --ignore-stderr --status=22 -- setup-mac --help
)

function setup_mac() (
	source "$DOROTHY/sources/bash.bash"

	# =====================================
	# Arguments

	function __help {
		__print_help "$@" <<-EOF || return $?
			ABOUT:
			Configure macOS to our expectations.

			USAGE:
			\`setup-mac <install|update>\`
		EOF
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item action=''
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') __help ;;
		'--'*) __help 'An unrecognised flag was provided: ' --variable-value={item} ;;
		*)
			if [[ -z $action ]]; then
				action="$item"
			else
				__help 'An unrecognised argument was provided: ' --variable-value={item}
			fi
			;;
		esac
	done

	# assert compatibility
	if ! __is_macos; then
		__help 'This command is only purposeful on macOS, which you are not running.' || :
		return 46 # EPFNOSUPPORT 46 Protocol family not supported
	fi

	# assert action
	if [[ -z $action ]]; then
		__help --help='An <action> must be provided.'
	fi

	# =====================================
	# Action

	# generate log title
	local action_title
	action_title="$(__get_uppercase_first_letter "$action")"
	action_title+=' macOS'

	# perform
	if [[ $action == 'clean' ]]; then
		setup-mac-brew clean
	elif [[ $action =~ ^(install|update)$ ]]; then
		# log
		__print_style --h1="$action_title" || return $?

		# reassert minimal apple dependencies
		setup-util-apple-rosetta
		setup-util-apple-cli-tools

		# essentials
		setup-mac-brew "$action"
		# ^ setup-util-devel done as part of this

		# install and upgrade mac app store apps
		if [[ $action == 'install' ]]; then
			setup-mac-appstore --install --upgrade
		else
			setup-mac-appstore --upgrade
		fi

		# log
		__print_style --g1="$action_title" || return $?
	else
		# unknown action
		__help --help='An unrecognised <action> was provided: ' --variable-value={action}
	fi
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	setup_mac "$@"
fi
