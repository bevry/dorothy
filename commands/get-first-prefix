#!/usr/bin/env bash
source "$DOROTHY/sources/strict.bash"

# prepare
needle="${1-}"
haystack="${2-}"
needle_size="${#needle}"
haystack_size="${#haystack}"
if test -z "$needle" -o "$#" -le 1; then
	stderr cat <<-EOF
		USAGE:
		get-first-prefix <needle> <haystack>

		EXAMPLES:
		get-first-prefix = a=b=c  # c
		get-first-prefix = sup    # sup
	EOF
	exit 22 # Invalid argument
fi

# check if empty
if test -z "$haystack"; then
	exit 0
fi

# cycle through the characters
for ((i = 0; i < haystack_size; i++)); do
	c="${haystack:$i:$needle_size}"
	if test "$c" = "$needle"; then
		echo "${haystack:0:$i}"
		exit 0
	fi
done

# needle not found, output whole string
echo "$haystack"
