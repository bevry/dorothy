#!/usr/bin/env bash

# for some reason, apt exists on macos at /usr/bin/apt

function is_apt() (
	source "$DOROTHY/sources/bash.bash"
	dorothy-warnings add --code='is-apt' --bold=' has been deprecated in favor of ' --code='is-system --apt'

	# =====================================
	# Arguments

	function help {
		cat <<-EOF >&2
			ABOUT:
			Checks if the system has $(__print_style --code=apt || :) available, which is the preferred package manager on Ubuntu and Debian.

			USAGE:
			is-apt
		EOF
		if [[ $# -ne 0 ]]; then
			__print_error "$@"
		fi
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--'*) help 'An unrecognised flag was provided: ' --variable-value={item} ;;
		*) help 'An unrecognised argument was provided: ' --variable-value={item} ;;
		esac
	done

	# =====================================
	# Action

	is-system --apt || return $?
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	is_apt "$@"
fi
