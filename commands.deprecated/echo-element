#!/usr/bin/env bash

function echo_element() (
	source "$DOROTHY/sources/bash.bash"
	dorothy-warnings crash --code='echo-element --open=a --close=b --openclose=c' --bold=' has been deprecated in favor of ' --code='echo-style --element=a --/element=b --element/=c'
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	echo_element "$@"
fi
