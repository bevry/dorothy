#!/usr/bin/env bash

function fs_kilobytes() (
	source "$DOROTHY/sources/bash.bash"
	dorothy-warnings add --code='fs-kilobytes' --bold=' has been deprecated in favor of ' --code='fs-size --kilobytes'

	# =====================================
	# Action

	fs-size --kilobytes "$@"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	fs_kilobytes "$@"
fi
