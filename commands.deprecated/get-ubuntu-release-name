#!/usr/bin/env bash

function get_ubuntu_release_name() (
	source "$DOROTHY/sources/bash.bash"
	dorothy-warnings add --code='get-ubuntu-release-name' --bold=' has been deprecated in favor of ' --code='get-release --code'

	# =====================================
	# Arguments

	function help {
		__print_help "$@" <<-EOF || return $?
			ABOUT:
			Get the release name of the Ubuntu system.

			USAGE:
			\`get-ubuntu-release-name\`
		EOF
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--'*) help 'An unrecognised flag was provided: ' --variable-value={item} ;;
		*) help 'An unrecognised argument was provided: ' --variable-value={item} ;;
		esac
	done

	# =====================================
	# Action

	is-system --ubuntu || return $?
	get-system --code
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	get_ubuntu_release_name "$@"
fi
