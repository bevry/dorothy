#!/usr/bin/env bash

# echo-count-lines is superior to this

function get_line_count() (
	source "$DOROTHY/sources/bash.bash"
	dorothy-warnings add --code='get-line-count' --bold=' has been deprecated in favor of ' --code='echo-count-lines'

	# =====================================
	# Arguments

	function help {
		cat <<-EOF >&2
			ABOUT:
			Get the count of input lines via STDIN.

			USAGE:
			echo-lines -- 1 2 | get-line-count
		EOF
		if [[ $# -ne 0 ]]; then
			__print_error "$@"
		fi
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--'*) help 'An unrecognised flag was provided: ' --variable-value={item} ;;
		*) help 'An unrecognised argument was provided: ' --variable-value={item} ;;
		esac
	done

	# =====================================
	# Action

	grep --count --extended-regexp --regexp='^'
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	get_line_count "$@"
fi
