#!/usr/bin/env bash

function fs_absolute() (
	dorothy-warnings add --code='fs-absolute' --bold=' has been deprecated in favor of ' --code='fs-path --absolute'

	# =====================================
	# Action

	fs-path --absolute "$@"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	fs_absolute "$@"
fi
