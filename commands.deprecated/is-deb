#!/usr/bin/env bash

function is_deb() (
	source "$DOROTHY/sources/bash.bash"
	dorothy-warnings add --code='is-deb' --bold=' has been deprecated in favor of ' --code='is-system --deb'

	# =====================================
	# Arguments

	function help {
		__print_help "$@" <<-EOF || return $?
			ABOUT:
			Checks if the system can process \`.deb\` files, by checking if the system has \`apt-get\` (i.e. \`apt\`) or \`dpkg\` available.

			USAGE:
			\`is-deb\`
		EOF
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--'*) help 'An unrecognised flag was provided: ' --variable-value={item} ;;
		*) help 'An unrecognised argument was provided: ' --variable-value={item} ;;
		esac
	done

	# =====================================
	# Action

	is-system --deb || return $?
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	is_deb "$@"
fi
