#!/usr/bin/env bash

function choose_menu() (
	source "$DOROTHY/sources/bash.bash"
	dorothy-warnings add --code='choose-menu' --bold=' has been deprecated in favor of ' --code='choose --index'

	# =====================================
	# Action

	choose --index "$@"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	choose_menu "$@"
fi
