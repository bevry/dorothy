#!/usr/bin/env bash

function is_snap() (
	source "$DOROTHY/sources/bash.bash"
	dorothy-warnings add --code='is-snap' --bold=' has been deprecated in favor of ' --code='is-system --snap'

	# =====================================
	# Arguments

	function __help {
		__print_help "$@" <<-EOF || return $?
			ABOUT:
			Checks if the system has $(__print_style --code=snap) available, which is the preferred package manager on Ubuntu.

			USAGE:
			is-snap
		EOF
		if [[ $# -ne 0 ]]; then
			__print_error "$@" || return $?
		fi
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') __help || return $? ;;
		'--'*) __help 'An unrecognised flag was provided: ' --variable-value={item} || return $? ;;
		*) __help 'An unrecognised argument was provided: ' --variable-value={item} || return $? ;;
		esac
	done

	# =====================================
	# Action

	is-system --snap || return $?
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	is_snap "$@"
fi
