#!/usr/bin/env bash

function fs_size() (
	source "$DOROTHY/sources/bash.bash"
	dorothy-warnings add --code='fs-size' --bold=' has been deprecated in favor of ' --code='fs-structure' --bold=' or ' --code='get-size'

	# =====================================
	# Action

	fs-structure "$@"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	fs_size "$@"
fi
