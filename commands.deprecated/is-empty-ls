#!/usr/bin/env bash

function is_empty_ls() (
	source "$DOROTHY/sources/bash.bash"
	dorothy-warnings add --code='is-empty-ls' --bold=' has been deprecated in favor of ' --code='is-empty-directory'

	# =====================================
	# Action

	is-empty-directory "$@"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	is_empty_ls "$@"
fi
