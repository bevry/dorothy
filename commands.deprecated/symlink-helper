#!/usr/bin/env bash

function symlink_helper() (
	source "$DOROTHY/sources/bash.bash"
	dorothy-warnings add --code='symlink-helper' --bold=' has been deprecated in favor of ' --code='fs-link'

	# =====================================
	# Action

	fs-link "$@"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	symlink_helper "$@"
fi
