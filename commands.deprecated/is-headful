#!/usr/bin/env bash

# ubuntu desktop on raspi
# XDG_CURRENT_DESKTOP='ubuntu:GNOME'
# DESKTOP_SESSION='ubuntu'

# ubuntu server on raspi
# both empty

function is_headful() (
	source "$DOROTHY/sources/bash.bash"
	dorothy-warnings add --code='is-headful' --bold=' has been deprecated in favor of ' --code='is-system --headful'

	# =====================================
	# Arguments

	function help {
		__print_help "$@" <<-EOF || return $?
			ABOUT:
			Checks if there is Desktop/GUI available to our current session.
			Always returns [0] success on macOS and WSL.
			Useful with \`is-ssh\`.

			USAGE:
			\`is-headful\`
		EOF
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--'*) help 'An unrecognised flag was provided: ' --variable-value={item} ;;
		*) help 'An unrecognised argument was provided: ' --variable-value={item} ;;
		esac
	done

	# =====================================
	# Action

	is-system --headful || return $?
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	is_headful "$@"
fi
