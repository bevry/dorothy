#!/usr/bin/env bash

function alias_helper() (
	source "$DOROTHY/sources/bash.bash"
	dorothy-warnings add --code='alias-helper' --bold=' has been deprecated in favor of ' --code='fs-alias'

	# =====================================
	# Action

	fs-alias "$@"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	alias_helper "$@"
fi
