#!/usr/bin/env bash

function until_success() (
	source "$DOROTHY/sources/bash.bash"
	dorothy-warnings crash --code='until-success' --bold=' has been deprecated in favor of ' --code='eval-helper --until=success'
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	until_success "$@"
fi
