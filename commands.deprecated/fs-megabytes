#!/usr/bin/env bash

function fs_megabytes() (
	source "$DOROTHY/sources/bash.bash"
	dorothy-warnings add --code='fs-megabytes' --bold=' has been deprecated in favor of ' --code='fs-size --megabytes'

	# =====================================
	# Action

	fs-size --megabytes "$@"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	fs_megabytes "$@"
fi
