#!/usr/bin/env bash

function get_min() (
	source "$DOROTHY/sources/bash.bash"
	dorothy-warnings add --code='get-min' --bold=' has been deprecated in favor of ' --code='echo-min'
	# ^ their behaviour is different, however if you want the actual behaviour of this, then you should do it manually, as there are likely hidden quirks with the `sort` approach

	# =====================================
	# Arguments

	function help {
		cat <<-EOF >&2
			ABOUT:
			Output the minimum of all the numbers.

			USAGE:
			get-min [--] ...<arg>
		EOF
		if [[ $# -ne 0 ]]; then
			__print_error "$@"
		fi
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item option_args=()
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--')
			option_args+=("$@")
			shift "$#"
			break
			;;
		'--'*) help 'An unrecognised flag was provided: ' --variable-value={item} ;;
		*) option_args+=("$item") ;;
		esac
	done

	# =====================================
	# Action

	# @todo consider using `__minimum`, and renaming to `echo-min`
	__print_lines "${option_args[@]}" | sort -n | echo-first-line
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	get_min "$@"
fi
