#!/usr/bin/env bash

function fs_parents() (
	source "$DOROTHY/sources/bash.bash"
	dorothy-warnings crash --code='fs-parents' --bold=' has been deprecated in favor of ' --code='fs-path --parents --absolute . | echo-split --delimiter=/ --stdin --no-zero-length' --bold=' or if checking ' --code='[[ $(pwd) == "$path"* ]]'
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	fs_parents "$@"
fi
