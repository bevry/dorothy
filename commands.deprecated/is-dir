#!/usr/bin/env bash

function is_dir() (
	source "$DOROTHY/sources/bash.bash"
	dorothy-warnings add --code='is-dir' --bold=' has been deprecated in favor of ' --code='is-directory'

	# =====================================
	# Action

	local dir="$1"
	[[ -d $dir ]]
	return
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	is_dir "$@"
fi
