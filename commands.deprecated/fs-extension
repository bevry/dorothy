#!/usr/bin/env bash

function fs_extension() (
	source "$DOROTHY/sources/bash.bash"
	dorothy-warnings crash --code='fs-extension' --bold=' has been deprecated in favor of ' --code='fs-path --extension'
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	if [[ $* == '--test' ]]; then
		fs_extension_test
	else
		fs_extension "$@"
	fi
fi
