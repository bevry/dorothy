#!/usr/bin/env bash

function get_array() (
	source "$DOROTHY/sources/bash.bash"
	dorothy-warnings add --code='get-array' --bold=' has been deprecated in favor of ' --code='__array'

	# =====================================
	# Arguments

	function help {
		cat <<-EOF >&2
			ABOUT:
			Output the amount of elements of the specified size.

			USAGE:
			get-array [...options]

			OPTIONS:
			<size> | --size=<size>
			    How many items to output.
		EOF
		if [[ $# -ne 0 ]]; then
			__print_error "$@"
		fi
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item option_size=''
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--size='*) option_size="${item#*=}" ;;
		'--'*) help "An unrecognised flag was provided: $item" ;;
		*)
			if [[ -z $option_size ]]; then
				option_size="$item"
			else
				help "An unrecognised argument was provided: $item"
			fi
			;;
		esac
	done

	# check
	if [[ -z $option_size ]]; then
		help '<size> is required'
	fi
	if ! __is_integer "$option_size"; then
		help '<size> was not an integer'
	fi

	# =====================================
	# Action

	local i lines=''
	for ((i = 0; i < option_size; i++)); do
		lines+=$'\n'
	done
	__print_string "$lines"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	get_array "$@"
fi
