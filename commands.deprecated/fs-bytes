#!/usr/bin/env bash

function fs_bytes() (
	source "$DOROTHY/sources/bash.bash"
	dorothy-warnings add --code='fs-bytes' --bold=' has been deprecated in favor of ' --code='fs-size --bytes'

	# =====================================
	# Action

	fs-size --bytes "$@"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	fs_bytes "$@"
fi
