#!/usr/bin/env bash

function echo_if_path() (
	source "$DOROTHY/sources/bash.bash"
	dorothy-warnings add --code='echo-mkdir' --bold=' has been deprecated in favor of ' --code='fs-mkdir --verbose'

	# =====================================
	# Action

	fs-mkdir --verbose "$@"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	echo_if_path "$@"
fi
