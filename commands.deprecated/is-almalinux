#!/usr/bin/env bash

function is_almalinux() (
	source "$DOROTHY/sources/bash.bash"
	dorothy-warnings add --code='is-almalinux' --bold=' has been deprecated in favor of ' --code='is-system --almalinux'
	is-system --almalinux || return $?
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	is_almalinux "$@"
fi
