#!/usr/bin/env bash

function rm_sync() (
	source "$DOROTHY/sources/bash.bash"
	dorothy-warnings add --code='rm-sync' --bold=' has been deprecated in favor of ' --code='find <path> -name .sync -delete -print'

	# =====================================
	# Arguments

	function help {
		__print_help "$@" <<-EOF || return $?
			ABOUT:
			Removes all \`.sync\` files in the provided path.

			USAGE:
			\`rm-sync [<path>]\`
		EOF
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item path=''
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--'*) help 'An unrecognised flag was provided: ' --variable-value={item} ;;
		*)
			if [[ -z $path ]]; then
				path="$item"
			else
				help 'An unrecognised argument was provided: ' --variable-value={item}
			fi
			;;
		esac
	done

	# ensure
	if [[ -z $path ]]; then
		path="$(pwd)"
	fi

	# =====================================
	# Dependencies

	__command_required -- 'find' || return $?

	# =====================================
	# Act

	find "$path" -name '.sync' -delete -print
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	rm_sync "$@"
fi
