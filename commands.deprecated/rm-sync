#!/usr/bin/env bash

function rm_sync() (
	source "$DOROTHY/sources/bash.bash"
	dorothy-warnings crash --code='rm-sync' --bold=' has been deprecated in favor of ' --code='find <path> -name .sync -delete -print'
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	rm_sync "$@"
fi
