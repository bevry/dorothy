#!/usr/bin/env bash

function is_exec() (
	source "$DOROTHY/sources/bash.bash"
	dorothy-warnings add --code='is-exec' --bold=' has been deprecated in favor of ' --code='is-executable'

	# =====================================
	# Action

	is-executable "$@"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	is_exec "$@"
fi
