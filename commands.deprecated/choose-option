#!/usr/bin/env bash

function choose_option() (
	source "$DOROTHY/sources/bash.bash"
	dorothy-warnings add --code='choose-option ...' --bold=' has been deprecated in favor of ' --code='choose ...'

	choose "$@"
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	choose_option "$@"
fi
