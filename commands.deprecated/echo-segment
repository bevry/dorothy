#!/usr/bin/env bash

function echo_segment() (
	source "$DOROTHY/sources/bash.bash"
	dorothy-warnings add --code='echo-segment' --bold=' has been deprecated in favor of ' --code='echo-style'

	# =====================================
	# Action

	__print_style "$@"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	echo_segment "$@"
fi
