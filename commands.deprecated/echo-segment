#!/usr/bin/env bash

function echo_segment() (
	source "$DOROTHY/sources/bash.bash"
	dorothy-warnings add --code='echo-segment' --bold=' has been deprecated in favor of ' --code='echo-style'

	# =====================================
	# Arguments

	function help {
		cat <<-EOF >/dev/stderr
			ABOUT:
			[echo-style] now supports _open and _close segments natively, as such there is no need for [echo-segment] anymore

			USAGE:
			echo-segment [--] ...<input>
		EOF
		return 22 # EINVAL 22 Invalid argument
	}

	# =====================================
	# Action

	echo-style "$@"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	echo_segment "$@"
fi
