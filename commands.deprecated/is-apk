#!/usr/bin/env bash

function is_apk() (
	source "$DOROTHY/sources/bash.bash"
	dorothy-warnings add --code='is-apk' --bold=' has been deprecated in favor of ' --code='is-system --apk'

	# =====================================
	# Arguments

	function help {
		__print_help "$@" <<-EOF || return $?
			ABOUT:
			Checks if the system has \`apk\` (Alpine Package Keeper) available, which is the preferred package manager on Alpine Linux.

			USAGE:
			\`is-apk\`
		EOF
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--'*) help 'An unrecognised flag was provided: ' --variable-value={item} ;;
		*) help 'An unrecognised argument was provided: ' --variable-value={item} ;;
		esac
	done

	# =====================================
	# Action

	is-system --apk || return $?
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	is_apk "$@"
fi
