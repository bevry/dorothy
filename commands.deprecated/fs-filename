#!/usr/bin/env bash

function fs_filename() (
	source "$DOROTHY/sources/bash.bash"
	dorothy-warnings crash --code='fs-filename' --bold=' has been deprecated in favor of ' --code='fs-path --no-parents --no-extensions'
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	if [[ $* == '--test' ]]; then
		fs_filename_test
	else
		fs_filename "$@"
	fi
fi
