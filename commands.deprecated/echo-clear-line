#!/usr/bin/env bash

function echo_clear_line() (
	source "$DOROTHY/sources/bash.bash"
	dorothy-warnings crash --code='echo-clear-line' --bold=' has been deprecated in favor of ' --code='echo-clear-lines' --bold=' or ' --code='echo-style --no-trail --delete-line'
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	echo_clear_line "$@"
fi
