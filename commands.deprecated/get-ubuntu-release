#!/usr/bin/env bash

function get_ubuntu_release() (
	source "$DOROTHY/sources/bash.bash"
	dorothy-warnings add --code='get-ubuntu-release' --bold=' has been deprecated in favor of ' --code='get-release'

	# =====================================
	# Arguments

	function help {
		cat <<-EOF >&2
			ABOUT:
			Get the release details of the Ubuntu system.

			USAGE:
			get-ubuntu-release
		EOF
		if [[ $# -ne 0 ]]; then
			__print_error "$@"
		fi
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--'*) help 'An unrecognised flag was provided: ' --variable-value={item} ;;
		*) help 'An unrecognised argument was provided: ' --variable-value={item} ;;
		esac
	done

	# =====================================
	# Action

	is-system --ubuntu || return $?
	get-release
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	get_ubuntu_release "$@"
fi
