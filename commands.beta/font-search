#!/usr/bin/env bash

function font_search_test() (
	source "$DOROTHY/sources/bash.bash"
	eval-tester --ignore-stderr --status=22 -- font-search --help
)

function font_search() (
	source "$DOROTHY/sources/bash.bash"

	# =====================================
	# Arguments

	function help {
		__print_help "$@" <<-EOF || return $?
			ABOUT:
			Searches for fonts that match the query.

			USAGE:
			\`font-search <query>\`
		EOF
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item query=''
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--'*) help 'An unrecognised flag was provided: ' --variable-value={item} ;;
		*)
			if [[ -z $query ]]; then
				query="$item"
			else
				help 'An unrecognised argument was provided: ' --variable-value={item}
			fi
			;;
		esac
	done

	# check
	if [[ -z $query ]]; then
		help --help='A <query> must be provided.'
	fi

	# =====================================
	# Act

	brew search --cask /font-/ | grep --extended-regexp --regexp="$query"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	if [[ $* == '--test' ]]; then
		font_search_test
	else
		font_search "$@"
	fi
fi
