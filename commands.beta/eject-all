#!/usr/bin/env bash

function eject_all_test() (
	source "$DOROTHY/sources/bash.bash"
	eval-tester --ignore-stderr --status=22 -- eject-all --help
)

function eject_all() (
	source "$DOROTHY/sources/bash.bash"

	# =====================================
	# Arguments

	function __help {
		__print_help "$@" <<-EOF || return $?
			ABOUT:
			Eject all the ejectable drives attached to the system.

			USAGE:
			\`eject-all\`
		EOF
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') __help || return $? ;;
		'--'*) __help 'An unrecognised flag was provided: ' --variable-value={item} || return $? ;;
		*) __help 'An unrecognised argument was provided: ' --variable-value={item} || return $? ;;
		esac
	done

	# =====================================
	# Action

	__print_style --h1='eject-all' || return $?

	__print_style --h2='before' || return $?
	fs-structure -- /Volumes || return $?
	__print_style --g2='before' || return $?

	eval-helper --quiet --no-wrap \
		--pending="$(__print_style --bold='Ejecting...')" \
		--success="$(__print_style --success='Ejected.')" \
		--failure="$(__print_style --error='Failed to eject.')" -- \
		osascript -e 'tell application "Finder" to eject (every disk whose ejectable is true)' || return $?

	__print_style --h2='after' || return $?
	fs-structure -- /Volumes || return $?
	__print_style --g2='after' || return $?

	__print_style --h1='eject-all' || return $?
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	if [[ $* == '--test' ]]; then
		eject_all_test
	else
		eject_all "$@"
	fi
fi
