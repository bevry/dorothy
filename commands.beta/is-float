#!/usr/bin/env bash

function is_float() (
	source "$DOROTHY/sources/bash.bash"

	# https://stackoverflow.com/a/29234612/130638
	[[ $1 == ?(-)@(+([0-9]).*([0-9])|*([0-9]).+([0-9]))?(E?(-|+)+([0-9])) ]] || return $?
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	is_float "$@"
fi
