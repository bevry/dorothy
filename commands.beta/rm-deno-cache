#!/usr/bin/env bash

# @todo move into setup-util-deno

function rm_deno_cache_test() (
	source "$DOROTHY/sources/bash.bash"
	eval-tester --ignore-stderr --status=22 -- rm-deno-cache --help
)

function rm_deno_cache() (
	source "$DOROTHY/sources/bash.bash"

	# =====================================
	# Arguments

	function help {
		__print_help "$@" <<-EOF || return $?
			ABOUT:
			Removes everything inside the Deno cache.

			USAGE:
			\`rm-deno-cache\`
		EOF
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--'*) help 'An unrecognised flag was provided: ' --variable-value={item} ;;
		*) help 'An unrecognised argument was provided: ' --variable-value={item} ;;
		esac
	done

	# =====================================
	# Action

	# ensure DENO_DIR exists
	if [[ -z ${DENO_DIR-} ]]; then
		DENO_DIR="$HOME/Library/Caches/deno"
	fi

	# remove files knowing DENO_DIR now exists
	fs-remove --quiet --no-confirm -- "$DENO_DIR/deps" "$DENO_DIR/gen"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	if [[ $* == '--test' ]]; then
		rm_deno_cache_test
	else
		rm_deno_cache "$@"
	fi
fi
