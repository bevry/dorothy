#!/usr/bin/env bash

function echo_nothing_or_fail_test() (
	source "$DOROTHY/sources/bash.bash"
	eval-tester --ignore-stderr --status=22 -- echo-nothing-or-fail --help

	eval-tester --status=1 -- \
		echo-nothing-or-fail ''
	eval-tester --status=1 -- \
		echo-nothing-or-fail -- ''
	eval-tester --status=1 -- \
		echo-nothing-or-fail -- 'sup'
	printf '%s\n' 'sup' | eval-tester --status=1 -- \
		echo-nothing-or-fail --stdin

	eval-tester -- \
		echo-nothing-or-fail --
	true | eval-tester -- \
		echo-nothing-or-fail --stdin

	return 0
)

function echo_nothing_or_fail() (
	source "$DOROTHY/sources/stdinargs.bash"

	# =====================================
	# Arguments

	function help {
		__print_help "$@" <<-EOF || return $?
			ABOUT:
			If input is provided, fail.
			If no input was provided, success.

			USAGE:
			\`echo-nothing-or-fail [...options] [--] ...<input>\`
			\`echo-lines ...<input> | echo-nothing-or-fail [...options]\`

			OPTIONS:
			$(__stdinargs__help_options --)

			EXAMPLES:
			\`\`\`
			echo-nothing-or-fail ''
			echo-nothing-or-fail -- ''
			echo-nothing-or-fail -- 'sup'
			printf '%s\n' 'sup' | echo-nothing-or-fail --stdin
			\`\`\`
			Returns: [1]

			\`\`\`
			echo-nothing-or-fail --
			true | echo-nothing-or-fail --stdin
			\`\`\`
			Returns: [0]
		EOF
		return 22 # EINVAL 22 Invalid argument
	}

	# =====================================
	# Action

	function __on_piece {
		return 1 # failure
	}

	function __on_nothing {
		return 0 # success
	}

	stdinargs "$@"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	if [[ $* == '--test' ]]; then
		echo_nothing_or_fail_test
	else
		echo_nothing_or_fail "$@"
	fi
fi
