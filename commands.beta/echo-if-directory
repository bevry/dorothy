#!/usr/bin/env bash

function echo_if_directory_test() (
	source "$DOROTHY/sources/bash.bash"

	eval-tester --name='no args' -- \
		echo-if-directory --

	eval-tester --name='empty args' -- \
		echo-if-directory -- '' ''

	eval-tester --name='missing' -- \
		echo-if-directory -- "$DOROTHY/this-does-not-exist"

	eval-tester --name='directory' --stdout="$DOROTHY" -- \
		echo-if-directory -- "$DOROTHY"

	eval-tester --name='file' -- \
		echo-if-directory -- "$DOROTHY/README.md"

	eval-tester --name='file then missing then dir' --stdout="$DOROTHY" -- \
		echo-if-directory -- "$DOROTHY/README.md" "$DOROTHY/this-does-not-exist" "$DOROTHY"

	eval-tester --name='dir then missing then file' --stdout="$DOROTHY" -- \
		echo-if-directory -- "$DOROTHY" "$DOROTHY/this-does-not-exist" "$DOROTHY/README.md"

	# test working symlinks
	local root dir_target dir_symlink file_target file_symlink
	root="$(fs-temp --directory='dorothy' --directory='echo-if-directory' --directory='tests')"
	dir_target="$(fs-temp --root="$root" --directory='dir_target' --touch)"
	file_target="$(fs-temp --root="$root" --file='file_target' --touch)"
	dir_symlink="$(fs-temp --root="$root" --directory='dir_symlink' --no-touch)"
	file_symlink="$(fs-temp --root="$root" --file='file_symlink' --no-touch)"
	fs-link --quiet \
		--existing="$dir_target" --symlink="$dir_symlink" \
		--existing="$file_target" --symlink="$file_symlink"

	eval-tester --name='symlink dir' --stdout="$dir_symlink" -- \
		echo-if-directory -- "$dir_symlink"

	eval-tester --name='symlink file' -- \
		echo-if-directory -- "$file_symlink"

	# test broken symlinks
	fs-remove --quiet --no-confirm -- "$dir_target" "$file_target"

	eval-tester --name='broken symlink dir' -- \
		echo-if-directory -- "$dir_symlink"

	eval-tester --name='broken symlink file' -- \
		echo-if-directory -- "$file_symlink"

	return 0
)
function echo_if_directory() (
	source "$DOROTHY/sources/stdinargs.bash"

	# trunk-ignore(shellcheck/SC2120)
	function help {
		__print_help "$@" <<-EOF || return $?
			ABOUT:
			Output <input>s that are a directory, or an unbroken symlink to a directory.
			Companion to \`is-directory\`.

			USAGE:
			\`echo-if-directory [...options] [--] ...<input>\`
			\`echo-lines ...<input> | echo-if-directory [...options]\`

			OPTIONS:
			--elevated=<elevated>
			--elevate=<elevate>
			--user=<user>
			--group=<group>
			--reason=<reason>
			    Forwarded to \`eval-helper\`

			$(__stdinargs__help_options --)

			EXAMPLES:

			\`echo-if-directory -- "$HOME"

			    $HOME
			    # exit status: 0

			echo-lines -- "$HOME" | echo-if-directory --stdin

			    $HOME
			    # exit status: 0\`
		EOF
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item option_args=() option_elevated='' option_elevate='' option_user='' option_group='' option_reason=''
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		# trunk-ignore(shellcheck/SC2119)
		'--help' | '-h') help ;;
		# <elevate>
		'--elevated='*) option_elevated="${item#*=}" ;;
		'--no-elevate'* | '--elevate'*) __flag --source={item} --target={option_elevate} --affirmative --no-coerce ;;
		'--user='*) option_user="${item#*=}" ;;
		'--group='*) option_group="${item#*=}" ;;
		'--reason='*) option_reason="${item#*=}" ;;
		# </elevate>
		# forward to stdinargs, however support mixing and matching of our options, with stdinargs options
		'--')
			option_args+=("$item" "$@")
			shift $#
			break
			;;
		*) option_args+=("$item") ;;
		esac
	done

	# =====================================
	# Action

	function __on_piece {
		local path="$1"
		if is-directory --elevated="$option_elevated" --elevate="$option_elevate" --user="$option_user" --group="$option_group" --reason="$option_reason" -- "$path"; then
			__print_lines "$path"
		fi
	}

	stdinargs "${option_args[@]}"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	if [[ $* == '--test' ]]; then
		echo_if_directory_test
	else
		echo_if_directory "$@"
	fi
fi
