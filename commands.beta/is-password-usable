#!/usr/bin/env bash

# fresh macos without brew has no ping

function is_password_usable_test() (
	source "$DOROTHY/sources/bash.bash"
	eval-tester --ignore-stderr --status=22 -- is-password-usable --help
)

function is_password_usable() (
	source "$DOROTHY/sources/bash.bash"

	# =====================================
	# Arguments

	function __help {
		__print_help "$@" <<-EOF || return $?
			ABOUT:
			Test if the <user> has a usable password, that is to say with configuration of \`set P\` and not \`locked L\`.
			Companion set: $(__join --style=code --between=', ' -- 'get-profile' 'get-group-id' 'get-user-id' 'is-admin' 'is-group' 'is-owner' 'is-password-usable' 'is-root' 'is-user-in-group' 'is-user').

			USAGE:
			\`is-password-usable [...options] [--] ...<user>\`

			OPTIONS:
			--user=<user> | --users=<users> | ...<user>
			    Users to check if their passwords are usable.
			--login
			    If enabled, the login user will be used as the <user>, if none were provided.
			    Otherwise, the current user will be used as the <user>, if none were provided.

			QUIRKS:
			Note that \`usermod -L [<user>]\` which is used to make the user only a share-user (not login), will cause the password status to become \`locked L\`, and thus return failure.

			RETURNS:
			[0] if all <user>s had usable passwords.
			[1] if any <user>s did not have a usable password.
		EOF
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item option_users=() option_login=''
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') __help ;;
		'--no-login'* | '--login'*) __flag --source={item} --target={option_login} --affirmative ;;
		'--user='* | '--users='*) __split --target={option_users} --append --delimiters=$'\n\t ,|' --no-zero-length -- "${item#*=}" ;;
		'--')
			option_users+=("$@")
			shift $#
			break
			;;
		'--'*) __help 'An unrecognised flag was provided: ' --variable-value={item} ;;
		*) option_users+=("$item") ;;
		esac
	done

	# assert compatibility
	if ! __is_linux; then
		__help 'This command is only purposeful on Linux, which you are not running.' || :
		return 46 # EPFNOSUPPORT 46 Protocol family not supported
	fi

	# verify
	if [[ ${#option_users[@]} -eq 0 ]]; then
		if [[ $option_login == 'yes' ]]; then
			__prepare_login_user
			option_users+=("$LOGIN_USER")
		else
			__prepare_current_user # could prompt
			option_users+=("$CURRENT_USER")
		fi
	fi

	# =====================================
	# Action

	local user
	for user in "${option_users[@]}"; do
		eval-helper --elevate -- passwd --status "$user" | grep --quiet --fixed-strings --regexp="$user P"
	done
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	if [[ $* == '--test' ]]; then
		is_password_usable_test
	else
		is_password_usable "$@"
	fi
fi
