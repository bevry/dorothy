#!/usr/bin/env bash

# fresh macos without brew has no ping
function is_password_usable() (
	source "$DOROTHY/sources/bash.bash"

	# =====================================
	# Arguments

	function help {
		cat <<-EOF >/dev/stderr
			ABOUT:
			Test if the <user> has a usable password (set P and not locked L).

			USAGE:
			is-password-usable [user]
			# returns 0 if usage passable, 1 if not

			OPTIONS:
			[user]
			    The <user> to test if the password is usable.
			    Defaults to the current user.

			QUIRKS:
			Note that $(echo-style --code='usermod -L [user]') which is used to make the user only a share-user (not login), will cause the passsword status to become locked L, and thus return failure.
		EOF
		if test "$#" -ne 0; then
			echo-error "$@"
		fi
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item option_user=''
	while test "$#" -ne 0; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--'*) help "An unrecognised flag was provided: $item" ;;
		*)
			if test -z "$option_user"; then
				option_user="$item"
			else
				help "An unrecognised argument was provided: $item"
			fi
			;;
		esac
	done

	# ensure url
	if test -z "$option_user"; then
		option_user="$(whoami)"
	fi

	# =====================================
	# Act

	sudo-helper -- passwd --status "$option_user" | grep --quiet --fixed-strings --regexp="$option_user P"
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	is_password_usable "$@"
fi
