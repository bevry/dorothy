#!/usr/bin/env bash

function tmutil_helper_test() (
	source "$DOROTHY/sources/bash.bash"
	eval-tester --ignore-stderr --status=22 -- tmutil-helper --help
)

function tmutil_helper() (
	source "$DOROTHY/sources/bash.bash"

	# =====================================
	# Arguments

	function __help {
		__print_help "$@" <<-EOF || return $?
			ABOUT:
			Helpers for dealing with macOS Time Machine.

			USAGE:
			\`tmutil-helper <action>\`

			ACTIONS:
			& evict
			    Evict the macOS Time Machine cache.
			    This is desirable when:
			    * system has run out of storage
			    * iCloud syncs are failing
		EOF
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item action=''
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') __help ;;
		'--'*) __help 'An unrecognised flag was provided: ' --variable-value={item} ;;
		*)
			if [[ -z $action ]]; then
				action="$item"
			else
				__help 'An unrecognised argument was provided: ' --variable-value={item}
			fi
			;;
		esac
	done

	# assert compatibility
	if ! __is_macos; then
		__help 'This command is only purposeful on macOS, which you are not running.' || :
		return 46 # EPFNOSUPPORT 46 Protocol family not supported
	fi

	# =====================================
	# Actions

	function evict {
		local snapshot
		while read -r snapshot; do
			eval-helper --elevate -- tmutil deletelocalsnapshots "$snapshot"
		done < <(tmutil listlocalsnapshotdates | grep --fixed-strings --regexp='-')
	}

	# =====================================
	# Act

	case "$action" in
	'evict') "$action" ;; # eval
	*) __help --help='An unrecognised <action> was provided: ' --variable-value={action} ;;
	esac

)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	tmutil_helper "$@"
fi
