#!/usr/bin/env bash

function echo_sort() (
	source "$DOROTHY/sources/stdinargs.bash"

	function help {
		cat <<-EOF >/dev/stderr
			ABOUT:
			Sort the inputs using [sort]

			USAGE:
			echo-sort [...options] [--] ...<input>
			echo-lines ...<input> | echo-sort [...options]

			OPTIONS:
			$(stdinargs_options_help --)

			EXAMPLES:
			echo-sort -- 3 2 1

				1
				2
				3

			echo-lines -- 3 2 1 | echo-sort --stdin

				1
				2
				3

			ALTERATIVES:
			# use [sort] directly for more advanced usage
			echo-lines -- 3 2 1 | sort

				1
				2
				3

			# such as sorting version numbers
			echo-lines -- 1.0 1.2 1.1 | sort -V

				1.0
				1.1
				1.2
		EOF
		if test "$#" -ne 0; then
			echo-error "$@"
		fi
		return 22 # EINVAL 22 Invalid argument
	}

	# pool arguments
	local inputs=()
	function on_input {
		inputs+=("$@")
	}
	# and sort once we have all of them
	function on_finish {
		echo-lines -- "${inputs[@]}" | sort
	}

	stdinargs "$@"
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	echo_sort "$@"
fi
