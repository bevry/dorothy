#!/usr/bin/env bash

function echo_sort_test() (
	source "$DOROTHY/sources/bash.bash"
	eval-tester --ignore-stderr --status=22 -- echo-sort --help
)

function echo_sort() (
	source "$DOROTHY/sources/stdinargs.bash"

	function help {
		__print_help "$@" <<-EOF || return $?
			ABOUT:
			Sort the inputs by line using \`sort\`.

			USAGE:
			\`echo-sort [...options] [--] ...<input>\`
			\`echo-lines ...<input> | echo-sort [...options]\`

			OPTIONS:
			$(__stdinargs__help_options --)

			EXAMPLES:
			\`\`\`echo-sort -- 3 2 1\`\`\`
			Outputs:
			\`\`\`
			1
			2
			3
			\`\`\`
			Returns: [0]

			\`\`\`echo-lines -- 3 2 1 | echo-sort --stdin
			\`\`\`
			Outputs:
			\`\`\`
			1
			2
			3
			\`\`\`
			Returns: [0]

			ALTERNATIVES:
			Use \`sort\` directly for more advanced usage:
			\`\`\`echo-lines -- 3 2 1 | sort\`\`\`
			Outputs:
			\`\`\`
			1
			2
			3
			\`\`\`
			Returns: [0]

			Such as for sorting version numbers:
			\`\`\`echo-lines -- 1.0 1.2 1.1 | sort -V\`\`\`
			Outputs:
			\`\`\`
			1.0
			1.1
			1.2
			\`\`\`
			Returns: [0]
		EOF
		return 22 # EINVAL 22 Invalid argument
	}

	# pool arguments
	local inputs=()
	function __on_piece {
		inputs+=("$@")
	}
	# and sort once we have all of them
	function __on_finish {
		__print_lines "${inputs[@]}" | sort || return $?
	}

	stdinargs "$@"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	if [[ $* == '--test' ]]; then
		echo_sort_test
	else
		echo_sort "$@"
	fi
fi
