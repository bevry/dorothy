#!/usr/bin/env bash

function find_directories() (
	source "$DOROTHY/sources/bash.bash"

	# =====================================
	# Arguments

	function help {
		cat <<-EOF >&2
			ABOUT:
			Find directories within a <path>, including the provided directory.

			USAGE:
			find-directories [...options] [--] <path>

			OPTIONS:
			--path=<path> | <path>
			    Provide <path> to specify which directory should be searched for files.
			    If <path> was not provided then the current working directory will be used.
		EOF
		if [[ $# -ne 0 ]]; then
			__print_error "$@"
		fi
		return 22 # EINVAL 22 Invalid argument
	}

	# options
	local item option_paths=()
	while [[ $# -ne 0 ]]; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--path='*) option_paths+=("${item#*=}") ;;
		'--')
			option_paths+=("$@")
			shift $#
			break
			;;
		'--'*) help "An unrecognised flag was provided: $item" ;;
		*) option_paths+=("$item") ;;
		esac
	done

	# adjust path
	if [[ ${#option_paths[@]} -eq 0 ]]; then
		option_paths+=("$(pwd)")
	fi

	# =====================================
	# Dependencies

	setup-util-find --quiet || return

	# =====================================
	# Action

	local path
	for path in "${option_paths[@]}"; do
		find "$path" -type d
	done
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	find_directories "$@"
fi
