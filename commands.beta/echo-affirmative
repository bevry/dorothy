#!/usr/bin/env bash

# turns affirmative arguments into yes
# turns non-affirmative arguments into no

function echo_affirmative_test() (
	source "$DOROTHY/sources/bash.bash"
	eval-tester --ignore-stderr --status=22 -- echo-affirmative --help
)

function echo_affirmative() (
	source "$DOROTHY/sources/stdinargs.bash"

	# =====================================
	# Arguments

	function help {
		__print_help "$@" <<-EOF || return $?
			ABOUT:
			For each <input>, output \`yes\` if affirmative, \`no\` if non-affirmative, otherwise note the invalidity to STDERR.

			USAGE:
			\`echo-affirmative [...options] [--] ...<input>\`
			\`echo-lines ...<input> | echo-affirmative [...options]\`

			OPTIONS:
			$(__stdinargs__help_options --)

			EXAMPLES:
			\`\`\`
			echo-affirmative -- yes no true false
			\`\`\`
			Outputs:
			\`\`\`
			yes
			no
			yes
			no
			\`\`\`
			Returns: [0]

			\`\`\`
			echo-affirmative -- yes no true false apple orange
			\`\`\`
			Outputs:
			\`\`\`
			yes
			no
			yes
			no
			apple is neither affirmative or non-affirmative
			orange is neither affirmative or non-affirmative
			\`\`\`
			Returns: [91]
		EOF
		return 22 # EINVAL 22 Invalid argument
	}

	# =====================================
	# Action

	local had_invalid_input=no
	function __on_piece {
		local value="$1"
		local -i __affirmative_status=0
		__is_affirmative -- "$value" || __affirmative_status=$?
		if [[ $__affirmative_status -eq 0 ]]; then
			__print_lines 'yes' || return $?
		elif [[ $__affirmative_status -eq 1 ]]; then
			__print_lines 'no' || return $?
		else
			__print_style --stderr --variable-value={value} --error=' is neither affirmative or non-affirmative' || return $?
			had_invalid_input=yes
		fi
	}
	function __on_finish {
		if [[ $had_invalid_input == yes ]]; then
			return 91 # ENOMSG 91 No message of desired type
		fi
	}

	stdinargs "$@"
)

# fire if invoked standalone
if [[ $0 == "${BASH_SOURCE[0]}" ]]; then
	if [[ $* == '--test' ]]; then
		echo_affirmative_test
	else
		echo_affirmative "$@"
	fi
fi
