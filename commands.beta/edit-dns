#!/usr/bin/env bash
# we can assume [HOMEBREW_PREFIX] have already been provided

function edit_dns() (
	source "$DOROTHY/sources/bash.bash"

	# =====================================
	# Arguments

	function help {
		cat <<-EOF >/dev/stderr
			ABOUT:
			If possible, edit the DNS configuration of the DNS service.
			You probably want [setup-dns] instead.

			USAGE:
			edit-dns
		EOF
		if test "$#" -ne 0; then
			echo-error "$@"
		fi
		return 22 # EINVAL 22 Invalid argument
	}

	# process
	local item
	while test "$#" -ne 0; do
		item="$1"
		shift
		case "$item" in
		'--help' | '-h') help ;;
		'--'*) help "An unrecognised flag was provided: $item" ;;
		*) help "An unrecognised argument was provided: $item" ;;
		esac
	done

	# =====================================
	# Action

	# this would work, but it is automatically generated from system preferences
	# edit /etc/resolv.conf

	if get-app --quiet 'ProtonVPN.app'; then
		print_line 'ProtonVPN enforces its own DNS'
	elif command-exists dnscrypt-proxy; then
		print_line 'Editing DNS configuration of dnscrypt-proxy'
		edit -- "${HOMEBREW_PREFIX:-"/usr/local"}/etc/dnscrypt-proxy.toml"
	else
		print_line 'DNS editing only supported for dnscrypt-proxy'
	fi
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	edit_dns "$@"
fi
