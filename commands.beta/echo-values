#!/usr/bin/env bash

function echo_values() (
	source "$DOROTHY/sources/stdinargs.bash"

	function help {
		cat <<-EOF >/dev/stderr
			ABOUT:
			Output each input, that is a value, onto its own line.
			Uses [is-value] for the internal check.

			USAGE:
			echo-values [...options] [--] ...<input>
			echo-lines ...<input> | echo-values [...options]

			OPTIONS:
			$(stdinargs_options_help --)

			EXAMPLE:

			# input
			echo-lines -- '' 0 a NULL VOID UNDEFINED false z | echo-verbose --stdin

			    [0] = []
			    [1] = [0]
			    [2] = [a]
			    [3] = [NULL]
			    [4] = [VOID]
			    [5] = [UNDEFINED]
			    [6] = [false]
			    [7] = [z]

			# trimming using echo-values
			echo-lines -- '' 0 a NULL VOID UNDEFINED false z | echo-values --stdin | echo-verbose --stdin

			    [0] = [0]
			    [1] = [a]
			    [2] = [false]
			    [3] = [z]

		EOF
		if test "$#" -ne 0; then
			echo-error "$@"
		fi
		return 22 # EINVAL 22 Invalid argument
	}

	function on_input {
		if is-value -- "$1"; then
			print_line "$1"
		fi
	}

	stdinargs "$@"
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	echo_values "$@"
fi
